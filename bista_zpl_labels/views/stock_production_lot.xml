<odoo>
    <data>

        <record id="view_production_lot_form_print_button" model="ir.ui.view">
            <field name="name">view_production_lot_form_print_button</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button type="object" name="print_label" string="Print Label"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="view_production_lot_tree" model="ir.ui.view">
            <field name="name">view_production_lot_tree</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <header>
                        <button type="object" name="print_label" string="Print Label"/>
                    </header>
                </xpath>
            </field>
        </record>


    </data>
</odoo>