<odoo>

    <record id="print_wizard_form_view" model="ir.ui.view">
        <field name="name">print_wizard_form_view</field>
        <field name="model">print.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group name="select_label_group" string="Select Label">
                            <field name="model" invisible="1"/>
                            <field name="name" string="label" required="1" placeholder="Select Label"
                                   domain="[('model','=',model)]"
                                   widget="radio"/>
                            <field name="product_label"
                                   domain="[('model','=','product.template')]"
                                   attrs="{'required': [('model','in',['stock.quant'])], 'invisible': [('model','not in',['stock.quant'])]}"
                            />
                            <field name="lot_label"
                                   domain="[('model','=','stock.lot')]"
                                   attrs="{'invisible': [('model','not in',['stock.quant'])]}"/>
                            <field name="copies"
                                   attrs="{'invisible': [('model','in',['stock.picking','stock.quant'])]}"/>
                            <field name="label_count" invisible="1"/>
                        </group>
                        <group invisible="1">
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="lot_ids" widget="many2many_tags"/>
                            <field name="location_ids" widget="many2many_tags"/>
                            <field name="picking_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Print Copies"
                              attrs="{'invisible': [('model','not in',['stock.picking', 'stock.quant'])]}">
                            <field name="print_count_ids">
                                <tree editable="bottom">
                                    <field name="product_id" readonly="1"
                                           attrs="{'column_invisible': [('parent.model','not in', ['stock.picking', 'stock.quant'])]}"/>
                                    <field name="lot_id" readonly="1"
                                           attrs="{'column_invisible': [('parent.model','not in', ['stock.picking', 'stock.quant'])]}"/>
                                    <field name="quantity" string="Copies"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Print" type="object" name="get_print" class="oe_highlight"/>
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="print_wizard_action" model="ir.actions.act_window">
        <field name="name">Print Label</field>
        <field name="res_model">print.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>