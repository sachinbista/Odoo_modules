    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.form.agent</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_created_caba_entries']" position="after">
                <button name="action_view_settlement"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': [('settlement_count', '=', 0)]}">
                    <field name="settlement_count"
                           widget="statinfo"
                           string="Settlements"/>
                </button>
            </xpath>
            <xpath expr="//page[@name='aml_tab']" position="after">
                <page string="Commission Agents" name="Agents" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}">
                    <field name="agent_ids" readonly="1" force_save="1">
                        <tree>
                            <field name="agent_id"/>
                            <field name="commission_id"/>
                            <field name="amount"/>
                            <field name="rate"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="agent_id"/>
                                        <field name="commission_id"/>
                                    </group>
                                    <group>
                                        <field name="amount"/>
                                        <field name="rate"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@id='other_tab']" position="inside">
                <group id="goflow_details" string="GoFlow Details">
                    <field name="goflow_store_id" readonly="1"/>
                </group>
            </xpath>
            <field name="tax_totals" position="after">
                <field name="discount_total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [
                        ('move_type', 'not in', ['out_invoice', 'out_refund'])
                    ]}"/>

                <field name="commission_total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [
                        ('move_type', 'not in', ['out_invoice', 'out_refund'])
                    ]}"/>

                <!-- Commented this code to move it to another module. -->
                <!--                <field name="amazon_commission"-->
                <!--                       widget="monetary"-->
                <!--                       options="{'currency_field': 'currency_id'}"-->
                <!--                       attrs="{'invisible': [-->
                <!--                        ('move_type', 'not in', ['out_invoice', 'out_refund'])-->
                <!--                    ]}"/>-->

<!--                <field name="freight_charges"-->
<!--                       widget="monetary"-->
<!--                       options="{'currency_field': 'currency_id'}"-->
<!--                       attrs="{'invisible': [-->
<!--                        ('move_type', 'not in', ['out_invoice', 'out_refund'])-->
<!--                    ]}"/>-->

            </field>
        </field>
    </record>
    <record id="view_in_invoice_bill_tree_inherit" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_partner_display_name" position="after">
                <button
                        name="action_view_settlement"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        string="Settlements"
                        attrs="{'invisible': [('settlement_count', '=', 0)]}"
                />
                <field name="settlement_count" invisible="1"/>
            </field>
        </field>
    </record>
    <record id="view_account_invoice_filter_agent" model="ir.ui.view">
        <field name="name">view_account_invoice_filter_agent</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_agent_ids" operator="child_of"/>
            </field>
        </field>
    </record>
