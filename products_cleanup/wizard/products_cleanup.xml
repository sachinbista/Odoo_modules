<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- IDENTIFICATION SHEET AND OTHER INFORMATION -->
        <record id="products_cleanup_form" model="ir.ui.view">
            <field name="name">Products_Cleanup</field>
            <field name="model">products.cleanup</field>
            <field name="arch" type="xml">
                <form string="Products Cleanup">
                    <group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group>
                            <field name="product_categories" widget="many2many_tags"/>
                        </group>
                        <label for="lbl_message" string="Successfully Processed" attrs="{'invisible': [('lbl_message','!=', True)]}"/>
                        <field name="lbl_message" invisible="1"/>
                    </group>
                    <footer>
                        <button name="products_cleanup" string="Done" type="object" default_focus="1" class="oe_highlight" /> or
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_products_cleanup" model="ir.actions.act_window">
            <field name="name">Products Cleanup</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">products.cleanup</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="products_cleanup_form" />
            <field name="target">new</field>
        </record>
        <menuitem id="menu_update_product_image" name="Products Cleanup"
                  parent="stock.menu_product_in_config_stock" action="action_products_cleanup" sequence="70" />
    </data>
</odoo>