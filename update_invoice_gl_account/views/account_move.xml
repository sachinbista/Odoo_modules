<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--================ account.journal.form.inherited ==============-->
    <record id="update_gl_account_move_form_view_inherited" model="ir.ui.view">
        <field name="name">account.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="%(action_update_invoice_gl_account_wiz)d" 
                		string="Update GL Account" 
                		type="action"
                		class="oe_highlight"
                        attrs="{'invisible': ['|', ('move_type', 'not in', ('out_invoice','out_refund')), ('state', '!=', 'posted')]}"
                        groups="update_invoice_gl_account.group_allow_gl_modification"/>
            </xpath>
        </field>
    </record>
    
</odoo>