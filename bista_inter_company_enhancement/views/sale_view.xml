<!--                    'no')]}-->
<!--                </attribute>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="view_order_form_with_carrier_inherit_pcl211" model="ir.ui.view">
        <field name="name">view.order.form.with_carrier_inherit_pcl211</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_delivery_wizard']" position="replace">
                <button
                        string="Add shipping"
                        name="action_open_delivery_wizard"
                        type="object"
                />
            </xpath>
        </field>
    </record>
</odoo>
