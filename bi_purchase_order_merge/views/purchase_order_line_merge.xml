<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Wizard For Purchase Order Line Merge-->
        <record id="view_purchase_order_line_merge_form" model="ir.ui.view">
            <field name="model">purchase.orderline.merge.wizard</field>
            <field name="arch" type="xml">
                <form string="Merge orders">
                    <sheet>
                        <group>
                            <p>Are you sure to merge Purchase order lines ?</p>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Merge' name="merge_orderlines" type="object" class="btn-primary"/>Or
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
