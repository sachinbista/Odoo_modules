<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="bista_consignment_view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="replace">
                <field name="consignment_stock_move" invisible="1"/>
                <field name="owner_id" groups="stock.group_tracking_owner"
                       context="{'partner_id': partner_id}"
                       attrs="{'invisible': [('picking_type_code', '!=', 'incoming')], 'readonly': [('state', 'in', ('done','cancel'))]}"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//tree/field[@name='product_packaging_id']" position="before">
                <field name="restrict_partner_id" force_save="1"
                       groups="stock.group_tracking_owner"
                       context="{'partner_id': parent.partner_id}"
                       attrs="{'readonly': [('parent.state', 'in', ('done','cancel'))],
                       'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>

</odoo>

