<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="consignment_report_view_tree" model="ir.ui.view">
        <field name="name">consignment.report.view.tree</field>
        <field name="model">consignment.report</field>
        <field name="arch" type="xml">
            <tree string="Consignment Analysis">
                <field name="date" widget="date"/>
                <field name="owner_id"/>
                <field name="name"/>
                <field name="product_tmpl_id"  optional="hide"/>
                <field name="product_id"/>
                <field name="categ_id" optional="hide"/>
                <field name="purchase_order_id"/>
                <field name="qty_to_received"/>
                <field name="order_id"/>
                <field name="qty_delivered" optional="show"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_consignment_report_search" model="ir.ui.view">
        <field name="name">consignment.report.search</field>
        <field name="model">consignment.report</field>
        <field name="arch" type="xml">
            <search string="Consignment Analysis">
                <field name="date"/>
                <filter string="Date" name="year" invisible="1" date="date" default_period="this_year"/>
                <filter string="Sales Orders" name="Sales" domain="[('order_id','!=','')]"/>
                <filter string="Purchase Orders" name="Purchase" domain="[('purchase_order_id','!=','')]"/>
                <separator/>
                <filter name="filter_date" date="date" default_period="this_month"/>
                <separator/>
                <field name="product_id"/>
                <field name="categ_id"/>
                <field name="owner_id"/>
                <group expand="0" string="Extended Filters">
                    <field name="categ_id" filter_domain="[('categ_id', 'child_of', self)]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Product" name="Product" context="{'group_by':'product_id'}"/>
                    <filter string="Product Category" name="Category" context="{'group_by':'categ_id'}"/>
                    <filter string="Company" name="company" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                    <filter string="Vendor" name="Owner" context="{'group_by':'owner_id'}"/>
                    <separator/>
                    <filter string="Order Date" name="date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_consignment_report_all" model="ir.actions.act_window">
        <field name="name">Consignment Analysis</field>
        <field name="res_model">consignment.report</field>
        <field name="view_mode">tree</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="view_consignment_report_search"/>
        <field name="context">{'group_by_no_leaf':1,'group_by':['product_id'], 'search_default_filter_date': 1}</field>
        <field name="help"></field>
    </record>
</odoo>