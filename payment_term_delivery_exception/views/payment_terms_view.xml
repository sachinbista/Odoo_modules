<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_payment_term_form_inherit" model="ir.ui.view">
        <field name="model">account.payment.term</field>
        <field name="name">account.payment.term.form</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/div[@class='o_field_highlight']"
                   position="after">
                <field name="allow_delivery_validate_without_full_payment"/>
            </xpath>
        </field>
    </record>

    <record id="account_payment_term_tree_inherit" model="ir.ui.view">
        <field name="model">account.payment.term</field>
        <field name="name">account.payment.term.tree</field>
        <field name="inherit_id" ref="account.view_payment_term_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']"
                   position="after">
                <field name="allow_delivery_validate_without_full_payment"/>
            </xpath>
        </field>
    </record>
</odoo>