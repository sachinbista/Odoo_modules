<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_move_custom_search_view_inherited_po_ref" model="ir.ui.view">
        <field name="name">account.out.invoice.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="po_reference"/>
            </field>
            <filter name="cancel" position="after">
                  <filter string="PO Reference" name="po_reference" domain="[('po_reference', '!=', False)]"/>
            </filter>
        </field>
    </record>

