<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="exception_purchase_order_same_container"
              name="Message: Alert on Purchase orders while creating Merchandise/ Container">
        <div>
            <p>
                Exception(s) occurred on the purchase order(s):
                <t t-foreach="purchase_order_id" t-as="purchase_order">
                    <a href="#" data-oe-model="purchase.order" t-att-data-oe-id="purchase_order.id">
                        <t t-esc="purchase_order.name"/>
                    </a>
                </t>
                while creating merchandise/container
            </p>
            <div class="mt16">
                <p>Exception(s):</p>
                <ul>
                    <li>
                        Product added in same container:
                        <t t-esc="container_id"/>
                    </li>
                </ul>
            </div>
        </div>
    </template>
</odoo>