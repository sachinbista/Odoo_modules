<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- inherit stock valuation layer search view -->
    <record id="view_move_search_siv_report" model="ir.ui.view">
        <field name="name">stock.valuation.layer.search.view</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='group_by_product_id']" position="after">
                <filter string="Warehouse" name="warehouse_id" context="{'group_by': 'warehouse_id'}"/>
             </xpath>
        </field>
    </record>

    <!-- Inherit Inveventory Valuation Layer view to add Location field(Fetch From The Stock Move.) -->
    <record id="stock_valuation_layer_form_inherit_add_fields" model="ir.ui.view">
        <field name="name">stock.valuation.layer.form.inherit.add.fields</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stock_move_id']" position="after">
                <field name="warehouse_id" attrs="{'invisible': [('stock_move_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>