<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Landed Cost view to add Avg. Cost field -->
    <record id="stock_landed_cost_view_form_add_fields" model="ir.ui.view">
        <field name="name">stock.landed.cost.form.inherit.add.fields</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//header" position="inside">
                <button name="avg_landed_cost" string="Get Landed Cost" class="oe_highlight" type="object" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='valuation_adjustments']//tree/field[@name='additional_landed_cost']" position="after">
                <field name="avg_landed_cost" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>