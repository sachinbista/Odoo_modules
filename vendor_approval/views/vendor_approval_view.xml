    <!-- inherit account.move (vendor invoice) view, add new two buttons(Send for Approval and Approved to Pay) and make two new state etc. -->
    <record id="invoice_supplier_form_inh" model="ir.ui.view">
            <field name="name">account.move.supplier.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

            <xpath expr="//header/button[@name='action_register_payment']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt', 'in_refund'))]}</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_register_payment']" position="before">
               <!-- Register Payment (only invoices / receipts) -->

                <button name="send_for_approval"
                        type="object"
                        attrs="{'invisible': ['|','|','|',('move_type', 'not in', ('in_invoice', 'in_receipt')),
                                                      ('payment_state', '!=', 'not_paid'),
                                                      ('state', '!=', 'posted'),
                                                      ('approval_status', 'in', ('send_approval','payment_to_pay'))]}"
                        string="Send for Approval"
                        class="oe_highlight"
                        />

                <button name="payment_to_pay"
                        type="object"
                        attrs="{'invisible': [('approval_status', '!=', 'send_approval')]}"
                        string="Approved to Pay"
                        class="oe_highlight"
                        groups="vendor_approval.group_approved_to_pay"/>

                <button name="cancel_send_for_approval"
                        type="object"
                        attrs="{'invisible': [('approval_status', '!=', 'send_approval')]}"
                        string="Cancel Approval"
                        class="oe_highlight"
                        groups="vendor_approval.group_approved_to_pay"/>

                <button name="cancel_payment_to_pay"
                        type="object"
                        attrs="{'invisible': ['|',('approval_status', '!=', 'payment_to_pay'),('payment_state', '!=', 'not_paid')]}"
                        string="Cancel Approved to Pay"
                        class="oe_highlight"
                        groups="vendor_approval.group_approved_to_pay"/>

                 <button name="action_register_payment"
                         type="object"
                         class="oe_highlight"
                         attrs="{'invisible': ['|', '|', ('approval_status', '!=', 'payment_to_pay'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('in_invoice', 'in_receipt'))]}"
                         context="{'dont_redirect_to_payments': True}"
                         string="Register Payment" groups="account.group_account_invoice"/>
            </xpath>

            <xpath expr="//header/button[@name='action_reverse']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('state', '!=', 'posted')]}</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_reverse']" position="after">
                <button name="action_reverse" string="Add Credit Note" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|', '|',('approval_status', '!=', 'payment_to_pay'), ('move_type', '!=', 'in_invoice'), ('state', '!=', 'posted')]}"/>
            </xpath>

            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="approval_status"
                       attrs="{'invisible': ['|',('state', '!=', 'posted'), ('move_type', 'not in', ('in_invoice', 'in_receipt'))]}"
                       readonly="1"
                       />
            </xpath>

            <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt', 'in_refund'))]}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="after">
                <field name="invoice_outstanding_credits_debits_widget"
                       class="oe_invoice_outstanding_credits_debits"
                       colspan="2"
                       nolabel="1"
                       widget="payment"
                       attrs="{'invisible': ['|', ('approval_status', '!=', 'payment_to_pay'), ('move_type', 'not in', ('in_invoice', 'in_receipt'))]}"/>
                       
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_from_invoices_inh" model="ir.ui.view">
        <field name="name">account.payments.payment.wizard</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='communication']" position="after">
                <field name="batch_boolean" invisible="1"/>
            </xpath>
            <!-- <xpath expr="//group/group/field[@name='payment_method_id']" position="replace">
                <field name="payment_method_id" widget="radio" attrs="{'invisible': ['|', ('hide_payment_method', '=', True), ('batch_boolean', '=', True)]}"/>
            </xpath> -->
        </field>
    </record>
    
    <record id="view_vendor_bill_filter_inherit_vendor_approval" model="ir.ui.view">
        <field name="name">vendor.bill.vendor.approval.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="send_for_approval" string="Send for Approval" domain="[('approval_status', '=', 'send_approval')]"/>
                <filter name="cancel_approval" string="Cancel Approval" domain="[('approval_status', '=', 'cancel_approval')]"/>
                <filter name="approved_to_pay" string="Approved to Pay" domain="[('approval_status', '=', 'payment_to_pay')]"/>
                <filter name="cancel_approval_to_pay" string="Cancel Approved to Pay" domain="[('approval_status', '=', 'cancel_approval_to_pay')]"/>
            </xpath>
            <filter name="duedate" position="after">
                <filter name="approval_status" string="Approval Status" context="{'group_by':'approval_status'}"/>
            </filter>
        </field>
    </record>
</odoo>