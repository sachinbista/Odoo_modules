<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_supplier_tree_view_inherit_approval" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_state']" position="before">
                <field name="approval_status" widget="badge" decoration-info="approval_status == 'send_approval'"
                                                             decoration-success="approval_status == 'payment_to_pay'"
                                                             decoration-danger="approval_status in ('cancel_approval', 'cancel_approval_to_pay')"
                                                              />
            </xpath>
        </field>
    </record>

