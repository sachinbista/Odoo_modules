    <!-- Send for Approval action in account.move object -->
    <act_window
            id="action_account_send_for_approval_invoices"
            name="Send for Approval"
            res_model="account.send.approval.invoices"
            src_model="account.move"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
        />

    <!-- Approved to Pay action in account.move object -->
    <act_window
            id="action_account_approved_to_pay_invoices"
            name="Approved to Pay"
            res_model="account.approved.pay.invoices"
            src_model="account.move"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
        />

    <!-- Cancel Approved to Pay action in account.move object -->
    <act_window
            id="action_cancel_approved_to_pay_invoices"
            name="Cancel Approved to Pay"
            res_model="cancel.approved.pay.invoices"
            src_model="account.move"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
        />
