<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
    	
       <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <button name="action_show_groups" position="after">
                    <button name="set_read_only_user" type="object" class="oe_stat_button" icon="fa-eye" help="Click for Apply Read only Access and Reset Read Only Access." string="Apply Read Only" attrs="{'invisible': [('read_only','=',False)]}">
                        <field name="read_only" invisible="1"/>
                        <span class="o_stat_text" style="color:#ff0000">Remove readonly</span>
                    </button>
                    <button name="set_read_only_user" type="object" class="oe_stat_button" icon="fa-eye" help="Click for Apply Read only Access and Reset Read Only Access." string="Apply Read Only" attrs="{'invisible': [('read_only','=',True)]}">
                        <field name="read_only" invisible="1"/>
                        <span class="o_stat_text" style="color:#008000">Apply readonly</span>
                    </button>
                </button>
            </field>
        </record>

    </data>
</odoo>