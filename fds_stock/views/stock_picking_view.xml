<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_inherit_fds_stock" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.fds.stock</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="show_box_pallet" invisible="1"/>
            </field>
            <xpath expr="//field[@name='move_ids_without_package']" position="attributes">
                <attribute name="attrs">{'readonly': ['&amp;', ('state', '=', 'done'), ('is_locked', '=', True)], 'invisible': [('show_box_pallet', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']" position="after">
                <field name="move_box_pallet_ids" mode="tree"
                    attrs="{'invisible': [('show_box_pallet', '=', False)], 'readonly': ['&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}">
                    <tree create="0" delete="0" editable="bottom" decoration-danger="not parent.immediate_transfer and state != 'done' and quantity_done > reserved_availability" decoration-muted="state == 'cancel' or (state == 'done' and is_locked == True)" >
                        <field name="product_type" invisible="1"/>
                        <field name="quantity_done" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <field name="is_locked" invisible="1"/>
                        <field name="forecast_expected_date" invisible="1"/>
                        <field name="product_qty" invisible="1"/>
                        <field name="product_id" required="1" context="{'default_detailed_type': 'product'}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="description_picking" string="Description" optional="hide"/>
                        <field name="date" optional="hide"/>
                        <field name="date_deadline" optional="hide"/>
                        <field name="product_uom_qty"/>
                        <field name="forecast_availability" string="Reserved"
                            attrs="{'column_invisible': ['|', '|', ('parent.state', 'in', ['draft', 'done']), ('parent.picking_type_code', '!=', 'outgoing'), ('parent.immediate_transfer', '=', True)]}" widget="forecast_widget"/>
                        <field name="reserved_availability" string="Reserved"
                            attrs="{'column_invisible': ['|', '|', ('parent.state', 'in', ['draft', 'done']), ('parent.picking_type_code', 'in', ['incoming', 'outgoing']), ('parent.immediate_transfer', '=', True)]}"/>
                        <field name="qty_done" string="Done" attrs="{'readonly': [('product_id', '=', False)], 'column_invisible':[('parent.state', '=', 'draft'), ('parent.immediate_transfer', '=', False)]}"/>
                        <field name="product_uom_id" string="Unit of Measure" groups="uom.group_uom"/>
                        <field name="box_and_pallet" />
                        <field name="loose" />
                    </tree>
                    <form string="Stock Moves">
                        <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group>
                            <field name="forecast_expected_date" invisible="1"/>
                            <field name="product_id" required="1" />
                            <field name="product_uom_qty" attrs="{'invisible': [('parent.immediate_transfer', '=', True)]}"/>
                            <field name="product_qty" invisible="1"/>
                            <field name="reserved_availability" string="Reserved" attrs="{'invisible': (['|','|', ('parent.state','=', 'done'), ('parent.picking_type_code', 'in', ['outgoing', 'incoming']), ('parent.immediate_transfer', '=', True)])}"/>
                            <field name="forecast_availability" string="Reserved" attrs="{'invisible': ['|', ('parent.picking_type_code', '!=', 'outgoing'), ('parent.state','=', 'done')]}" widget="forecast_widget"/>
                            <field name="qty_done" string="Done" readonly="1"/>
                            <field name="product_uom_id" attrs="{'readonly': [('state', '!=', 'draft'), ('id', '!=', False)]}" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                            <field name="description_picking" string="Description"/>
                        </group>
                    </form>
                </field>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']" position="attributes">
                <attribute name="attrs">{'readonly': ['|', '|', ('show_operations', '=', False), ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)], 'invisible': ['|',('show_reserved', '=', False),('show_box_pallet', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']" position="after">
                <field name="move_line_box_pallet_ids" mode="tree"
                    attrs="{'readonly': ['|', '|', ('show_operations', '=', False), ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)], 'invisible': ['|',('show_reserved', '=', False),('show_box_pallet', '=', False)]}">
                    <tree editable="bottom" create="0" delete="0" decoration-muted="(state == 'done' and is_locked == True)" decoration-danger="qty_done&gt;line_product_uom_qty and state!='done' and parent.picking_type_code != 'incoming'" decoration-success="qty_done==line_product_uom_qty and state!='done'">
                        <field name="product_id" readonly="1"/>
                        <field name="line_location_id" invisible="1"/>
                        <field name="line_location_dest_id" invisible="1"/>
                        <field name="package_id" invisible="1"/>
                        <field name="line_location_id" options="{'no_create': True}" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'incoming')]}" groups="stock.group_stock_multi_locations" />
                        <field name="line_location_dest_id" options="{'no_create': True}" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'outgoing')]}" groups="stock.group_stock_multi_locations"/>
                        <field name="state" invisible="1"/>
                        <field name="package_id" groups="stock.group_tracking_lot"/>
                        <field name="result_package_id" groups="stock.group_tracking_lot"/>
                        <!-- <field name="lots_visible" invisible="1"/> -->
                        <field name="owner_id" groups="stock.group_tracking_owner" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'incoming')]}"/>
                        <!-- <field name="lot_id" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}" context="{'default_product_id': product_id, 'default_company_id': company_id, 'active_picking_id': picking_id}" optional="show"/>
                        <field name="lot_name" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', False)], 'invisible': [('lots_visible', '=', False)]}" context="{'default_product_id': product_id}"/>
                        <field name="is_initial_demand_editable" invisible="1"/> -->
                        <field name="line_product_uom_qty" readonly="1" attrs="{'column_invisible': ['|',('parent.immediate_transfer', '=', True),('parent.picking_type_code','=','incoming')]}" optional="show"/>
                        <field name="is_locked" invisible="1"/>
                        <field name="qty_done" force_save="1"/>
                        <field name="product_uom_id" />
                        <field name="line_box_and_pallet" />
                        <field name="line_loose" />
                    </tree>
                    <form string="Move Lines" create="0" edit="0">
                        <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <sheet>
                            <group>
                                <group>
                                    <field name="product_id"/>
                                    <field name="line_location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                    <field name="line_location_dest_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                </group>
                                <group>
                                    <label for="line_product_uom_qty" string="Quantity Reserved" attrs="{'invisible': [('state', '=', 'done')]}"/>
                                    <div class="o_row" attrs="{'invisible': [('state', '=', 'done')]}">
                                        <field name="line_product_uom_qty" readonly="1"/>
                                        <field name="product_uom_id" options="{'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                                    </div>
                                    <label for="qty_done" string="Quantity Done"/>
                                    <div class="o_row">
                                        <field name="qty_done"/>
                                        <field name="product_uom_id" options="{'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                                    </div>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
