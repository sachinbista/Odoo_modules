<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_set_package_value" model="ir.ui.view">
        <field name="name">Set Package Value</field>
        <field name="model">set.package.value</field>
        <field name="arch" type="xml">
            <form string="Set Package Value wizard">
                <p>
                Use this assistant to set Package Type, Weight, Height and Depth for Package.
                </p>
                <group>
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="package_type_id" options="{'no_create': True}"/>
                        <label for="weight"/>
                        <div>
                            <field name="weight" class="oe_inline"/> pounds
                        </div>
                        <label for="height"/>
                        <div>
                            <field name="height" class="oe_inline"/> inches
                        </div>
                        <label for="depth"/>
                        <div>
                            <field name="depth" class="oe_inline"/> inches
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm"
                        string="Confirm"
                        type="object"
                        data-hotkey="q"
                        class="btn-primary"/>
                    <button string="Discard"
                        class="btn-secondary"
                        special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_set_package_value" model="ir.actions.act_window">
        <field name="name">Set Package Value</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">set.package.value</field>
        <field name="binding_model_id" eval="False"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_set_package_value"/>
        <field name="target">new</field>
    </record>
</odoo>
