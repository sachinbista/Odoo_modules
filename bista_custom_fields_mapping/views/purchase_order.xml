<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_form_ownership">
            <field name="name">purchase.order.form.ownership</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="before">
                    <field name="ownership"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="owner" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field name="product_vendor_code"/>
                </xpath>

            </field>
        </record>



        <record id="purchase_order_search_inherit" model="ir.ui.view">
            <field name="name">purchase.order.list.select.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='order_date']" position="after">
                    <separator/>
                    <filter name="ownership" string="Owned" domain="[('ownership', '=', 'owned' )]"/>
                    <filter name="ownership" string="Memo" domain="[('ownership', '=', 'memo')]"/>
                    <separator/>
                </xpath>

            </field>
        </record>



    </data>
</odoo>