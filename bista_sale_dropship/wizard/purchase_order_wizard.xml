<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="bista_sale_dropship_purchase_order_wizard" model="ir.ui.view">
        <field name="name">purchase.order.wizard</field>
        <field name="model">purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <div>
                    <h4>Please Select vendor and hit 'Create Dropship' button</h4>
                </div>
                <group>
                    <group>
                        <field name="partner_id" context="{'res_partner_search_mode':'supplier', 'po_show_vendor_type': True, 'default_supplier_rank': 1, 'default_vendor_cus': True}"
                        options="{'no_create': True}"/>
                        <field name="order_selection" />
                    </group>
                    <group>
                        <field name="date_planned" />
                        <field name="purchase_type" required="1"/>
                    </group>
                </group>
                <field name="order_line">
                    <tree string="Purchase Order Lines" editable="bottom" create="false">
                        <field name="product_id" context="{'partner_id': parent.partner_id}" required="True" readonly="1" force_save="1"/>
                        <field name="name" required="True" readonly="1" force_save="1"/>
                        <field name="product_qty" required="True" force_save="1"/>
                        <field name="product_uom" required="True" readonly="1" force_save="1"/>
                        <field name="price_unit" required="True" force_save="1"/>
                        <field name="price_subtotal" widget="monetary" readonly="1" force_save="1"/>
                        <field name="so_line_id" invisible="1"/>
                        <field name="product_qty_editable" invisible="1"/>
                    </tree>
                </field>
                <footer>
                    <button string="Create Dropship" type="object" name="sh_create_dropship_order" class="btn-primary" />
                    <button name="cancel" string="Cancel" special="cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
