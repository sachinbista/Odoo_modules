<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="rfid_tag_form_view" model="ir.ui.view">
		<field name="name">rfid_tag_form_view.form</field>
		<field name="model">rfid.tag</field>
		<field name="arch" type="xml">
			<form string="RFID Tag">
				<sheet>
					<div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name" placeholder="RFID Tag No."/>
						</h1>
					</div>
					<group>
						<group>
							<field name="usage_type" />
						</group>
						<group>
							<field name="picking_id"
							       attrs="{'invisible': [('usage_type', 'in', ('product', 'stock_prod_lot'))]}" />
							<field name="product_id"
							       attrs="{'invisible': [('usage_type', 'in', ('receipt', 'delivery', 'stock_prod_lot'))]}" />
							<field name="stock_prod_lot_id"
							       attrs="{'invisible': [('usage_type', 'in', ('receipt', 'delivery', 'product'))]}" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="rfid_tag_tree_view" model="ir.ui.view">
		<field name="name">rfid_tag_tree_view.tree</field>
		<field name="model">rfid.tag</field>
		<field name="arch" type="xml">
			<tree string="RFID Tag"
			      decoration-danger="assigned != True"
			      decoration-success="assigned == True">
				<field name="name"/>
				<field name="usage_type"/>
				<field name="usage" widget="many2one_navigation"/>
				<field name="assigned" invisible="1" />
			</tree>
		</field>
	</record>

	<record id="rfid_tag_search_view" model="ir.ui.view">
		<field name="name">rfid.tag.search.view</field>
		<field name="model">rfid.tag</field>
		<field name="arch" type="xml">
			<search string="RFID Tag">
				<field name="name" />
				<field name="usage_type" />
				<field name="usage" />
				<field name="picking_id" />
				<field name="product_id" />
				<field name="stock_prod_lot_id" />
				<filter string="Receipts" name="usage_type" domain="[('usage_type', '=', 'receipt')]"/>
				<filter string="Deliveries" name="usage_type" domain="[('usage_type', '=', 'delivery')]"/>
				<group expand="1" string="Group By">
					<filter string="Usage Type" name="usage_type" domain="[]" context="{'group_by':'usage_type'}"/>
				</group>
			</search>
		</field>
	</record>

	<record id="rfid_tag_view_act_window" model="ir.actions.act_window">
		<field name="name">RFID Tags</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">rfid.tag</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				There is no examples click here to add new RFID Tag.
			</p>
		</field>
	</record>

</odoo>