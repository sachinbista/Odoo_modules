<odoo>

    <record id="res_partner_view_form_inherit_mail_validation" model="ir.ui.view">
        <field name="name">res.partner.view.form.email.validation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mail.res_partner_view_form_inherit_mail"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='email']" position="replace">
                <field name="invalid_email_address" invisible="1"/>
                <field name="is_blacklisted" invisible="1"/>

                <div class="o_row">
                    <i class="fas fa-times-circle" style="color: red;" role="img" title="This email is invalid"
                       aria-label="Invalid Email" attrs="{'invisible': [('invalid_email_address', '=', False)]}"
                       groups="base.group_user"></i>

                    <field name="email"/>
                    <button icon="fa-user-check" type="object" name="validate_email" aria-label="Check Validity" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
