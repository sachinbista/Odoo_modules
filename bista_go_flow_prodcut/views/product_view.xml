    <record id="product_template_tree_view_list_custom" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="create_date"/>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="parent_default_code"/>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
              <attribute name="groups">stock_inventory_valuation_report.total_value_unit_cost_access</attribute>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
              <attribute name="groups">stock_inventory_valuation_report.total_value_unit_cost_access</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_only_form_view_inherit_custom" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="before">
                <field name="parent_default_code"/>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
              <attribute name="groups">stock_inventory_valuation_report.total_value_unit_cost_access</attribute>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
              <attribute name="groups">stock_inventory_valuation_report.total_value_unit_cost_access</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="sync_to_goflow" type="object" string="Sync To GoFlow" />
            </xpath>

        </field>
    </record>
    <record id="product_template_form_view_inherit_goflow" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.goflow</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="goflow_product_info"
                      string="GoFlow Product Info">
                    <group>
                        <group>
                            <field name="is_perishable"/>
                            <field name="condition"/>
                            <field name="country_of_origin"/>
                        </group>
                        <group>
                            <field name="brand"/>
                            <field name="manufacturer"/>
                            <field name="hs_code"/>
                        </group>
                    </group>
                    <group string="Custom's Description">
                        <field colspan="2" name="customs_description" nolabel="1"
                               placeholder="This description is only on customs forms."/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="product_template_hs_code_inherit_goflow" model="ir.ui.view">
        <field name="name">product.template.hs_code.form.view.inherit.goflow</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="delivery.product_template_hs_code"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hs_code']" position="replace">
            </xpath>
            <xpath expr="//field[@name='country_of_origin']" position="replace">
            </xpath>
        </field>
    </record>


    <record id="sale_order_optional_field_tree" model="ir.ui.view">
        <field name="name">sale.order.inherited.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_status']" position="replace">
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                 <field name="goflow_warehouse" readonly="1" force_save="1" optional="hide"/>
                 <field name="delivery_status" readonly="1" force_save="1" optional="hide" widget="badge"
                        decoration-danger="delivery_status == 'pending'" decoration-info="delivery_status == 'partial'" decoration-success="delivery_status == 'full'"/>
             </xpath>
        </field>
    </record>

    <record id="quotation_optional_field_tree_inherited" model="ir.ui.view">
        <field name="name">sale.order.inherited.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="replace">
            </xpath>
             <xpath expr="//field[@name='state']" position="after">
                 <field name="invoice_status" optional="hide" decoration-success="invoice_status == 'invoiced'" decoration-info="invoice_status == 'to invoice'" decoration-warning="invoice_status == 'upselling'" widget="badge"/>
                 <field name="delivery_status" readonly="1" force_save="1" optional="hide" widget="badge"
                        decoration-danger="delivery_status == 'pending'" decoration-info="delivery_status == 'partial'" decoration-success="delivery_status == 'full'"/>
              </xpath>
        </field>
    </record>
</odoo>
