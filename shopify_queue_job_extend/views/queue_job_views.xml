<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_queue_job_inherit_shopify" model="ir.ui.view">
        <field name="name">queue.job.form.inherit.shopify</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='date_done']" position="after">
                <field name="is_task" readonly="1"/>
            </xpath>
            <xpath expr="//group/field[@name='func_string']" position="attributes">
                <attribute name="invisible">is_task == True</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_queue_job_function_inherit_shopify" model="ir.ui.view">
        <field name="name">queue.job.function.form.inherit.shopify</field>
        <field name="model">queue.job.function</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_function_form"/>
        <field name="arch" type="xml">
            <field name="channel_id" position="after">
                <field name="is_task"/>
            </field>
        </field>
    </record>

</odoo>