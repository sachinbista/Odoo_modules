<odoo>
    <data>
        <!-- Inherit the base view -->
        <record id="res_config_settings_view_form_special_order_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.pos_sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='pos_load_draft_sent']" position="before">
                    <div>
                    <div class="o_setting_left_pane">
                        <field name="bs_special_refund"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Can be Special Product Refund/Return</span>
                    </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

