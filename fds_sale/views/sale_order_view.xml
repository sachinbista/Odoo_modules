<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">Sale Order Inherit</field>
        <field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="before">
                <field name="can_prelim" invisible="1"/>
                <button name="action_commit" id="action_commit" data-hotkey="v"
                    string="Prelim" type="object"
                    attrs="{'invisible': [('can_prelim', '=', False)]}"/>
                    <!-- attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/> -->
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,committed,sale</attribute>
            </xpath>
            <xpath expr='//button[@name="action_confirm"][1]' position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['sent', 'committed'])]}</attribute>
            </xpath>
            <xpath expr='//button[@name="action_confirm"][2]' position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['draft'])]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['draft','sent','committed','sale']), ('id', '=', False)]}</attribute>
            </xpath>
            <field name="show_update_pricelist" position="before">
                <label for="commitment_date" string="Delivery Date"/>
                <div class="o_row">
                    <field name="commitment_date"/>
                    <span class="text-muted" attrs="{'invisible': [('effective_date', '!=', False), ('commitment_date', '!=', False)]}">Expected: <field name="expected_date" class="oe_inline" widget="date"/></span>
                </div>
            </field>
        </field>
    </record>
</odoo>
