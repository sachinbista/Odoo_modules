<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rapaport_configuration_settings" model="ir.ui.view">
        <field name="name">rapaport.configuration.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Rapaport Configuration"
                     string="Rapaport Configuration"
                     web_icon="bista_rapaport_integration,static/description/rapaport_logo.png"
                     data-key="bista_rapaport_integration"
                     groups="base.group_system">
                    <div id="rapaport_config">
                        <h2>Rapaport API Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="mt10 row">
                                            <label for="client_id"
                                                   string="Client ID"
                                                   class="col-4 col-lg-4 o_light_label font-weight-bold"/>
                                            <field name="client_id"/>
                                        </div>
                                        <div class="mt10 row">
                                            <label for="client_secret_key"
                                                   string="Client Secret Key"
                                                   class="col-4 col-lg-4 o_light_label font-weight-bold"/>
                                            <field name="client_secret_key"/>
                                        </div>
                                        <br/>
                                        <field name="api_access_token" invisible="1"/>
                                        <div class="mt8">
                                            <button name="generate_access_token"
                                                    type="object"
                                                    icon="fa-arrow-right"
                                                    string="Genarate Access Token"
                                                    class="btn-info"
                                                    attrs="{'invisible':[('api_access_token', '!=', False)]}"
                                                    />
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="mt10 row">
                                            <label for="api_host"
                                                   string="Host"
                                                   class="col-3 col-lg-3 o_light_label font-weight-bold"/>
                                            <field name="api_host"/>
                                        </div>
                                        <div class="mt10 row">
                                            <label for="api_price_sheet_endpoint"
                                                   string="Price Endpoint"
                                                   class="col-3 col-lg-3 o_light_label font-weight-bold"/>
                                            <field name="api_price_sheet_endpoint"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
