    <template id="brand_list_down_footer" name="Bista BRand List">
        <t t-set="brands"
           t-value="request.env['product.attribute.value'].sudo().search([('attribute_id.dr_is_brand','=',True)],order='sequence asc',limit=11)"/>
        <ul class="list-unstyled tp-list-dot">
            <t t-foreach="brands" t-as="brand">
                <li class="my-2">
                    <a t-attf-href="/shop?attrib=#{brand.attribute_id.id}-#{brand.id}" t-att--title="brand.name">
                        <t t-esc="brand.name"/>
                    </a>
                </li>
            </t>
            <li class="my-2">
                <a href='/shop/all-brands'>Show All</a>
            </li>
        </ul>
    </template>

