<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_report_tree_view" model="ir.ui.view">
        <field name="name">sale.order.line.report.tree.view</field>
        <field name="model">sale.order.line.report</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="product_id"/>
                <field name="ordered_qty"/>
                <field name="delivered_qty"/>
                <field name="open_qty"/>
                <field name="invoiced_qty"/>
                <field name="unit_price"/>
                <field name="open_order_value"/>
                <field name="subtotal"/>
                <field name="shipping_status"/>
                <field name="warehouse_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_order_line_report_search" model="ir.ui.view">
        <field name="name">sale.order.line.report.search</field>
        <field name="model">sale.order.line.report</field>
        <field name="arch" type="xml">
            <search string="Sales Order Line Report">
                <field name="product_id" />
                <field name="shipping_status" />
                <group expand="0" string="Group By">
                    <filter name="group_by_warehouse_id" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_by_shipping_status" string="Shipping Status" context="{'group_by': 'shipping_status'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>