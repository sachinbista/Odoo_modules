<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_order_line_history" model="ir.ui.view">
        <field name="name">Purchase Order Line Report at Date</field>
        <field name="model">purchase.order.line.history</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button
                            context="{'for_view': True}"
                            name="export_valuation_report"
                            string="View"
                            type="object"
                            class="btn-primary"
                            close="1"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="purchase_orderline_report_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Line Summary</field>
        <field name="res_model">purchase.order.line.history</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_purchase_order_line"
              name="Purchase Order Line Summary"
              action="purchase_orderline_report_action"
              parent="purchase.purchase_report_main"
              sequence="120"/>
    <menuitem
            id="menu_purchase_sale_orderline_report_valuation"
            name="Sale Order Line Summary"
            parent="purchase.purchase_report_main"
            sequence="130"
            action="bista_order_line_reports.sale_orderline_report_action"
    />
</odoo>
