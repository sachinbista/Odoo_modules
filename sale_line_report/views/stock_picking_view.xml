<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_sale_management" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='extra']//field[@name='group_id']" position="before">
                    <field name="picking_priority" force_save="1" />
                </xpath>
            </field>
        </record>

        <record id="view_picking_tree_inherit_sale_management" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="picking_priority" />
                </xpath>
            </field>
        </record>

</odoo>


