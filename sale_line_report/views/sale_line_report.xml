    <record id="action_sale_line_report" model="ir.actions.act_window">
        <field name="name">Sale Order Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.line.report</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('id', '>', 0), ('delivery_status', 'in', ['pending', 'partial'])]</field>
        <field name="context">{"search_default_filter_sale_order_line":1}</field>
