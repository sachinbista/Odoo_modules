    <record id="view_sale_line_report_warehouse_view_tree" model="ir.ui.view">
        <field name="name">sale.line.report.group.by</field>
        <field name="model">sale.line.report</field>
        <field name="inherit_id" ref="sale_line_report.sale_line_report_search_view"/>
        <field name="arch" type="xml">
            <group>
                <filter string="Warehouse" name="warehouse_groupby" context="{'group_by': 'warehouse_id'}"/>
                <filter string="Customer" name="customer_groupby" context="{'group_by': 'partner_id'}"/>
                <filter string="Picking Status" name="picking_status_groupby" context="{'group_by': 'picking_status'}"/>
                <filter string="Order Status" name="order_status_groupby" context="{'group_by': 'order_status'}"/>
            </group>
        </field>
    </record>

    <record id="sale_line_report_search_view" model="ir.ui.view">
        <field name="name">sale.line.report.search.view</field>
        <field name="model">sale.line.report</field>
        <field name="arch" type="xml">
            <search string="Sales Order Lines">
                <field name="partner_id"/>
                <!--                <field name="product_id"/>-->
                <field name="sub_line" string="Product" filter_domain="[('sub_line.product_id', 'ilike', self)]"/>
                <field name="order_id" string="Order Reference"/>
                <separator/>
                <filter string="Pending Status" name="pending_filter" domain="[('delivery_status','=','pending')]"/>
                <filter string="Partial Status" name="partial_filter" domain="[('delivery_status','=','partial')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <!--                    <filter string="Product" name="product" domain="[]" context="{'group_by':'product_id'}"/>-->
                    <filter string="Order" name="order" domain="[]" context="{'group_by':'order_id'}"/>
                    <filter string="Delivery Status" name="delivery_status" context="{'group_by': 'delivery_status'}"/>

                    <!--                    <filter string="Order Status" name="group_by_status" domain="[]" context="{'group_by':'picking_status'}"/>-->
                </group>
            </search>
        </field>
    </record>


