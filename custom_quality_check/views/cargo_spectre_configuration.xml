<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_cargospectre_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cargospectre</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='barcode_setting_container']"
                   position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="cargo_spectre" groups="spring_systems_integration.group_api_user">
                    <div class="o_setting_left_pane">
                        <field name="cargo_spectre_validation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="cargo_spectre_validation" string="Cargo Spectre"/>
                        <div class="text-muted">
                            trigger an api connection using autuentication key when user do quality check and get dimension.
                        </div>
                        <group attrs="{'invisible': [('cargo_spectre_validation', '=', False)]}">
                            <field name="spectre_url" class="oe_inline"/>
                            <field name="spectre_token" password="True" class="oe_inline"/>
                            <field name="image_path_url" class="oe_inline"/>
                            <field name="image_url" class="oe_inline"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>


