<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']"
                   position="inside">
                <h2>Costing</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_costing"
                         title="Set default costing method.">
                        <div class="o_setting_right_pane">
                            <div class="row mt8">
                                <label for="mrp_labor_cost" class="col-lg-5 o_light_label" string="Labor Cost"/>
                                <field name="mrp_labor_cost"/>
                            </div>
                            <div class="row mt8">
                                <label for="mrp_labor_account" class="col-lg-5 o_light_label" string="Labor Account"/>
                                <field name="mrp_labor_account"/>
                            </div>
                            <div class="row mt8">
                                <label for="mrp_overhead_cost" class="col-lg-5 o_light_label" string="Overhead Cost"/>
                                <field name="mrp_overhead_cost"/>
                            </div>
                            <div class="row mt8">
                                <label for="mrp_overhead_account" class="col-lg-5 o_light_label" string="Overhead Account"/>
                                <field name="mrp_overhead_account"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>