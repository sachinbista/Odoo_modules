<odoo>
    <record id="mrp_bom_cost_page" model="ir.ui.view">
        <field name="name">mrp_bom_cost_page</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="cost" string="Costing Information">
                    <group>
                        <field name="mrp_labor_cost"/>
                        <field name="mrp_labor_account"/>
                        <field name="mrp_overhead_cost"/>
                        <field name="mrp_overhead_account"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>