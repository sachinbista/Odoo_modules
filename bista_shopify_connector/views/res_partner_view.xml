<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        <record id="view_res_partner_form_shopify" model='ir.ui.view'>
            <field name="name">view.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <field name="supplier_rank" invisible="1"/>
                    <page name="shopify_details" string="Shopify Details"
                          attrs="{'invisible':['|',('supplier_rank' ,'&gt;', 0),('shopify_config_id','=',False)]}">
                        <group col="4">
                            <field name="shopify_company_name"/>
                            <field name="shopify_province"/>
                            <field name="shopify_province_code"/>
                            <field name="accept_email_marketing"/>
                            <field name="shopify_customer_id" readonly="0"/>
                            <field name="sh_tax_exempt" readonly="0"/>
                            <field name="shopify_address_id" readonly="0"/>
                            <field name="shopify_config_id" readonly="0"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_res_partner_filter_inherit" model="ir.ui.view">
            <field name="name">res.partner.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Shopify Configuration" name="shopify_config_id"
                            context="{'group_by':'shopify_config_id'}"/>
                </xpath>
                <xpath expr="//search" position="inside">
                    <field string="Shopify Configuration" name="shopify_config_id"
                           filter_domain="[('shopify_config_id', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

        <record id="action_shopify_res_partner" model="ir.actions.act_window">
            <field name="name">Shopify Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">['|', ('shopify_customer_id', '!=', False),
                ('shopify_address_id', '!=', False)]</field>

        </record>

        <menuitem id="shopify_odoo_res_partner_menu" name="Customers"
              parent="shopify_odoo_operations_menu"
              action="action_shopify_res_partner"
              groups="bista_shopify_connector.group_shopify_admin"
              sequence="3"/>
   </data>
</odoo>
