<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="account_invoice_inherit_form_shopify" model="ir.ui.view">
            <field name="name">account.invoice.inherit.form.shopify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[last()]" position="after">
                    <button name="action_open_refund_wizard" string="Refund in Shopify" type="object" groups="account.group_account_invoice"
                            invisible = "move_type != 'out_refund' or state != 'posted' or payment_state not in ['paid', 'in_payment']" class="oe_highlight"/>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Shopify"
                          invisible = "move_type not in ['out_invoice', 'out_refund'] or not shopify_order_id"
                          groups="bista_shopify_connector.group_shopify_admin,bista_shopify_connector.group_shopify_user">
                        <group col="4">
                            <group>
                                <field name="shopify_order_id" readonly="1"/>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="shopify_transaction_id" readonly="1"/>
                                <field name="fulfillment_status" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
</odoo>
