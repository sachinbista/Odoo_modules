<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_account_invoice_filter_inherited_bista_intercompany_po" model="ir.ui.view">
            <field name="name">account.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="shopify_order_id"/>
                    <field name="shopify_order_number"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_search_inherit" model="ir.ui.view">
            <field name="name">account.move.search.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='sales']" position="before">
                    <filter string="Shopify Order ID" name="shopify_order_id"
                            domain="[('shopify_order_id', 'ilike', self)]"/>
                    <filter string="Shopify Order Number" name="shopify_order_number"
                            domain="[('shopify_order_number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

    <record id="view_move_line_tree_inherited_delivery_state" model="ir.ui.view">
        <field name="name">account.move.line.form.inherited</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="delivery_state_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_delivery_state" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.delivery.state</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="delivery_state_id" string="Delivery State"/>
            </field>
        </field>
    </record>
</odoo>