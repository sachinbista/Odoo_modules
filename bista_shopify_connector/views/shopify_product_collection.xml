<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Product Collection Form View -->
    <record id="shopify_product_collection_form_view" model='ir.ui.view'>
        <field name="name">shopify.product.collection.form.view</field>
        <field name="model">shopify.product.collection</field>
        <field name="arch" type="xml">
            <form name="Collections">
                <header>
                    <button name="update_collection_in_shopify" type="object"
                            string="Update Collection in Shopify"
                            attrs="{'invisible':[('shopify_id', '=', False)]}" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>

                            <field name="name"/>
                            <field name="handle"/>
                            <field name="shopify_config_id"/>
                            <field name="type" required="1" attrs="{'readonly': [('shopify_id', '!=', False)]}"/>
                            <field name="sort_order"/>
                            <field name="published_scope" attrs="{'readonly': [('shopify_id', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="image" widget="image"
                                   class="oe_avatar" nolabel="1"/>
                            <field name="shopify_id" readonly="1"/>
                            <field name="is_disjunctive"
                                   attrs="{'invisible': [('type', '!=', 'automated')]}"/>
                            <field name="shopify_published" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="body_html"/>
                        </page>
                        <page string="Conditions"
                              attrs="{'invisible': [('type', '!=', 'automated')]}">
                            <p class="alert alert-warning" role="alert">Note: Please select column relation based on supported in Shopify</p>
                            <field name="collection_condition_ids">
                                <tree editable="bottom">
                                    <field name="column" required="1"/>
                                    <field name="relation" required="1"/>
                                    <field name="condition" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Shopify Product Collection Tree View -->
    <record id="shopify_product_collection_tree_view" model='ir.ui.view'>
        <field name="name">shopify.product.collection.tree.view</field>
        <field name="model">shopify.product.collection</field>
        <field name="arch" type="xml">
            <tree name="Collections">
                <field name="name"/>
                <field name="type"/>
                <field name="shopify_id"/>
                <field name="shopify_config_id"/>
            </tree>
        </field>
    </record>
    <!-- Shopify product collection search view -->
    <record id="shopify_product_collections_search_view" model="ir.ui.view">
        <field name="name">shopify.product.collection.filter.view</field>
        <field name="model">shopify.product.collection</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="type"/>
                <field name="shopify_id"/>
                <field name="shopify_config_id"/>
                <group expand="1" string="Group By">
                    <filter string="Shopify Config." name="shopify_config"
                            context="{'group_by':'shopify_config_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Shopify Product Collection Action -->
    <record id="action_shopify_product_collection" model="ir.actions.act_window">
        <field name="name">Shopify Product Collections</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shopify.product.collection</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id"
               ref="bista_shopify_connector.shopify_product_collections_search_view"/>
    </record>

    <!-- Menu for Shopify Product Collection -->
    <menuitem id="menu_shopify_product_collection"
              name="Collections"
              sequence="1"
              groups="bista_shopify_connector.group_shopify_admin"
              action="action_shopify_product_collection"
              parent="shopify_shopify_operations_menu"/>
</odoo>
