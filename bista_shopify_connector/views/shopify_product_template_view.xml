<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_product_template_form" model='ir.ui.view'>
            <field name="name">view.shopify.product.template.form</field>
            <field name="model">shopify.product.template</field>
            <field name="arch" type="xml">
                <form name="shopify_product_template">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_tmpl_id"/>
<!--                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"-->
<!--                                       attrs="{'readonly': [('shopify_prod_tmpl_id','not in',('',False))]}"/>-->
                                <field name="vendor"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       domain="[('supplier_rank', '>', 0)]"/>
                                <field name="shopify_published"/>
                                <field name="shopify_published_scope"/>
                            </group>
                            <group>
                                <field name="shopify_config_id"/>
<!--                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"-->
<!--                                       attrs="{'readonly': [('shopify_prod_tmpl_id','not in',('',False))]}"/>-->
                                <field name="product_type"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="shopify_handle"/>
                                <field name="last_updated_date"/>
                            </group>
                            <group>
                                <field name="shopify_prod_tmpl_id"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="r_prod_tags" widget="many2many_tags"/>
                                <field name="r_prov_tags" widget="many2many_tags"/>
                                <!-- <field name="shopify_prod_collection_ids" widget="many2many_tags"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       domain="[('type', '=', 'manual'), ('shopify_config_id', '=', shopify_config_id)]"/> -->
                            </group>
                            <group>
                                <field name="shopify_error_log"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="body_html_page" string="Body Html">
                                <field name="body_html" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_product_template_tree" model="ir.ui.view">
            <field name="name">view.shopify.product.template.tree</field>
            <field name="model">shopify.product.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_tmpl_id"/>
                    <field name="vendor" domain="[('supplier_rank', '>', 0)]"/>
                    <field name="product_type"/>
                    <field name="shopify_config_id"/>
                    <field name="shopify_prod_tmpl_id"/>
                    <field name="last_updated_date"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_product_template_search" model="ir.ui.view">
            <field name="name">view.shopify.product.template.search</field>
            <field name="model">shopify.product.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_tmpl_id"/>
                    <field name="shopify_config_id"/>
                    <field name="shopify_prod_tmpl_id"/>
                    <filter string="Published On Shopify" name="shopify_published_filter"
                            domain="[('shopify_prod_tmpl_id','not in',['',False])]"/>
                    <filter string="Ready To Publish" name="shopify_ready_published_filter"
                            domain="[('shopify_prod_tmpl_id','in',['',False])]"/>
                    <group expand="1" string="Group By">
                        <filter string="Product Type" name="product_type"
                                context="{'group_by':'product_type'}"/>
                        <filter string="Vendor" domain="[('vendor.supplier_rank', '>', 0)]" name="vendor"
                                context="{'group_by':'vendor'}"/>
                        <filter string="Shopify Config" name="shopify_config"
                                context="{'group_by':'shopify_config_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_shopify_product_template" model="ir.actions.act_window">
            <field name="name">Shopify Product Template</field>
            <field name="res_model">shopify.product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id"
                   ref="bista_shopify_connector.view_shopify_product_template_search"/>
        </record>

        <menuitem id="menu_action_shopify_product_template"
                  name="Shopify Products" sequence="5"
                  groups="bista_shopify_connector.group_shopify_admin"
                  action="action_shopify_product_template"
                  parent="shopify_shopify_operations_menu"/>
    </data>
</odoo>
