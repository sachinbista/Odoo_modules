<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_inherit_form_des_shopify">
            <field name="name">product.template.inherit.description</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="widget">html</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_template_inherit_form_shopify" model="ir.ui.view">
            <field name="name">product.template.inherit.form.shopify</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Shopify" attrs="{'invisible':[('shopify_product_template_ids','=',[])]}"
                          groups="bista_shopify_connector.group_shopify_admin,bista_shopify_connector.group_shopify_user">
                        <field name="shopify_product_template_ids" nolabel="1">
                            <tree delete="false">
                                <field name="product_tmpl_id"/>
                                <field name="vendor" domain="[('supplier_rank', '>', 0)]"/>
                                <field name="product_type"/>
                                <field name="shopify_config_id"/>
                                <field name="shopify_prod_tmpl_id"/>
                                <field name="last_updated_date"/>
                                <button name="export_shopify" string="Export" type="object"
                                        attrs="{'invisible': [('shopify_prod_tmpl_id','!=',False)]}"/>
                                <button name="update_shopify_product" string="Update" type="object"
                                        attrs="{'invisible': [('shopify_prod_tmpl_id','=',False)]}"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="shopify_config_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                               attrs="{'readonly': [('shopify_prod_tmpl_id','!=',False)]}"/>
                                        <field name="last_updated_date"/>
                                    </group>
                                    <group>
                                        <field name="vendor" domain="[('supplier_rank', '>', 0)]"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        <field name="product_type"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        <field name="shopify_prod_collection_ids"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                               widget="many2many_tags"
                                               domain="[('type', '=', 'manual'), ('shopify_config_id', '=', shopify_config_id)]"/>
                                        <field name="shopify_published"/>
                                        <field name="shopify_published_scope"/>
                                    </group>
                                    <group>
                                        <field name="shopify_prod_tmpl_id"/>
                                    </group>
                                    <group>
                                        <field name="shopify_error_log"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Body Html" invisible="0">
                                        <field name="body_html" nolabel="1"/>
                                    </page>
                                </notebook>
                            </form>
                        </field>
                        <group>
                            <field name="prod_tags_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="province_tags_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                    </page>
                    <page string="Images" attrs="{'invisible':[('product_multi_images','=',[])]}">
                        <field name="product_multi_images" widget="image_multi">
                            <tree editable="bottom">
                                <field name="image"/>
                                <field name="description"/>
                                <field name="title"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_product_shopify_easy_inherit_form" model="ir.ui.view">
            <field name="name">product.product.shopify.easy.inherit.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <sheet position="inside">
                    <notebook>
                        <page string="Shopify Variant fields"
                              groups="bista_shopify_connector.group_shopify_admin,bista_shopify_connector.group_shopify_user"
                              attrs="{'invisible':[('shopify_product_product_ids','=',[])]}">
                            <group>
                                <field name="shopify_shipping_product"
                                       attrs="{'invisible': [('type','!=','service')]}"/>
                                <field name="shopify_discount_product"
                                       attrs="{'invisible': [('type','!=','service')]}"/>
                            </group>
                            <field name="shopify_product_product_ids">
                                <tree string="Shopify Product Details" delete="0">
                                    <field name="product_variant_id"/>
                                    <field name="shopify_product_template_id"/>
                                    <field name="shopify_product_id"/>
                                    <field name="shopify_inventory_item_id" optional="hide"/>
                                    <field name="shopify_config_id"/>
                                    <field name="product_template_id" optional="hide"/>
                                    <field name="last_updated_date" optional="hide"/>
                                    <field name="update_shopify_inv" optional="hide"/>
                                    <button name="export_shopify_variant" string="Export Variant" type="object"
                                            attrs="{'invisible': [('shopify_product_id','!=',False)]}"/>
                                    <button name="update_shopify_variant" string="Update Variant" type="object"
                                            attrs="{'invisible': [('shopify_product_id','=',False)]}"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="shopify_config_id"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                                   attrs="{'readonly': [('shopify_product_id','!=',False)]}"/>
                                            <field name="product_template_id"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                                   readonly="1"/>
                                            <field name="product_variant_id" required="0" readonly="1"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                                   attrs="{'readonly': [('product_template_id','in', ('', False))]}"/>
                                            <field name="last_updated_date"/>
                                        </group>
                                        <group>
                                            <field name="lst_price"/>
                                            <field name="shopify_published_variant" invisible="1"/>
                                            <field name="update_shopify_inv"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="shopify_product_template_id"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                            <field name="shopify_inventory_item_id"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        </group>
                                        <group>
                                            <field name="shopify_product_id"
                                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </field>
        </record>

        <record id="product_product_shopify_fields_inherit_form" model="ir.ui.view">
            <field name="name">product.product.shopify.fields.inherit.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Shopify Variant fields"
                          groups="bista_shopify_connector.group_shopify_admin,bista_shopify_connector.group_shopify_user"
                          attrs="{'invisible':[('shopify_product_product_ids','=',[])]}">
                        <group>
                            <field name="shopify_shipping_product" attrs="{'invisible': [('type','!=','service')]}"/>
                            <field name="shopify_discount_product" attrs="{'invisible': [('type','!=','service')]}"/>
                        </group>
                        <field name="shopify_product_product_ids">
                            <tree string="Shopify Product Details" delete="0">
                                <field name="product_variant_id"/>
                                <field name="shopify_product_template_id"/>
                                <field name="shopify_product_id"/>
                                <field name="shopify_inventory_item_id" optional="hide"/>
                                <field name="shopify_config_id"/>
                                <field name="product_template_id" optional="hide"/>
                                <field name="last_updated_date" optional="hide"/>
                                <field name="update_shopify_inv" optional="hide"/>
                                <button name="export_shopify_variant" string="Export Variant" type="object"
                                        attrs="{'invisible': [('shopify_product_id','!=',False)]}"/>
                                <button name="update_shopify_variant" string="Update Variant" type="object"
                                        attrs="{'invisible': [('shopify_product_id','=',False)]}"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="shopify_config_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                               attrs="{'readonly': [('shopify_product_id','!=',False)]}"/>
                                        <field name="product_template_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                               readonly="1"/>
                                        <field name="product_variant_id" required="0" readonly="1"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                               attrs="{'readonly': [('product_template_id','in', ('', False))]}"/>
                                        <field name="last_updated_date"/>
                                    </group>
                                    <group>
                                        <field name="lst_price"/>
                                        <field name="shopify_published_variant" invisible="1"/>
                                        <field name="update_shopify_inv"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="shopify_product_template_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        <field name="shopify_inventory_item_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    </group>
                                    <group>
                                        <field name="shopify_product_id"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_product_shopify_search_view" model="ir.ui.view">
            <field name="name">product.product.shopify.search.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                    <filter name="shopify_published_variant" string="Shopify Published"
                            domain="[('shopify_product_product_ids','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_shopify_search_view" model="ir.ui.view">
            <field name="name">product.template.shopify.search.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='consumable']" position="after">
                    <filter name="shopify_published_template" string="Shopify Published Template"
                            domain="[('shopify_product_template_ids','!=',False)]"/>
                </xpath>
            </field>
        </record>


        <record id="shopify_product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_shopify_published_template':1}</field>
        </record>

        <menuitem id="shopify_odoo_product_template_operation_action_menu" name="Products"
                  parent="shopify_odoo_operations_menu"
                  action="shopify_product_template_action"
                  groups="bista_shopify_connector.group_shopify_admin"
                  sequence="1"/>

        <record id="shopify_product_product_action" model="ir.actions.act_window">
            <field name="name">Product Variants</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="bista_shopify_connector.product_product_shopify_search_view"/>
            <field name="context">{'search_default_shopify_published_variant':1}</field>
        </record>


        <menuitem id="shopify_odoo_product_product_operation_action_menu" name="Product Variants"
                  parent="shopify_odoo_operations_menu"
                  groups="bista_shopify_connector.group_shopify_admin"
                  action="shopify_product_product_action"
                  sequence="2"/>

    </data>
</odoo>