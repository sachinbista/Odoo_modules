<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_shipallways_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.shipallways</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='barcode_setting_container']"
                   position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="ship_allways" groups="spring_systems_integration.group_api_user">
                    <div class="o_setting_left_pane">
                        <field name="ship_always_validation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="ship_always_validation" string="Ship Always"/>
                        <div class="text-muted">
                            trigger an api connection using autuentication key when user enters container id in the
                            Receipt.
                        </div>
                        <group attrs="{'invisible': [('ship_always_validation', '=', False)]}">
                            <field name="url" class="oe_inline"/>
                            <field name="token" password="True" class="oe_inline"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>


