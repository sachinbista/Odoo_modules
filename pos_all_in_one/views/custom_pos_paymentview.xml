<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
      <record model="ir.ui.view" id="inherit_view_pos_payment_config_form">
	        <field name="name">inherit.view.pos.payment.config.form</field>
	        <field name="model">res.config.settings</field>
	        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//div[@id='pos_accounting_section']" position="after">
	        		<h2>POS Payment Configuration</h2>
	        		<div class="row mt16 o_settings_container">
	        			<div id="payment_pos" class="col-xs-12 col-md-6 o_setting_box">
	        				
	        				<div class="o_setting_left_pane">
                        <div><field name="allow_pos_invoice"/></div>
                     </div>
                     
                     <div class="o_setting_right_pane">
                         <label for="allow_pos_payment" string='Allow POS Invoice Payment and Validation'/>
                     </div>
	        			</div>

	        			<div id="payment_pos1" class="col-xs-12 col-md-6 o_setting_box">
	        				
	        				<div class="o_setting_left_pane">
                        <div><field name="allow_pos_payment"/></div>
                        </div>
                        
                        <div class="o_setting_right_pane">
                           <label for="allow_pos_payment" string='Allow POS Payments'/>
                        </div>
	        			</div>
	        		</div>
	        	</xpath>

	        	<xpath expr="//div[@id='pos_interface_section']" position="after">
					<h2>Allow Product Variants Configuration</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="allow_product_variants"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="allow_product_variants"/>
							</div>
						</div>

						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('allow_product_variants','!=', True)]}">
							<div class="o_setting_right_pane">
								<label for="allow_selected_close" string="Allow Selected Or Auto Close From Popup"/>
								<div class="content-group">
									<div class="mt16">
										<field name="allow_selected_close" class="o_light_label" widget="radio"/>
									</div>
								</div>
							</div>
						</div>
					</div>
				</xpath>
			
			</field>
	   </record>
	   
	   <record id="inherit_view_payment_form_notes" model="ir.ui.view">
			<field name="name">inherit.view.payment.form.notes</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">
				
				<xpath expr="//form/sheet/group" position="after">
					<group>
						<group string="Payment Notes">
							<field name="notes_pos"/>
						</group>
					</group>
			    </xpath>
			    
			</field>
		</record>
        
    </data>
</odoo>
