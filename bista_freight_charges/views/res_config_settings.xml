<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_freight_charges_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.freight.charges.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='invoicing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="custom_freight_field_section">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="freight_product" class="o_form_label"/>
                        <div class="text-muted">
                            Charges applied on freight product in Orders.
                        </div>
                        <div class="text-muted">
                            <field name="freight_product"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
