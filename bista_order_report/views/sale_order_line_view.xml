<odoo>
    <record id="sale_order_line_list_view" model="ir.ui.view">
        <field name="name">sale.order.line.list.view</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Line">
                <field name="order_id"/>
                <field name="order_partner_id"/>
                <field name="create_date" string="Creation Date"/>
                <field name="date_order"/>
                <field name="user_id"/>
                <field name="commitment_date"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="qty_delivered"/>
                <field name="qty_to_deliver"/>
                <field name="currency_id" invisible="1"/>
                <field name="delivered_subtotal" sum="Total" widget="monetary"/>
                <field name="price_subtotal" string="Subtotal" sum="Total"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="custom_sale_order_line_search_view">
        <field name="name">custom.sale.order.line.search.view</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sales_order_lines']" position="after">
               <filter string="State" name="sale_order_line_state" domain="[('state', '=', 'sale')]"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_action_view" model="ir.actions.act_window">
        <field name="name">Sale Order Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_order_line_list_view"/>
        <field name="domain">[('qty_to_deliver', '>', 0)]</field>
        <field name="context">{"search_default_sale_order_line_state":1}</field>
        <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Sale Order Line.
                </p>
            </field>
    </record>

    <menuitem id="menu_sale_report_main"
            name="Reporting"
            groups="sales_team.group_sale_manager"
            parent="sale.sale_menu_root"
            sequence="40">

        <menuitem id="sale.menu_sale_report"
                name="Reporting"
                action="sale.action_order_report_all"
                groups="sales_team.group_sale_manager"
                sequence="41"/>

        <menuitem name="Sale Order Report"
                      id="sale_order_line_sub_menu"
                      action="sale_order_line_action_view"
                      sequence="41"/>
    </menuitem>
</odoo>