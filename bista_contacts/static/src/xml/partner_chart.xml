<t t-name="bista_contacts.partner_org_chart" owl="1">
    <!-- NOTE: Desidered behaviour:
            The maximun number of people is always 7 (including 'self'). Managers have priority over suburdinates
            Eg. 1 Manager + 1 self = show just 5 subordinates (if availables)
            Eg. 0 Manager + 1 self = show 6 subordinates (if available)

        -->
    <t t-set="partner_count" t-value="0"/>
    <div t-if='managers.length &gt; 0' class="o_org_chart_group_up position-relative">
        <div t-if='managers_more' class="o_org_chart_more pe-3">
            <a href="#" t-att-data-partner-id="managers[0].id" class="o_partner_more_managers d-block bg-100 px-3" t-on-click.prevent="() => this._onPartnerMoreManager(managers[0].id)">
                <i class="fa fa-angle-double-up" role="img" aria-label="More managers" title="More managers"/>
            </a>
        </div>

        <t t-foreach="managers" t-as="partner" t-key="partner_index">
            <t t-set="partner_count" t-value="partner_count + 1"/>
            <t t-call="bista_contacts.partner_org_chart_partner">
                <t t-set="partner_type" t-value="'manager'"/>
            </t>
        </t>
    </div>

    <t t-if="children.length || managers.length" t-call="bista_contacts.partner_org_chart_partner">
        <t t-set="partner_type" t-value="'self'"/>
        <t t-set="partner" t-value="self"/>
    </t>

    <t t-if="!children.length &amp;&amp; !managers.length">
        <div class="alert alert-info" role="alert">
            <p><b>No hierarchy position.</b></p>
            <p>This contact has no parent or subordinate.</p>
            <p>In order to get an contact chart, set a parent and save the record.</p>
        </div>
    </t>

    <div t-if="children.length" t-attf-class="o_org_chart_group_down position-relative #{managers.length &gt; 0 ? 'o_org_chart_has_managers' : ''}">
        <t t-foreach="children" t-as="partner" t-key="partner_index">
            <t t-set="partner_count" t-value="partner_count + 1"/>
            <t t-if="partner_count &lt; 20">
                <t t-call="bista_contacts.partner_org_chart_partner">
                    <t t-set="partner_type" t-value="'sub'"/>
                </t>
            </t>
        </t>

        <t t-if="(children.length + managers.length) &gt; 19">
            <div class="o_org_chart_entry o_org_chart_more d-flex overflow-visible">
                <div class="o_media_left position-relative">
                    <a href="#"
                        t-att-data-partner-id="self.id"
                        t-att-data-partner-name="self.name"
                        class="o_org_chart_show_more o_partner_sub_redirect btn btn-link ps-2"
                        t-on-click.prevent="_onPartnerSubRedirect">See All</a>
                </div>
            </div>
        </t>
    </div>
</t>

<t t-name="bista_contacts.partner_orgchart_partner_popover" owl="1">
    <div class="popover o_org_chart_popup" role="tooltip">
        <div class="tooltip-arrow">

        </div>
        <h3 class="popover-header">
            <div class="d-flex align-items-center">
                <span class="flex-shrink-0" t-att-style='"background-image:url(\"/web/image/res.partner/" + props.partner.id + "/avatar_1024/\")"'/>
                <b class="flew-grow-1"><t t-esc="props.partner.name"/></b>
                <a href="#" class="ms-auto o_partner_redirect" t-att-data-partner-id="props.partner.id" t-on-click.prevent="() => this._onPartnerRedirect(props.partner.id)"><i class="fa fa-external-link" role="img" aria-label='Redirect' title="Redirect"></i></a>
            </div>
        </h3>
        <div class="popover-body">
            <table class="table table-sm table-borderless mb-0">
                <tbody>
                    <tr>
                        <td class="text-end"><b t-esc="props.partner.direct_sub_count"/></td>
                        <td>
                            <a href="#" class="o_partner_sub_redirect" data-type='direct'
                                    t-att-data-partner-name="props.partner.name" t-att-data-partner-id="props.partner.id"
                                    t-on-click.prevent="_onPartnerSubRedirect">
                                <b>Direct subordinates</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-end">
                            <b t-esc="props.partner.indirect_sub_count - props.partner.direct_sub_count"/>
                        </td>
                        <td>
                            <a href="#" class="o_partner_sub_redirect" data-type='indirect'
                                    t-att-data-partner-name="props.partner.name" t-att-data-partner-id="props.partner.id"
                                    t-on-click.prevent="_onPartnerSubRedirect">
                                Indirect subordinates</a>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-end"><b t-esc="props.partner.indirect_sub_count"/></td>
                        <td>
                            <a href="#" class="o_partner_sub_redirect" data-type='total'
                                    t-att-data-partner-name="props.partner.name" t-att-data-partner-id="props.partner.id"
                                    t-on-click.prevent="_onPartnerSubRedirect">
                                Total</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</t>

</templates>
