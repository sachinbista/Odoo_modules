<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bista_contacts_account_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.taxcloud</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="account_taxcloud_right_pane" position="inside">
                <div class="row">
                    <label string="Allow Address Validation" for="allow_address_validation" class="col-lg-3 o_light_label" />
                    <field name="allow_address_validation" class="oe_inline"/>
                </div>
            </div>
        </field>
    </record>

    <record id="bista_contacts_base_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="contacts_setting_container" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label string="Card Completion Fields" for="card_comp_field_ids"/>
                        <field name="card_comp_field_ids"
                               class="oe_inline"
                               widget="many2many_tags"
                               options="{'no_create': True, 'no_open': True}"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_phone_validation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <div>
                            <label string="Allow Phone/Mobile Validation" for="allow_phone_validation"/>
                        </div>
                        <div attrs="{'invisible': [('allow_phone_validation', '=', False)]}">
                            <label string="Phone/Mobile Validation Key" for="phone_validation_key"/>
                            <field name="phone_validation_key" class="oe_inline"
                                   attrs="{'required': [('allow_phone_validation', '=', True)]}"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
