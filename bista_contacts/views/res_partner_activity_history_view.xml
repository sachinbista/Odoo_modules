<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Events -->
    <record id="res_partner_activity_history_view_form" model="ir.ui.view">
        <field name="name">Activity History</field>
        <field name="model">res.partner.activity.history</field>
        <field name="arch" type="xml">
            <form string="Activity History" create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group col="4">
                        <field name="activity_type_id"/>
                        <field name="create_date"/>
                        <field name="date_deadline"/>
                        <field name="summary"/>
                        <field name="user_id"/>
                        <field name="partner_id"/>
                        <field name="source_document" invisible="1"/>
                        <field name="source_model" invisible="1"/>
                        <field name="source_record_id" invisible="1"/>
                        <field name="reference" widget="reference"/>
                    </group>
                    <group>
                        <field name="note"/>
                        <field name="feedback"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_activity_history_view_tree" model="ir.ui.view">
        <field name="name">Activity History</field>
        <field name="model">res.partner.activity.history</field>
        <field name="arch" type="xml">
            <tree string="Activity History" create="0" edit="0">
                <field name="activity_type_id"/>
                <field name="create_date"/>
                <field name="source_document" string="Source Document" optional="hide"/>
                <field name="summary"/>
                <field name="note"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_activity_history_view_filter" model="ir.ui.view">
            <field name="name">res.partner.activity.history.search</field>
            <field name="model">res.partner.activity.history</field>
            <field name="arch" type="xml">
                <search string="Activity History">
                    <field name="activity_type_id"/>
                    <field name="reference"/>
                    <field name="summary"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <separator/>
                    <group expand="0" string="Group By" colspan="16">
                        <filter string="Source Document" name="source_document" context="{'group_by':'source_document'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="res_partner_activity_history_action" model="ir.actions.act_window">
        <field name="name">Activity History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.activity.history</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="res_partner_activity_history_view_filter"/>
        <field name="context">{'search_default_source_document': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create activity history for customer.
          </p>
        </field>
    </record>

    <menuitem id="res_partner_activity_history_menu" name="Activity History"
        action="res_partner_activity_history_action" parent="crm.crm_menu_sales"
        sequence="50"/>

</odoo>
