<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Events -->
    <record id="res_partner_event_view_form" model="ir.ui.view">
        <field name="name">Events</field>
        <field name="model">res.partner.event</field>
        <field name="arch" type="xml">
            <form string="Events">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_event_view_tree" model="ir.ui.view">
        <field name="name">Events</field>
        <field name="model">res.partner.event</field>
        <field name="arch" type="xml">
            <tree string="Events" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_event_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.event</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create an event for customer
          </p>
        </field>
    </record>

    <menuitem id="res_partner_event_menu" name="Events"
        action="res_partner_event_action" parent="contacts.res_partner_menu_config"
        sequence="5"/>

    <record id="res_partner_relation_view_form" model="ir.ui.view">
        <field name="name">Relation</field>
        <field name="model">res.partner.relation</field>
        <field name="arch" type="xml">
            <form string="Relation">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_relation_view_tree" model="ir.ui.view">
        <field name="name">Relation</field>
        <field name="model">res.partner.relation</field>
        <field name="arch" type="xml">
            <tree string="Events" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_relation_action" model="ir.actions.act_window">
        <field name="name">Relation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.relation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> Create an event for customer </p>
        </field>
    </record>

    <menuitem id="res_partner_relation_menu"
              name="Relations"
              action="res_partner_relation_action"
              parent="contacts.res_partner_menu_config"
              sequence="5"/>

</odoo>
