<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherit_edi_shipping" model="ir.ui.view">
        <field name="name">view.stock.picking.form.inherit.edi.shipping</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="edi_data" string="EDI">
                    <group name="group_edi">
                        <group name="group_left_edi">
                            <field name="shipment_identification"/>
                            <field name="bill_of_lading_number"/>
                            <field name="carrier_trans_method_code"/>
                            <field name="carrier_routing"/>
                            <field name="weight_edi"/>
                        </group>
                        <group name="group_right_edi">
                            <field name="all_contacts"/>
                            <field name="contact_name"/>
                            <field name="contact_phone"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="carrier_alpha_code"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="edi_backorder_origin" string="EDI Backorder Origin"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_tree_inherit_edi_shipping" model="ir.ui.view">
        <field name="name">view.stock.move.line.tree.inherit.edi.shipping</field>
        <field name="model">stock.move.line</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_done']" position="before">
                    <field name="ordered_cases" optional="show"/>
                    <field name="done_cases" optional="show"/>
                    <field name="edi_uom" optional="hide"/>
                    <field name="line_sequence_number" optional="hide"/>
                    <field name="consumer_package_code" optional="hide"/>
                    <field name="buyer_part_number" optional="hide"/>
                    <field name="vendor_part_number" optional="hide"/>
                    <field name="part_number" optional="hide"/>
                </xpath>
        </field>
    </record>
</odoo>
