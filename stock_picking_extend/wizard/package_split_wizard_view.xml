<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_extend_wizard_for_package" model="ir.ui.view">
            <field name="name">package.split.wizard.view.form</field>
            <field name="model">package.split.wizard</field>
            <field name="arch" type="xml">

                <form string="Package Split">
                    <group>
                        <group>
                            <field name="product_name" readonly="1"/>
                            <field name="product_quantity" readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity_for_packages"/>
                            <field name="package_quantity"/>
                        </group>
                    </group>
                    <footer>
                        <button name="split_the_packages" string="Put In Pack"
                                type="object"/>
                        <button name="button_reset_put_in_pack" string="Unpack"
                                attrs="{'invisible':[('product_quantity','!=',0)]}"
                                confirm="Are you sure you want to Unpack Packages ?"
                                type="object"/>
                        <button special="cancel" string="Discard" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>