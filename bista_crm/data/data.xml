<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="stock_location_trade_in" model="stock.location">
            <field name="name">Trade In</field>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="trade_in_picking_type" model="stock.picking.type">
            <field name="name">Trade IN - Receipts</field>
            <field name="code">incoming</field>
            <field name="sequence_code">Trade IN</field>
            <field name="use_create_lots">True</field>
            <field name="create_backorder">ask</field>
            <field name="default_location_dest_id" ref="bista_crm.stock_location_trade_in"/>
            <field name="return_picking_type_id" ref="stock.picking_type_out"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="barcode_validation_full">True</field>
        </record>

        <record id="route_trade_in_two_step" model='stock.route'>
            <field name="name">Trade In - 2 Steps</field>
            <field name="sequence">5</field>
            <field name="product_selectable" eval="True"/>
            <field name="warehouse_selectable" eval="True"/>
        </record>

    </data>
</odoo>

