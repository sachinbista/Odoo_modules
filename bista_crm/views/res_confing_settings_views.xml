<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_trade_purchase_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.trade.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <h2>Purchase Trading</h2>
                <div class="row mt16 o_settings_container" name="purchase_trade_setting_container" >
                    <div class="col-12 col-lg-6 o_setting_box" id="trade_account_option">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="trade_account_id" class="col-lg-4 o_light_label"/>
                                        <field name="trade_account_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
