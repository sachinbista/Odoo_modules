<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="wms_report_location_barcode">
            <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                <t t-call="web.html_container">
                    <t t-set="barcode_size" t-value="'width:45.5mm;height:10mm'"/>
                    <div t-foreach="docs" t-as="page_docs" style="padding-top: 25px" class="page article" >
                        <div style="text-align: center; font-size: 0.7em;padding:2px;"><span t-esc="page_docs.name"/></div>
                        <t t-if="page_docs.barcode">
                            <!-- `quiet=0` to remove the left and right margins on the barcode -->
                            <div t-out="page_docs.barcode" style="padding:2px;text-align: center" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': barcode_size}"/>
                            <div class="o_label_name" style="height:1em;background-color: transparent;text-align: center;font-size: 0.5em;padding:1px">
                                <span t-out="page_docs.barcode"/>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </template>

        <record id="action_wms_report_location_barcode" model="ir.actions.report">
            <field name="name">WMS Location Barcode</field>
            <field name="model">stock.location</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bista_wms_reports.wms_report_location_barcode</field>
            <field name="report_file">bista_wms_reports.wms_report_location_barcode</field>
            <field name="print_report_name">'Location - %s' % object.name</field>
            <field name="paperformat_id" ref="product.paperformat_label_sheet_dymo"/>
            <field name="binding_model_id" ref="stock.model_stock_location"/>
            <field name="binding_type">report</field>
        </record>
    </data>   
</odoo>
