<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_import_product_wizard" model="ir.ui.view">
            <field name="name">Import Items Data</field>
            <field name="model">product.data.import</field>
            <field name="arch" type="xml">
                <form string="Import Items Data">
                    <group>
                        <group>
                            <field name="object_name" required="1"/>
                        </group>
                        <group colspan="2" col="4">
                            <field name="file_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="file_to_import" required="True" filename="file_name" style="width: 200px;"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_import" string="Import" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="form_import_item_data" model="ir.actions.act_window">
            <field name="name">Import Items Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.data.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Import Data" id="menu_item_import_action" parent="sale.menu_sale_config"/>
        <menuitem name="Import Data" id="menu_item_data_import_action"
            action="form_import_item_data"
            parent="data_import.menu_item_import_action"
            sequence="2"/>
    </data>
</odoo>
