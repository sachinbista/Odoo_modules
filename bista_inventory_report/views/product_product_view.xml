<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_product_product_form_view" model="ir.ui.view">
            <field name="name">inherit.product.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page name="product_cost_log" string="Product Cost Log"
                          attrs="{'invisible': [('detailed_type', '=', 'service')]}">
                        <field name="s_cost_log">
                            <tree string="Cost Log" editable="bottom">
                                <field name="create_date"/>
                                <field name="s_old_cost"/>
                                <field name="s_new_cost"/>
                                <field name="s_shippment_cost" invisible="1"/>
                                <field name="s_product_tmpl_id" invisible="1"/>
                                <field name="s_user_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="alias_part_no" string="Alias Part Number"
                          attrs="{'invisible': [('detailed_type', '=', 'service')]}">
                        <field name="part_no_ids">
                            <tree string="Part Number" editable="bottom">
                                <field name="customer_id"/>
                                <field name="part_no"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="fabric_info" string="Fabric Information"
                          attrs="{'invisible': [('detailed_type', '=', 'service')]}">
                        <group>
                            <group>
                                <field name="pattern_id"/>
                                <field name="pattern_family_id"/>
                                <field name="color_name_id"/>
                                <field name="color_family_id"/>
                                <field name="base_cloth_id"/>
                                <field name="fabric_content_id"/>
                                <field name="fabric_use_type"/>
                                <field name="uv_rating"/>
                            </group>
                            <group>
                                <field name="horizontal_repeat"/>
                                <field name="vertical_repeat"/>
                                <label for="fabric_width"/>
                                <div>
                                    <field name="fabric_width" class="oe_inline"/>
                                    <span>in
                                    </span>
                                </div>
                                <label for="fabric_weight"/>
                                <div>
                                    <field name="fabric_weight" class="oe_inline"/>
                                    <span>oz/ydÂ²
                                    </span>
                                </div>
                                <field name="cleaning_code_id"/>
                                <field name="abrasion"/>
                                <field name="swatch_skus_id"/>
                                <field name="collection_ids" widget="many2many_tags"/>
                                <field name="prod_long_desc"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="continuity" string="Continuity"
                          attrs="{'invisible': [('detailed_type', '=', 'service')]}">
                        <field name="continuity_ids">
                            <tree string="Continuity" editable="bottom">
                                <field name="contact_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="screens" string="Screens"
                          attrs="{'invisible': [('detailed_type', '=', 'service')]}">
                        <group>
                            <group>
                                <field name="screen_pp1"/>
                                <field name="screen_pp2" attrs="{'invisible': [('screen_pp1', '=', False)]}"/>
                                <field name="screen_pp3" attrs="{'invisible': [('screen_pp2', '=', False)]}"/>
                                <field name="screen_pp4" attrs="{'invisible': [('screen_pp3', '=', False)]}"/>
                                <field name="screen_pp5" attrs="{'invisible': [('screen_pp4', '=', False)]}"/>
                                <field name="screen_pp6" attrs="{'invisible': [('screen_pp5', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="screen_pp7" attrs="{'invisible': [('screen_pp6', '=', False)]}"/>
                                <field name="screen_pp8" attrs="{'invisible': [('screen_pp7', '=', False)]}"/>
                                <field name="screen_pp9" attrs="{'invisible': [('screen_pp8', '=', False)]}"/>
                                <field name="screen_pp10" attrs="{'invisible': [('screen_pp9', '=', False)]}"/>
                                <field name="screen_pp11" attrs="{'invisible': [('screen_pp10', '=', False)]}"/>
                                <field name="screen_pp12" attrs="{'invisible': [('screen_pp11', '=', False)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="msrp"/>
                </xpath>
                <xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
                    <group name="sale">
                        <field name="is_export_stock" invisible="1"/>
                        <group string="Export Stock"
                               name="stock_export"
                               attrs="{'invisible': [('is_export_stock', '=', False)]}">
                            <field name="product_export_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="available_quantity"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

