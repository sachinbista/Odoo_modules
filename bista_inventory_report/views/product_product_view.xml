        <record id="inherit_product_product_tree_view" model="ir.ui.view">
            <field name="name">inherit.product.product.tree.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="pattern_id" optional="hide"/>
                    <field name="pattern_family_id" optional="hide"/>
                    <field name="color_name_id" optional="hide"/>
                    <field name="color_family_id" optional="hide"/>
                    <field name="base_cloth_id" optional="hide"/>
                    <field name="fabric_content_id" optional="hide"/>
                    <field name="fabric_use_type" optional="hide"/>
                    <field name="uv_rating" optional="hide"/>
                    <field name="fabric_width" optional="hide"/>
                    <field name="fabric_weight" optional="hide"/>
                    <field name="cleaning_code_id" optional="hide"/>
                    <field name="abrasion" optional="hide"/>
                    <field name="swatch_skus_id" optional="hide"/>
                    <field name="collection_ids" optional="hide"/>
                    <field name="horizontal_repeat" optional="hide"/>
                    <field name="vertical_repeat" optional="hide"/>
                    <field name="prod_long_desc" optional="hide"/>
                    <field name="msrp" optional="hide"/>
                </xpath>
            </field>
        </record>
