<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="color_family_form_view" model="ir.ui.view">
            <field name="name">color.family.form</field>
            <field name="model">color.family</field>
            <field name="arch" type="xml">
                <form string="Color Family">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="color_family_tree_view" model="ir.ui.view">
            <field name="name">color.family.tree</field>
            <field name="model">color.family</field>
            <field name="arch" type="xml">
                <tree string="Color Family">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="color_family_act_window" model="ir.actions.act_window">
            <field name="name">Color Family</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">color.family</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Color Family.
                </p>
            </field>
        </record>

        <menuitem name="Color Family"
                  id="color_family_sub_menu"
                  parent="bista_inventory_report.fabric_info_menu"
                  action="color_family_act_window"/>
    </data>
</odoo>