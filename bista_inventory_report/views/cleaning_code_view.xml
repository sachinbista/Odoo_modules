<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cleaning_code_form_view" model="ir.ui.view">
            <field name="name">cleaning.code.form</field>
            <field name="model">cleaning.code</field>
            <field name="arch" type="xml">
                <form string="Cleaning Code">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cleaning_code_tree_view" model="ir.ui.view">
            <field name="name">cleaning.code.tree</field>
            <field name="model">cleaning.code</field>
            <field name="arch" type="xml">
                <tree string="Cleaning Code">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="cleaning_code_act_action" model="ir.actions.act_window">
            <field name="name">Cleaning Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cleaning.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Cleaning Code.
                </p>
            </field>
        </record>

        <menuitem name="Cleaning Code"
                  id="cleaning_code_menu"
                  parent="bista_inventory_report.fabric_info_menu"
                  action="cleaning_code_act_action"/>

    </data>
</odoo>