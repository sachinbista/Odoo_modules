<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipping_charge_form" model="ir.ui.view">
        <field name="name">shipping.charge.form</field>
        <field name="model">shipping.charge</field>
        <field name="arch" type="xml">
            <form string="Product Allocation">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="country_id" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Shipping Charge Lines">
                            <field name="shipping_charge_line_ids" widget="one2many">
                                <tree string="Shipping Charge Lines" editable="bottom">
                                    <field name="from_qty"/>
                                    <field name="to_qty"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shipping_charge" model="ir.actions.act_window">
        <field name="name">Shipping Charge Configuration</field>
        <field name="res_model">shipping.charge</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_product_allocation"
              name="Shipping Charge Configuration"
              action="bista_shipping_charge.action_shipping_charge"
              parent="sale.menu_sale_config"
              sequence="20"/>
</odoo>
