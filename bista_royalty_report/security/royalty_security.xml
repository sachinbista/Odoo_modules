<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="module_category_royalty" model="ir.module.category">
            <field name="name">Royalties</field>
            <field name="description">Allows to handle royalty related stuff.</field>
            <field name="sequence">8</field>
        </record>
        <record id="group_royalty_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_royalty"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_royalty_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_royalty"/>
            <field name="implied_ids" eval="[(4, ref('group_royalty_user'))]"/>
        </record>
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_royalty_manager'))]"/>
        </record>
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_royalty_manager'))]"/>
        </record>
    </data>
