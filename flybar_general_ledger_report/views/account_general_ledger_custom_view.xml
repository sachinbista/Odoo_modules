    <record id="account_general_ledger_wizard_view" model="ir.ui.view">
        <field name="name">General Ledger Report</field>
        <field name="model">general.ledger.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="date_from" string="From" required="1" />
                        <field name="date_selection_option"/>
                    </group>
                    <group>
                        <field name="date_to" string="To" required="1" />
                        <field name="company_id" readonly="0"/>
                    </group>
                </group>
                <footer>
                    <button name="create_update_general_ledger" string="Run" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_general_ledger_wizard_action" model="ir.actions.act_window">
        <field name="name">General Ledger Report</field>
        <field name="res_model">general.ledger.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_action_general_ledger" name="General Ledger Detail"
        action="account_general_ledger_wizard_action" parent="account_reports.account_reports_partners_reports_menu" />

</odoo>
