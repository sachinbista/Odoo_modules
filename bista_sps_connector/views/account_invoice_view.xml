<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_move_edi_integration" model="ir.ui.view">
        <field name="name">inherit.account.move.edi.integration</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_info_group']"
                   position="after">
                <group string="EDI Information">
                    <field name="edi_trading_partner_id"/>
                    <field name="edi_config_id"/>
                    <field name="edi_order_number"/>
                    <field name="edi_vendor_number" invisible="0"/>
                    <field name="edi_bt_addr_loc_number" invisible="0"/>
                    <field name="edi_bt_loc_code_qualifier" invisible="0"/>
                    <field name="edi_st_addr_loc_number"  invisible="0"/>
                    <field name="edi_st_loc_code_qualifier" invisible="0"/>
                    <field name="edi_total_line_number" invisible="0"/>
                    <field name="edi_outbound_file_path" invisible="0"/>
                </group>
            </xpath>
            <xpath expr="//button[@name='open_created_caba_entries']" position="after">
                <button type="object"
                    name="action_view_810_records"
                    class="oe_stat_button"
                    icon="fa-file"
                    invisible="rec_810_count == 0" groups="stock.group_stock_user">
                    <field name="rec_810_count" widget="statinfo" string="810 Records"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
