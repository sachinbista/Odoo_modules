<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_stock_picking_edi_integration" model="ir.ui.view">
        <field name="name">inherit.stock.picking.edi.integration</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_infos']"
                   position="after">
                <group string="EDI Information">
                    <field name="edi_trading_partner_id"/>
                    <field name="edi_config_id"/>
                    <field name="edi_order_number"/>
                    <field name="edi_outbound_file_path" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//button[@name='action_detailed_operations']" position="after">
                <button type="object"
                    name="action_view_856_records"
                    class="oe_stat_button"
                    icon="fa-file"
                    invisible="rec_856_count == 0" groups="stock.group_stock_user">
                    <field name="rec_856_count" widget="statinfo" string="856 Records"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
