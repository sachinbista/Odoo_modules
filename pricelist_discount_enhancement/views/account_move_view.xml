<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_invoice_pricelist_enhance_inherit" model="ir.ui.view">
        <field name="name">account.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <label for="pricelist_id" groups="product.group_product_pricelist"/>
                <div groups="product.group_product_pricelist" class="o_row">
                    <field name="pricelist_id" options="{'no_open':True,'no_create': True}"/>
                    <button name="action_update_prices" type="object" string=" Update Prices" help="Recompute all prices based on this pricelist" class="btn-link mb-1 px-0" icon="fa-refresh" confirm="This will update the unit price of all products based on the new pricelist."/>
                </div>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="tax_id" invisible="1"/>
            </xpath>

            <xpath expr="//page[@id='invoice_tab']//field[@name='price_unit']" position="after">
                <field name="original_cost"/>
            </xpath>
        </field>
    </record>

</odoo>