<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_rout_extend_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.dimension</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="inventory_dimension_volume" groups='stock.group_stock_manager'>
                    <div class="o_setting_right_pane">
                        <label for="product_inventory_volume" string="Carton Dimension"/>
                        <div class="text-muted">
                            Carton dimension for product sale route flow.
                        </div>
                        <div class="content-group">
                            <field name="product_inventory_volume" class="o_light_label"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>


