<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sync_inventory_adjustment.report_inventory">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>Stock Inventory # </span>
                            <span t-field="o.name"/>
                        </h2>
                        <div class="row mt-4 mb-4" id="informations">
                            <div class="col-auto col-4 mw-100 mb-2" name="inventory_date">
                                <strong>Date:</strong>
                                <p class="m-0" t-field="o.date"/>
                            </div>
                            <div t-if="o.first_count_user_id" class="col-auto col-4 mw-100 mb-2" name="first_count_user">
                                <strong>First Count User:</strong>
                                <p class="m-0" t-field="o.first_count_user_id.name"/>
                            </div>
                            <div t-if="o.second_count_user_id" class="col-auto col-4 mw-100 mb-2" name="second_count_user">
                                <strong>Second Count User:</strong>
                                <p class="m-0" t-field="o.second_count_user_id.name"/>
                            </div>
                        </div>
                        <t t-set="locations" t-value="o.line_ids.mapped('location_id')"/>
                        <t t-set="theoretical_qty" t-value="0"/>
                        <t t-set="first_count_qty" t-value="0"/>
                        <t t-set="second_count_qty" t-value="0"/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th groups="stock.group_stock_multi_locations"><strong>Location</strong></th>
                                    <th><strong>Product</strong></th>
                                    <th groups="stock.group_production_lot"><strong>Production Lot</strong></th>
                                    <th groups="stock.group_tracking_lot"><strong>Palletize</strong></th>
                                    <th class="text-right" t-if="not o.blind_count"><strong>System Qty</strong></th>
                                    <th class="text-right" t-if="o.state in ('confirm', 'done') or context.get('uid') in o.first_count_user_ids.ids or context.get('uid') not in o.second_count_user_ids.ids"><strong>User Count</strong></th>
                                    <th class="text-right" t-if="not o.skip_threshold and (o.state in ('confirm', 'done') or context.get('uid') in o.second_count_user_ids.ids or context.get('uid') not in o.first_count_user_ids.ids)"><strong>Second Count Qty</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="locations" t-as="location">
                                    <tr t-foreach="o.line_ids.filtered(lambda line: line.location_id.id == location.id)" t-as="line">
                                        <t t-set="theoretical_qty" t-value="theoretical_qty+line.theoretical_qty"/>
                                        <t t-set="first_count_qty" t-value="first_count_qty+line.first_count_qty"/>
                                        <t t-set="second_count_qty" t-value="second_count_qty+line.second_count_qty"/>
                                        <td><span t-esc="location.display_name"/></td>
                                        <td><span t-field="line.product_id"/></td>
                                        <td groups="stock.group_production_lot"><span t-field="line.prod_lot_id"/></td>
                                        <td><span t-field="line.package_id"/></td>
                                        <td class="text-right" t-if="not o.blind_count"><span t-field="line.theoretical_qty"/> <span t-field="line.product_uom_id" groups="uom.group_uom"/></td>
                                        <td class="text-right" t-if="o.state in ('confirm', 'done') or context.get('uid') in o.first_count_user_ids.ids or context.get('uid') not in o.second_count_user_ids.ids"><span t-field="line.first_count_qty"/> <span t-field="line.product_uom_id" groups="uom.group_uom"/></td>
                                        <td class="text-right" t-if="not o.skip_threshold and (o.state in ('confirm', 'done') or context.get('uid') in o.second_count_user_ids.ids or context.get('uid') not in o.first_count_user_ids.ids)"><span t-field="line.second_count_qty"/> <span t-field="line.product_uom_id" groups="uom.group_uom"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <t t-if="o.filter == 'product' and o.product_id and o.state not in ('draft', 'cancel')">
                            <div class="row justify-content-end">
                                <div class="col-5">
                                    <table class="table table-sm table-borderless" style="background-color:#808080; color:white;">
                                        <tr t-if="not o.blind_count">
                                            <td style="background-color:#808080; color:white; border: none;"><strong>Total System Quantity</strong></td>
                                            <td class="text-right" style="background-color:#808080; color:white; border: none;"><span t-esc="theoretical_qty"/> <span t-field="o.product_id.uom_id"/></td>
                                        </tr>
                                        <tr t-if="o.state in ('confirm', 'done') or context.get('uid') in o.first_count_user_ids.ids or context.get('uid') not in o.second_count_user_ids.ids">
                                            <td style="background-color:#808080; color:white; border: none;"><strong>Total User Count Quantity</strong></td>
                                            <td class="text-right" style="background-color:#808080; color:white; border: none;"><span t-esc="first_count_qty"/> <span t-field="o.product_id.uom_id"/></td>
                                        </tr>
                                        <tr t-if="not o.skip_threshold and (o.state in ('confirm', 'done') or context.get('uid') in o.second_count_user_ids.ids or context.get('uid') not in o.first_count_user_ids.ids)">
                                            <td style="background-color:#808080; color:white; border: none;"><strong>Total Second Count Quantity</strong></td>
                                            <td class="text-right" style="background-color:#808080; color:white; border: none;"><span t-esc="second_count_qty"/> <span t-field="o.product_id.uom_id"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
             </t>
         </t>
    </template>
</odoo>
