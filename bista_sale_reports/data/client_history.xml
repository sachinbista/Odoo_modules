<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="client_history_report" model="account.report">
            <field name="name">Client History</field>
            <field name="filter_show_draft" eval="False"/>
            <field name="default_opening_date_filter">this_month</field>
            <field name="filter_date_range" eval="True"/>
            <field name="filter_period_comparison" eval="False"/>
            <field name="filter_partner" eval="True"/>
            <field name="custom_handler_model_id" ref="model_client_history_report_handler"/>
            <field name="column_ids">
                <record id="client_history_ty_sales" model="account.report.column">
                    <field name="name">$ TY Sales</field>
                    <field name="expression_label">ty_sales</field>
                    <field name="figure_type">none</field>
                    <field name="sequence">1</field>
                </record>
                <record id="client_history_ly_sales" model="account.report.column">
                    <field name="name">$ LY Sales</field>
                    <field name="expression_label">ly_sales</field>
                    <field name="figure_type">none</field>
                    <field name="sequence">2</field>
                </record>
                <record id="client_history_inc_dec_ty_ly_sales" model="account.report.column">
                    <field name="name">Inc/(Dec)</field>
                    <field name="expression_label">inc_dec_ty_ly_sales</field>
                    <field name="figure_type">percentage</field>
                    <field name="sequence">3</field>
                </record>
                <record id="client_history_ytd_sales" model="account.report.column">
                    <field name="name">YTD</field>
                    <field name="expression_label">ytd_sales</field>
                    <field name="figure_type">none</field>
                    <field name="sequence">4</field>
                </record>
                <record id="client_history_lytd_sales" model="account.report.column">
                    <field name="name">LYTD</field>
                    <field name="expression_label">lytd_sales</field>
                    <field name="figure_type">none</field>
                    <field name="sequence">5</field>
                </record>
                <record id="client_history_inc_dec_ytd_lytd_sales" model="account.report.column">
                    <field name="name">Inc/(Dec)</field>
                    <field name="expression_label">inc_dec_ytd_lytd_sales</field>
                    <field name="figure_type">none</field>
                    <field name="sequence">6</field>
                </record>
            </field>
        </record>
    </data>
</odoo>

