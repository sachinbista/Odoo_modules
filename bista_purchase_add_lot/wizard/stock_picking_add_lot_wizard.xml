<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_add_lot_wizard_form" model="ir.ui.view">
            <field name="name">stock.picking.add.lot.wizard.form</field>
            <field name="model">stock.picking.add.lot.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Lot Wizard">
                    <field name="_barcode_scanned" widget="barcode_handler"/>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"
                                       widget="many2one_focusout"
                                       context="{'add_lot':picking_id}"
                                       required="1"/>
                                <field name="component_location_id" invisible="1"/>
                                <field name="location_id"
                                       widget="many2one_focusout"
                                       context="{'add_lot':picking_id}"
                                       required="1"/>
                                <field name="from_location_id" invisible="1"/>
                                <field name="barcode" invisible="1"/>
                                <field name="qty_available"/>
                                <field name="picking_id" invisible="1"/>
                                <field name="move_id" invisible="1"/>
                            </group>
                            <field name="add_lot_ids"
                                   options="{'onEnterFocusout': true, 'onBarcodeScannedFocusField': 'qty_done'}">
                                <tree editable="top" create="0">
                                    <field name="location_from_id" invisible="1"/>
                                    <field name="move_id" invisible="1"/>
                                    <field name="product_id"
                                           readonly="1"
                                           force_save="1"/>
                                    <field name="lot_name"
                                           readonly="1"
                                           force_save="1"/>
                                    <field name="location_id"
                                           readonly="1"
                                           force_save="1"/>
                                    <field name="qty_done"/>
                                    <field name="prod_uom_id"
                                           readonly="1"
                                           force_save="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit_lot" string="Submit" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>