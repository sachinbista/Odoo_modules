<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='operations']//button[@name='action_put_in_pack']" position="attributes">
                    <attribute name="attrs">{'invisible':[('state', 'in', ('assigned', 'done'))]}</attribute>
                </xpath>
                <xpath expr="//page[@name='detailed_operations']//button[@name='action_put_in_pack']"
                       position="attributes">
                    <attribute name="attrs">{'invisible':[('state', 'in', ('assigned', 'done'))]}</attribute>
                </xpath>
                <xpath expr="//field[@name='package_level_ids']" position="after">
                    <button class="oe_highlight" name="action_add_lot" type="object" string="Add Lot"
                            attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//field[@name='package_level_ids_details']" position="after">
                    <button class="oe_highlight" name="action_add_lot" type="object" string="Add Lot"
                            attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//button[@name='action_show_details']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="component_location_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
