<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="product_menu_root"
              name="Products"
              active="True"
              web_icon="sale_management,static/description/icon.png"
              sequence="30">
        <menuitem id="product_menu_data_users"
                  name="Products"
                  sequence="30">

            <menuitem id="menu_product_template_action_data_user"
                      action="sale.product_template_action"
                      sequence="10"/>
            <menuitem id="menu_products_data_user"
                      action="product.product_normal_action_sell"
                      groups="product.group_product_variant"
                      sequence="20"/>

            <menuitem id="menu_product_pricelist_main_data_user"
                      name="Pricelists"
                      action="product.product_pricelist_action2"
                      groups="product.group_product_pricelist"
                      sequence="30"/>


        </menuitem>
    </menuitem>

    <record id="product_pricelist_product_data_user_access" model="ir.model.access">
        <field name="name">Access product.pricelist for Product Data User</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="group_id" ref="bista_product_manager.group_product_edit_access"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="product_pricelist_product_data_user_access_item" model="ir.model.access">
        <field name="name">Access product.pricelist.item for Product Data User</field>
        <field name="model_id" ref="product.model_product_pricelist_item"/>
        <field name="group_id" ref="bista_product_manager.group_product_edit_access"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
