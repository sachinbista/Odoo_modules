<?xml version="1.0" encoding="utf-8"?>
<odoo>


     <record id="email_template_account_payment_notification" model="mail.template">
        <field name="name">Account Payment Notification</field>
        <field name="email_from">{{ (object.company_id.partner_id.email) }}</field>
        <field name="subject">{{ object.company_id.name }}Received payment for Toda</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">${body_html}</field>
    </record>
</odoo>
