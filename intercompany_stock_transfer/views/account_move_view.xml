<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_line_filter_intercompany" model="ir.ui.view">
        <field name="name">account.move.line.intercompany</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="product_id"/>
            </xpath>
            <xpath expr="//filter[@name='group_by_account']" position="after">
                <filter string="Company" name="group_by_company" domain="[]" context="{'group_by': 'company_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>