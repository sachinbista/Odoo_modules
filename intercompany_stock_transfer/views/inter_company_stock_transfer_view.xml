<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="inventory_stock_transfer_kanban">
        <field name="name">inter.company.stock.transfer.kanban</field>
        <field name="model">inter.company.stock.transfer</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="transfer_type"/>
                <field name="company_id"/>
                <field name="dest_company_id" attrs="{'invisible': [('transfer_type', '=', 'inter_warehouse')]}"/>
                <field name="warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="scheduled_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><t t-esc="record.name.value"/></span>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <t t-esc="record.transfer_type.value"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <t t-esc="record.scheduled_date.value and record.scheduled_date.value.split(' ')[0] or False"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="inter_company_stock_transfer_view_tree" model="ir.ui.view">
        <field name="name">inter.company.stock.transfer.view.tree</field>
        <field name="model">inter.company.stock.transfer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="transfer_type"/>
                <field name="company_id" string="Src Company"/>
                <field name="dest_company_id" string="Dest Company" attrs="{'invisible': [('transfer_type', '=', 'inter_warehouse')]}"/>
                <field name="scheduled_date"/>
                <field name="warehouse_id" string="Src Warehouse"/>
                <field name="dest_warehouse_id" string="Dest Warehouse"/>
                <field name="exp_arrival_date"/>
                <field name="state"/>
<!--                <field name="accounting_state"/>-->
                <field name="first_entry_date" optional="Show"/>
                <field name="final_entry_date" optional="Show"/>
            </tree>
        </field>
    </record>

    <record id="inter_company_stock_transfer_view" model="ir.ui.view">
        <field name="name">inter.company.stock.transfer.view</field>
        <field name="model">inter.company.stock.transfer</field>
        <field name="arch" type="xml">
            <form string="Resupply Transfer">
                <header>
                    <button name="action_validate" type="object" string="Validate"
                        class="btn-primary" states="draft"
                        groups="stock.group_stock_user"/>
                    <button name="action_cancel" type="object" string="Cancel"
                        class="btn-default" states="draft,in_progress"
                        groups="stock.group_stock_user"/>
                    <button name="action_set_draft" type="object"
                        string="Reset to Draft" class="btn-default" states="cancel"
                        groups="stock.group_stock_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transfer" type="object"
                                class="oe_stat_button" icon="fa-truck"
                                attrs="{'invisible': [('transfer_count', '=', 0)]}">
                            <field name="transfer_count" widget="statinfo" string="Transfers"/>
                        </button>
                        <button name="action_view_journal_entries" type="object"
                                class="oe_stat_button" icon="fa-bars"
                                attrs="{'invisible': [('je_count', '=', 0)]}">
                            <field name="je_count" widget="statinfo" string="Journal Entries"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="transfer_type" required="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                        <group>
                        	<field name="origin" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="scheduled_date"/>
                            <field name="exp_arrival_date"/>
                            <field name="is_single_ship" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" required="1" context="{'all_company': True}"
                                string="Source Company" />
                            <field name="warehouse_id" required="1"
                                context="{'all_warehouse': True, 'company_id': company_id}" string="Source Warehouse" />
                            <field name="parent_location_id" readonly="1" invisible="1"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="goflow_store_id" readonly="1"/>
                        </group>
                        <group>
                            <field style="position:static;" name="dest_company_id"
                                attrs="{'required': [('transfer_type', '=', 'inter_company')],
                                'invisible': [('transfer_type', '!=', 'inter_company')]}"
                                context="{'all_company': True}" />
                            <field name="dest_warehouse_id" required="1" force_save="1"
                                attrs="{'readonly': [('transfer_type', '=', 'internal_resupply')]}"
                                context="{'all_warehouse': True, 'transfer_type': transfer_type, 'dest_company_id': dest_company_id, 'company_id': company_id}" />
                            <field name="final_dest_location_id"
                                domain="[('usage', '=', 'internal')]"
                                attrs="{'invisible': [('transfer_type', '!=', 'internal_resupply')], 'required': [('transfer_type', '=', 'internal_resupply')]}" />
                            <!-- <field name="final_dest_location_id"
                                domain="[('warehouse_id', '=', warehouse_id), ('usage', '=', 'internal')]"
                                attrs="{'invisible': [('transfer_type', '!=', 'internal_resupply')], 'required': [('transfer_type', '=', 'internal_resupply')]}" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="products" string="Operations">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="name" invisible="1"
                                        force_save="1"/>
                                    <field name="product_uom"
                                       options="{'no_open': True, 'no_create': True}"
                                       string="Unit of Measure"
                                       force_save="1"
                                       required="1" readonly="1" optional="Show"/>
                                    <field name="location_id"
                                           invisible="0" string="Location"
                                           context="{'all_warehouse': True,
                                           'warehouse_id': parent.warehouse_id,
                                           'company_id': parent.company_id}"
                                           options="{'no_create': True}"
                                           domain="[('warehouse_id', '=', parent.warehouse_id),('usage', '!=', 'view')]"/>
                                    <field name="package_quant_id" 
                                    	   options="{'no_create': True}"
                                    	   domain="[('location_id', '=', location_id)]"/>
                                    <field name="product_uom_qty" required="1"/>
                                           
                                    <field name="lot_id"
                                           context="{'location_id': location_id,
                                           'product_id': product_id}"
                                           domain="[('product_id', '=', product_id)]"
                                           options="{'no_open': True, 'no_create': True}"
                                           groups="stock.group_production_lot"/>
                                    <!-- <field name="channel_available_qty"/> -->
                                    <field name="package_id" domain="[('product_id','=',product_id)]" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="stock_transfer_id" invisible="1"/>
                                            <field name="product_id"/>
                                            <field name="product_uom_qty"/>
                                            <field name="product_uom"
                                                options="{'no_open': True, 'no_create': True}"
                                                string="Unit of Measure"
                                                force_save="1"
                                                required="1" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="location_id"
                                                   context="{'all_warehouse': True, 'lot_id': lot_id,
                                                   'warehouse_id': parent.warehouse_id, 'company_id': parent.company_id}"
                                                   invisible="1" string="Location" groups="stock.group_production_lot"/>
                                            <field name="lot_id"
                                                   context="{'location_id': location_id, 'product_id': product_id}"
                                                   domain="[('product_id', '=', product_id)]"
                                                   options="{'no_open': True, 'no_create': True}"
                                                   groups="stock.group_production_lot"/>
                                            <field name="package_id" domain="[('product_id','=',product_id)]"/>
                                        </group>
                                    </group>
                                </form>
                            </field>

                        </page>
                        <page name="route" string="Cross-Dock Routes" invisible="1">
                            <field name="crossdock_route_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="transfer_type"/>
                                    <field name="company_id"
                                           context="{'all_company': True}"
                                           string="Source Company"/>
                                    <field name="warehouse_id"
                                           string="Source Warehouse"
                                           context="{'all_warehouse': True, 'company_id': company_id}"/>
                                    <field name="dest_company_id"
                                           context="{'all_company': True}"
                                           attrs="{'required': [('transfer_type', '=', 'inter_company')],
                                           'readonly': [('transfer_type', '!=', 'inter_company')]}"/>
                                    <field name="dest_warehouse_id"
                                           context="{'all_warehouse': True, 'transfer_type': transfer_type, 'dest_company_id': dest_company_id, 'company_id': company_id}"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="stock_transfer_id" invisible="1"/>
                                            <field name="transfer_type"/>
                                            <field name="company_id" context="{'all_company': True}" string="Source Company"/>
                                            <field name="warehouse_id" context="{'all_warehouse': True, 'company_id': company_id}" string="Source Warehouse"/>
                                        </group>
                                        <group>
                                            <field name="dest_company_id" context="{'all_company': True}"
                                           attrs="{'required': [('transfer_type', '=', 'inter_company')],
                                           'readonly': [('transfer_type', '!=', 'inter_company')]}"/>
                                            <field name="dest_warehouse_id" context="{'all_warehouse': True, 'transfer_type': transfer_type, 'dest_company_id': dest_company_id, 'company_id': company_id}"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_intercompany_stock_transfer_kanban" model="ir.ui.view">
        <field name="name">inter.company.stock.transfer.line.kanban</field>
        <field name="model">inter.company.stock.transfer.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" invisible='1'/>
                <field name="product_id"/>
                <field name="product_uom"/>
                <field name="product_uom_qty"/>
                <field name="lot_id"/>
                <field name="location_id"/>
                <field name="package_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><span><field name="product_id"/></span></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="product_uom_qty"/>
                                <field name="product_uom"/>
                                <field name="lot_id"/>
                                <field name="location_id"/>
                                <field name="package_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_cross_dock_route_line_kanban" model="ir.ui.view">
        <field name="name">cross.dock.route.line.kanban</field>
        <field name="model">cross.dock.route.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="company_id"/>
                <field name="warehouse_id"/>
                <field name="dest_company_id"/>
                <field name="dest_warehouse_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_body">
                                <field name="company_id"/>
                                <field name="warehouse_id"/>
                                <field name="dest_company_id"/>
                                <field name="dest_warehouse_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="intercompany_stock_transfer_search_view" model="ir.ui.view">
        <field name="name">inter.company.stock.transfer.search</field>
        <field name="model">inter.company.stock.transfer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="origin"/>
                <field name="sale_order_id"/>
                <filter string="In Progress" name="in_progress_filter" domain="[('state', '=', 'in_progress')]"/>
                <separator/>
                <filter string="Single Ship" name="is_single_ship_filter" domain="[('is_single_ship', '=', True)]"/>
                <separator/>
                <group expand="1" string="Group By">
                	<filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Transfer Type" name="transfer_type" context="{'group_by': 'transfer_type'}"/>
                    <filter string="Company" name="company_groupby"  context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_intercompany_stock_transfer" model="ir.actions.act_window">
        <field name="name">Resupply Transfer</field>
        <field name="res_model">inter.company.stock.transfer</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
        id="menu_intercompany_stock_transfer"
        name="Resupply Transfer"
        action="action_intercompany_stock_transfer"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="25"
        groups="stock.group_stock_manager,stock.group_stock_user"
    />

</odoo>
