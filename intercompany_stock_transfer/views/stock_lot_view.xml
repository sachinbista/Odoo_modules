<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock.action_production_lot_form" model="ir.actions.act_window">
        <field name="context">{'display_complete': True, 'default_company_id': allowed_company_ids[0]}</field>
    </record>

    <record id="caliva_view_production_lot_tree_inherit" model="ir.ui.view">
        <field name="name">caliva.view.lot.tree.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">create_date desc</attribute>
            </xpath>
        </field>
    </record>
    <record id="search_product_lot_filter_inherit" model="ir.ui.view">
        <field name="name">stock.lot.filter.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="filter_domain">
                    [('product_id.product_complete_name', 'ilike', self)]
                </attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_id" string="Product Attributes"
                       filter_domain="[('product_id.product_template_variant_value_ids.name', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>
