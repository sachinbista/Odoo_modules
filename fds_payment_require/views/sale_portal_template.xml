<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sale_order_portal_template_inherit" inherit_id="sale.sale_order_portal_template">
         <xpath expr="//main[@id='sign-dialog']/t[1]" position="replace">
            <t t-call="portal.signature_form">
                <t t-set="call_url" t-value="sale_order.get_portal_url(suffix='/accept')"/>
                <t t-set="default_name" t-value="sale_order.partner_id.name"/>
                <t t-set="default_po" t-value="sale_order.client_order_ref"/>
            </t>
        </xpath>
    </template>
</odoo>
