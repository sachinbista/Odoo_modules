<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="web.sign_name_and_signature">
        <t t-jquery="div.o_web_sign_name_group" t-operation="before">
            <div class="o_web_sign_po_group">
                <label class="col-form-label" t-att-for="'o_web_sign_po_input_' + widget.htmlId">Customer PO</label>
                <input type="text" name="default_po" t-att-id="'o_web_sign_po_input_' + widget.htmlId"
                       class="o_web_sign_po_input form-control" t-att-value="widget.defaultPo"
                       placeholder="Type your PO to sign" required=""/>
            </div>
        </t>
    </t>
</templates>


