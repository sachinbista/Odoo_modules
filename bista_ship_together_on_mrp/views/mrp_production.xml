<odoo>

    <record id="mrp_production_form_view_so_ship_together" model="ir.ui.view">
        <field name="name">mrp_production_form_view_so_ship_together</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="ship_together"/>
            </xpath>
        </field>
    </record>


    <record id="mrp_production_tree_view_so_ship_together" model="ir.ui.view">
        <field name="name">mrp_production_tree_view_so_ship_together</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="ship_together"/>
            </xpath>
        </field>
    </record>


    <record id="view_mrp_production_work_order_search_so_ship_together" model="ir.ui.view">
        <field name="name">view_mrp_production_work_order_search_so_ship_together</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="ship_together"/>
            </xpath>
        </field>
    </record>

</odoo>
