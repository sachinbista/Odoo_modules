<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_packaging_view_stock_quant_tree_editable" model="ir.ui.view">
		<field name="name">stock.quant.tree.editable.view.inherited</field>
		<field name="model">stock.quant</field>
		<field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_uom_id']" position="after">
				<field name="product_packaging_id" options="{'no_create':True,'no_create_edit': True}"/>
				<field name="packaging_qty"/>
			</xpath>
		</field>
	</record>

	<record id="product_packaging_view_stock_quant_tree_inventory_editable" model="ir.ui.view">
		<field name="name">stock.quant.tree.editable.view.inherited</field>
		<field name="model">stock.quant</field>
		<field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_uom_id']" position="after">
				<field name="product_packaging_id" options="{'no_create':True,'no_create_edit': True}"/>
				<field name="packaging_qty"/>
			</xpath>
		</field>
	</record>
</odoo>