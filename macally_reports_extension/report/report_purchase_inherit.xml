<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">macally_reports_extension.external_layout_inherit</attribute>
        </xpath>
        <xpath expr="//t[@t-set='address']/div" position="before">
            <strong>Vendor:</strong>
        </xpath>
<!--         <xpath expr="//t[@t-set='information_block']/div" position="attributes">-->
<!--             <attribute name="style">margin-top:10%;</attribute>-->

<!--         </xpath>-->
<!--         <xpath expr="//t[@t-set='address']/div" position="attributes">-->
<!--             <attribute name="style">margin-top:10%;</attribute>-->
<!--         </xpath>-->
        <xpath expr="//div[@id='informations']/div[1]" position="replace"/>
        <xpath expr="//div[@id='informations']/div[@t-if='o.partner_ref']" position="replace"/>

        <xpath expr="//div[@id='informations']/div[1]" position="replace">
            <div t-if="o.state in ['purchase','done'] and o.date_approve" class="col-2 bm-2">
                <strong>Order Date:</strong>
                <p t-field="o.date_approve" class="m-0" t-options='{"widget": "date"}'/>
            </div>
        </xpath>
        <xpath expr="//div[@id='informations']/div[@t-elif='o.date_order']/p[@t-field='o.date_order']" position="attributes">
            <attribute name="t-options">{"widget": "date"}</attribute>
        </xpath>
        <xpath expr="//div[@id='informations']/div[2]" position="after">
            <div t-if="o.ship_via_id.name" class="col-2">
                <strong>Ship Via:</strong>
                <p t-field="o.ship_via_id.name" class="m-0"/>
            </div>
            <div t-if="o.fob" class="col-2">
                <strong>FOB:</strong>
                <p t-field="o.fob" class="m-0"/>
            </div>
             <div t-if="o.date_planned" class="col-2">
                <strong>Req Ship Date:</strong>
                <p t-field="o.date_planned" class="m-0" t-options='{"widget": "date"}'/>
            </div>
            <div t-if="o.vendor_payment_terms_id.name" class="col-3">
                <strong>Terms:</strong>
                <p t-field="o.vendor_payment_terms_id.name" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//table" position="replace">
            <table class="" style="width:100%;">
                <thead style="display: table-row-group">
                    <tr style="background-color:#D3D3D3;">
                        <th name="th_sku" class="text-center" style="padding:4px;border:1px solid black;">
                            <strong>Item Number</strong>
                        </th>
                        <th name="th_description" class="text-center" style="padding:4px;border:1px solid black;">
                            <strong>Description</strong>
                        </th>
                        <th name="th_quantity" class="text-center" style="padding:4px;border:1px solid black;">
                            <strong>Qty</strong>
                        </th>
                        <th name="th_price_unit" class="text-center" style="padding:4px;border:1px solid black;">
                            <strong>Unit Price</strong>
                        </th>
                        <th name="th_subtotal" class="text-center" style="padding:4px;border:1px solid black;">
                            <strong>Amount</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td id="product_sku" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.product_id.default_code"/>
                                </td>

                                <td id="product" style="border:1px solid black; padding:4px;">

                                    <span t-esc="line.product_name()"/>
                                </td>
                                <td class="text-end" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    <span t-if="line.product_packaging_id">
                                        (
                                        <span t-field="line.product_packaging_qty" t-options='{"widget": "integer"}'/>
                                        <span t-field="line.product_packaging_id"/>)
                                    </span>
                                </td>
                                <td class="text-end" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-end" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note" style="border:1px solid black; padding:4px;">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-end">
                                <td colspan="99" id="subtotal" style="border:1px solid black; padding:4px;">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>
        <xpath expr="//div[@id='total']" position="attributes">
            <attribute name="style">margin-top:5%;</attribute>
        </xpath>

    </template>
</odoo>