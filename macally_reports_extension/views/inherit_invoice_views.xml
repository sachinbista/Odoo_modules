<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <label for="ref" string="Customer PO Number"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                <field name="ref" nolabel="1"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
            </xpath>
            <xpath expr="//field[@name='tax_cash_basis_origin_move_id']" position="after">
                <field name="invoice_origin" invisible="move_type == 'out_invoice'"/>
            </xpath>
            <xpath expr="//field[@name='invoice_origin']" position="attributes">
                <attribute name="string">Source Document</attribute>
            </xpath>
            <xpath expr="//group[@name='sale_info_group']/field[@name='ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='sale_info_group']/label[@for='ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='due_date']" position="after">
                <field name="invoice_date_due"
                       invisible="not invoice_payment_term_id or (invoice_payment_term_id and state != 'posted')"
                       readonly="state in ['cancel', 'posted']"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_form_inherit_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="attributes">
                <attribute name="string">Customer PO Number</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="client_order_ref" position="move"/>
            </xpath>
        </field>
    </record>
</odoo>