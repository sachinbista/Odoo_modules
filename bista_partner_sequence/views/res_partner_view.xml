<odoo>
    <data>
        <record id="inherit_res_partner_form" model="ir.ui.view">
            <field name="name">inherit.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]/field[@name='company_type']" position='before'>
                    <h1>
                        <field name="partner_reference_no" readonly="1"/>
                    </h1>
                </xpath>
            </field>
        </record>

        <record id="view_partner_filter_inherit" model="ir.ui.view">
        <field name="name">view.partner.filter.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="filter_domain">['|', '|', '|', '|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self), ('vat', 'ilike', self), ('company_registry', 'ilike', self), ('partner_reference_no', 'ilike', self)]
                </attribute>
            </xpath>
        </field>
    </record>

    </data>
</odoo>