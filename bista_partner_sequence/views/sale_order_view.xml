<odoo>
    <data>
        <record id="inherit_sale_order_form" model="ir.ui.view">
            <field name="name">inherit.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position='attributes'>
                    <attribute name="context">{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'res_partner_sequence': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>