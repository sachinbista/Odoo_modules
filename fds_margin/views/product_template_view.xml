<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_fds_margin_exclude">
        <field name="name">product.template.form.margin</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='purchase_ok']" position="after">
                <span class="d-inline-block">
                    <field name="exclude_margin"/>
                    <label for="exclude_margin"/>
                </span>
            </xpath>
        </field>
    </record>

</odoo>