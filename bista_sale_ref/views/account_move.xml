<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_bista_go_flow" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='other_tab']/group/group[@name='accounting_info_group']//field[@name='company_id']" position="before">
                <field name="sale_ref_id"
                   attrs="{'readonly': [('sale_ref_readonly', '=', True)]}"/>
                <field name="sale_ref_readonly" invisible="1"/>
            </xpath>

            <xpath expr="//page[@id='other_tab']/group/group[@name='sale_info_group']//field[@name='invoice_user_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('sale_ref_readonly', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>