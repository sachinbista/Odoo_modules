<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_main">
        <style>
            td, th {
                padding: 10px !important;
            }
            td {
                font-weight: lighter !important;
            }
            .note {
                background: #DDDDDD !important;
                font-weight: bold !important;
            }
            tbody td {
                padding: 4px !important;
            }
        </style>
        <div class="oe_structure"/>

        <!-- Section 1 -->
        <div class="row" style="margin-bottom: 10px; padding-bottom: 5px">
            <div class="col-5">
                <table class="table table-bordered"  t-if="doc.partner_invoice_id">
                    <thead>
                        <th style="background: lightgrey; text-align: left;">Bill To:</th>
                    </thead>
                    <tbody>
                        <tr><td><div t-esc="doc.partner_invoice_id.name"/> </td></tr>
                        <tr><td><div t-field="doc.partner_invoice_id.street"/> </td></tr>
                        <tr t-if="doc.partner_invoice_id.street2"><td><div t-field="doc.partner_invoice_id.street2"/> </td></tr>
                        <tr><td><t t-esc='" ".join([doc.partner_invoice_id.city or "", doc.partner_invoice_id.state_id.name or "", doc.partner_invoice_id.zip or ""])'/> </td></tr>
                        <tr><td><div t-field="doc.partner_invoice_id.country_id"/> </td></tr>
                        <tr  t-if="doc.partner_invoice_id.phone">
                            <td>
                                <div>
                                    <span class="fa fa-phone"/>
                                    <span t-field="doc.partner_invoice_id.phone"/>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-2"></div>
            <div class="col-5">
                <table class="table table-bordered"  t-if="doc.partner_shipping_id">
                    <thead>
                        <th style="background: lightgrey; text-align: left;">Delivery Address:</th>
                    </thead>
                    <tbody>
                        <tr><td><div t-esc="doc.partner_shipping_id.name"/> </td></tr>
                        <tr><td><div t-field="doc.partner_shipping_id.street"/> </td></tr>
                        <tr t-if="doc.partner_shipping_id.street2"><td><div t-field="doc.partner_shipping_id.street2"/> </td></tr>
                        <tr><td><t t-esc='" ".join([doc.partner_shipping_id.city or "", doc.partner_shipping_id.state_id.name or "", doc.partner_shipping_id.zip or ""])'/> </td></tr>
                        <tr><td><div t-field="doc.partner_shipping_id.country_id"/> </td></tr>
                        <tr  t-if="doc.partner_shipping_id.phone">
                            <td>
                                <div>
                                    <span class="fa fa-phone"/>
                                    <span t-field="doc.partner_shipping_id.phone"/>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Section 2 -->
        <div>  
            <span><strong>PO#/Job Name: </strong></span>
            <span> <t t-esc="doc.client_order_ref"/> </span>
        </div>

        <!-- Section 3 -->
        <div class="row mt-2">
            <div class="col-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="background: lightgrey;">Sales Rep</th>
                            <th style="background: lightgrey;">Payment Terms</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> <span t-field="doc.user_id" /> </td>
                            <td> <span t-field="doc.payment_term_id" /> </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-7"></div>
        </div>
        
    </template>

    <!-- Sale order -->
    <template id="report_saleorder_document_extension" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <div class="page">

                    <t t-call="fds_reports.sale_order_main" />

                    <!-- Section data -->
                    <div class="mt-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background: lightgrey;">
                                    <th>DESCRIPTION</th>
                                    <th>QUANTITY</th>
                                    <th>UNIT PRICE</th>
                                    <th>UNIT AMOUNT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                            <td class="text-center"><span t-field="line.price_unit"  t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/></td>
                                            <td class="text-center"><span t-field="line.price_subtotal"/></td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line"  colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="3" class="text-end">UNTAXED AMOUNT</td>
                                    <td class="text-center"> <span t-field="doc.amount_total"/> </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end">TAXES</td>
                                    <td class="text-center"> <span t-field="doc.amount_tax"/> </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end" style="background: lightgrey;">TOTAL</td>
                                    <td class="text-center"> <span t-field="doc.amount_total"/> </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Section 5 -->
                    <div class="mt-3">
                        <strong>Terms and Condition:</strong>
                        <p t-if="doc.note" class="mt-0" t-field="doc.note"/>
                    </div>
                    <hr/>

                    <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>
                </div>
                
            </t>
        </xpath>
    </template>

    <!-- Sale order Company 2 -->
    <record id="action_report_saleorder_fds" model="ir.actions.report">
        <field name="name">FDS Sale Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale.report_saleorder</field>
        <field name="report_file">sale.report_saleorder</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'FDS Quotation - %s' % (object.name)) or 'FDS Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>


    <!-- Materials List -->
    <template id="report_saleorder_materials_list_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                
                <t t-call="fds_reports.sale_order_main" />

                <!-- Section data -->
                <div class="mt-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr style="background: lightgrey;">
                                <th>DESCRIPTION</th>
                                <th>QUANTITY</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td><span t-field="line.name"/></td>
                                        <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line"  colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Section 5 -->
                <div class="mt-3">
                    <strong>Terms and Condition:</strong>
                    <p t-if="doc.note" class="mt-0" t-field="doc.note"/>
                </div>
                <hr/>

                <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                    <div class="offset-8 text-center">
                        <p t-field="doc.signed_by"/>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <template id="report_saleorder_materials_list">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="fds_reports.report_saleorder_materials_list_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_saleorder_matials_list" model="ir.actions.report">
        <field name="name">Materials List</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fds_reports.report_saleorder_materials_list</field>
        <field name="report_file">fds_reports.report_saleorder_materials_list</field>
        <field name="print_report_name">'Materials List - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
