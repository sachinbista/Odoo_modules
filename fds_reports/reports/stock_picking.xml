<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Delivery Slip -->
    <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o._get_report_lang())" />
                <t t-set="partner" t-value="o.partner_id or (o.move_ids and o.move_ids[0].partner_id) or False"/>

                <div class="page">
                    <style>
                        td, th {
                            padding: 10px !important;
                        }
                        td {
                            font-weight: lighter !important;
                        }
                        .note {
                            background: #DDDDDD !important;
                            font-weight: bold !important;
                        }
                        tbody td {
                            padding: 4px !important;
                        }
                    </style>
                    <div class="oe_structure"/>

                    <!-- Section 1 -->
                    <div class="row" style="margin-bottom: 10px; padding-bottom: 5px">
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.sale_id and o.sale_id.partner_invoice_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Bill To:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc=" o.sale_id.partner_invoice_id.name"/> </td></tr>
                                    <tr><td><div t-field=" o.sale_id.partner_invoice_id.street"/> </td></tr>
                                    <tr t-if=" o.sale_id.partner_invoice_id.street2"><td><div t-field=" o.sale_id.partner_invoice_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([ o.sale_id.partner_invoice_id.city or "",  o.sale_id.partner_invoice_id.state_id.name or "",  o.sale_id.partner_invoice_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field=" o.sale_id.partner_invoice_id.country_id"/> </td></tr>
                                    <tr  t-if=" o.sale_id.partner_invoice_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field=" o.sale_id.partner_invoice_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.partner_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Delivery Address:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc="o.partner_id.name"/> </td></tr>
                                    <tr><td><div t-field="o.partner_id.street"/> </td></tr>
                                    <tr t-if="o.partner_id.street2"><td><div t-field="o.partner_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([o.partner_id.city or "", o.partner_id.state_id.name or "", o.partner_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field="o.partner_id.country_id"/> </td></tr>
                                    <tr  t-if="o.partner_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field="o.partner_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Section 2 -->
                    <div>  
                        <span><strong>PO#/Job Name: </strong></span>
                        <span> <t t-esc="o.customer_po_number"/> </span>
                    </div>

                    <!-- Section 3 -->
                    <div class="row mt-2">
                        <div class="col-5">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="background: lightgrey;">Sales Rep</th>
                                        <th style="background: lightgrey;" t-if="o.sale_id">Payment Terms</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <span t-field="o.sale_user_id" /> </td>
                                        <td t-if="o.sale_id"> <span t-field="o.sale_id.payment_term_id" /> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5">  
                            <span><strong>Ship Date: </strong></span>
                            <t t-if="o.state == 'done'">
                                <span t-field="o.date_done"/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <span t-field="o.scheduled_date"/>
                            </t>
                        </div>
                    </div>

                    <!-- Section data -->
                    <div class="mt-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background: lightgrey;">
                                    <th>DESCRIPTION</th>
                                    <th>QUANTITY ORDERED</th>
                                    <th>QUANTITY DELIVERED</th>
                                    <th>QUANTITY REMAINING</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_box_pallet_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.description_picking"/></td>
                                        <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                        <td class="text-center"><span t-field="line.qty_done"/></td>
                                        <td class="text-center"><span t-esc="line.product_uom_qty - line.qty_done"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <!-- Section 5 -->
                    <div class="mt-3">
                        <strong>Notes:</strong>
                        <p t-if="o.note" class="mt-0" t-field="o.note"/>
                    </div>
                    <hr/>
                    <div class="mt-1">
                         <p class="mt-0">
                            All shortages or damage must be noted upon delivery. FDS will deliver all materials curbside unless
                            otherwise noted. The Purchaser is responsible for adequate access to delivery location and assumes
                            liability for damage to property or quipment when trucks or forklift are required to leave public streets,
                            including but not limited to damage to concrete pads, lawns,m curbing, etc. Deliveries requiring a forklift,
                            hand unloading, or other special requirements must be noted on the original sales oder and may be,
                            subject to additional charges.
                        </p>
                    </div>
                    <hr/>

                    <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="o.signed_by"/>
                        </div>
                    </div>


                </div>        
            </t>
        </xpath>
    </template>

