                            <span><strong>Carrier Type: </strong></span>
                            <span t-field="o.carrier_id"/>
                        </div>
                    </div>

                    <!-- Section data -->
                    <div class="mt-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background: lightgrey;">
                                    <th>DESCRIPTION</th>
                                    <th>QUANTITY</th>
                                    <th># Boxes/Pallets</th>
                                    <th># Looses</th>
                                    <th>PICKED</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_box_pallet_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.description_picking"/></td>
                                        <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                        <td class="text-center"><span t-field="line.box_and_pallet"/></td>
                                        <td class="text-center"><span t-field="line.loose"/></td>
                                        <td class="text-center"><span t-if="line.qty_done" t-field="line.qty_done"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>        
            </t>
        </t>
    </template>
    <template id="report_pick_ticket_fds">
        <t t-foreach="docs" t-as="o">
            <t t-call="fds_reports.report_pick_ticket_document_fds" t-lang="o._get_report_lang()"/>
        </t>
    </template>
    <record id="action_report_pick_ticket_fds" model="ir.actions.report">
        <field name="name">FDS Pick Ticket</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fds_reports.report_pick_ticket_fds</field>
        <field name="report_file">fds_reports.report_pick_ticket_fds</field>
        <field name="print_report_name">'FDS Pick Ticket  - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
