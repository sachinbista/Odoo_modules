<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_commercial_invoice_document_fds">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o._get_report_lang())" />
                <t t-set="partner" t-value="o.partner_id or (o.move_ids and o.move_ids[0].partner_id) or False"/>

                <div class="page">
                    <style>
                        td, th {
                            padding: 10px !important;
                        }
                        td {
                            font-weight: lighter !important;
                        }
                        .note {
                            background: #DDDDDD !important;
                            font-weight: bold !important;
                        }
                        tbody td {
                            padding: 4px !important;
                        }
                    </style>
                    <div class="oe_structure"/>

                    <!-- Section 1 -->
                    <div class="row">
                        <div class="col-7"></div>
                        <div class="col-5">
                            <table class="table">
                                <tr>
                                    <td style="background: lightgrey; text-align: left;">Country of Origin for all items: </td>
                                    <td>United States</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 10px; padding-bottom: 5px" t-if="o.sale_id">
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.sale_id.partner_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Bill To:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc="o.sale_id.partner_id.name"/> </td></tr>
                                    <tr><td><div t-field="o.sale_id.partner_id.street"/> </td></tr>
                                    <tr t-if="o.sale_id.partner_id.street2"><td><div t-field="o.sale_id.partner_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([o.sale_id.partner_id.city or "", o.sale_id.partner_id.state_id.name or "", o.sale_id.partner_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field="o.sale_id.partner_id.country_id"/> </td></tr>
                                    <tr  t-if="o.sale_id.partner_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field="o.sale_id.partner_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.sale_id.partner_shipping_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Delivery Address:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc="o.sale_id.partner_shipping_id.name"/> </td></tr>
                                    <tr><td><div t-field="o.sale_id.partner_shipping_id.street"/> </td></tr>
                                    <tr t-if="o.sale_id.partner_shipping_id.street2"><td><div t-field="o.sale_id.partner_shipping_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([o.sale_id.partner_shipping_id.city or "", o.sale_id.partner_shipping_id.state_id.name or "", o.sale_id.partner_shipping_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field="o.sale_id.partner_shipping_id.country_id"/> </td></tr>
                                    <tr  t-if="o.sale_id.partner_shipping_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field="o.sale_id.partner_shipping_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                        
                    <!-- Section 2 -->
                    <div>  
                        <span><strong>PO#/Job Name: </strong></span>
                        <span> <t t-esc="o.customer_po_number"/> </span>
                    </div>

                    <!-- Section 3 -->
                    <div class="row mt-2">
                        <div class="col-5">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="background: lightgrey;">Sales Rep</th>
                                        <th style="background: lightgrey;" t-if="o.sale_id">Payment Terms</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <span t-field="o.sale_user_id" /> </td>
                                        <td t-if="o.sale_id"> <span t-field="o.sale_id.payment_term_id" /> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <t t-if="o.sale_id">
                        <t t-set="sale_order" t-value="o.sale_id"/>
                        <t t-set="product_ids" t-value="o.move_box_pallet_ids.mapped('product_id')"/>
                        <t t-set="total" t-value="0"/>
                        <t t-set="taxed_amount" t-value="0"/>
                        <t t-set="untaxed_amount" t-value="0"/>
                        
                        <!-- Data section -->
                        <div class="mt-4">
                            <table class="table table-bordered">
                                <thead>
                                    <tr style="background: lightgrey;">
                                        <th>DESCRIPTION</th>
                                        <th>QUANTITY</th>
                                        <th>UNIT PRICE</th>
                                        <th>AMOUNT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="sale_order.order_line.filtered(lambda l: l.product_id in product_ids)" t-as="line">
                                        <t t-set="total" t-value="total + line.price_total"/>
                                        <t t-set="taxed_amount" t-value="taxed_amount + line.price_tax"/>
                                        <t t-set="untaxed_amount" t-value="untaxed_amount + line.price_subtotal"/>
                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td><span t-field="line.name"/></td>
                                                <t t-set="shipped_qty" t-value="o.move_box_pallet_ids.filtered(lambda move: move.product_id == line.product_id)[0].qty_done"/>
                                                <td class="text-center"><span t-esc="shipped_qty"/></td>
                                                <td class="text-center"><span t-field="line.price_unit"  t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/></td>
                                                <td class="text-center"><span t-esc="shipped_qty * line.price_unit" t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/></td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td name="td_section_line"  colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="3" class="text-end">UNTAXED AMOUNT</td>
                                        <td class="text-center"> <span t-esc="untaxed_amount" t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/> </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end">TAXES</td>
                                        <td class="text-center"> <span t-esc="taxed_amount" t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/> </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end" style="background: lightgrey;">TOTAL</td>
                                        <td class="text-center"> <span t-esc="total" t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/> </td>
                                    </tr>
                                    <t t-foreach="o.sale_id.invoice_ids" t-as="invoice">
                                        <t t-set="payments_vals" t-value="invoice.sudo().invoice_payments_widget and invoice.sudo().invoice_payments_widget['content'] or []"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <t  t-if="payment_vals['is_exchange'] == 0">
                                                <tr>
                                                    <td colspan="3" class="text-end">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></td>
                                                    <td class="text-center"> </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                    <tr>
                                        <td colspan="3" class="text-end" style="background: lightgrey;">Currency</td>
                                        <td class="text-center"> <span t-field="sale_order.currency_id"/> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Section 5 -->
                        <div class="mt-3">
                            <strong>Terms and Condition:</strong>
                            <p t-if="o.sale_id.note" class="mt-0" t-field="o.sale_id.note"/>
                        </div>
                        <hr/>

                    </t>
                    <t t-else="">
                        <div> <h4>No Commercial Invoice Lines Found!.</h4> </div>
                    </t>


                    <hr class="mt-4"/>
                    <div class="row">                
                        <div class="col-6">
                            <div class="row">
                                <div style="font-size: 14px;" class="col-2">Signed: </div>
                                <div class="col-10" style="border-bottom: 1px solid #938686; width: 210px; margin-left: 5px;"></div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div style="font-size: 14px" class="col-2">Date: </div>
                                <div class="col-10" style="border-bottom: 1px solid #938686; width: 210px; margin-left: 5px; display: inline-block;"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">                
                        <div class="col-6">
                            <div class="row">
                                <div style="font-size: 14px;" class="col-2">Name: </div>
                                <div class="col-10" style="border-bottom: 1px solid #938686; width: 210px; margin-left: 5px;"></div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div style="font-size: 14px" class="col-2">Title: </div>
                                <div class="col-10" style="border-bottom: 1px solid #938686; width: 210px; margin-left: 5px; display: inline-block;"></div>
                            </div>
                        </div>
                    </div>

                </div>        
            </t>
        </t>
    </template>
    <template id="report_commercial_invoice_fds">
        <t t-foreach="docs" t-as="o">
            <t t-call="fds_reports.report_commercial_invoice_document_fds" t-lang="o._get_report_lang()"/>
        </t>
    </template>
    <record id="action_report_commercial_invoice_fds" model="ir.actions.report">
        <field name="name">Commercial Invoice</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fds_reports.report_commercial_invoice_fds</field>
        <field name="report_file">fds_reports.report_commercial_invoice_fds</field>
        <field name="print_report_name">'FDS Commercial_invoice  - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
