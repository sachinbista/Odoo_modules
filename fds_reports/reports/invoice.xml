<odoo>
    <template id="report_invoice_document_fds_reports" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
                
                <div class="page">
                    <style>
                        td, th {
                            padding: 10px !important;
                        }
                        td {
                            font-weight: lighter !important;
                        }
                        .note {
                            background: #DDDDDD !important;
                            font-weight: bold !important;
                        }
                        tbody td {
                            padding: 4px !important;
                        }
                    </style>
                    <div class="oe_structure"/>

                    <!-- Section 1 -->
                    <div class="row" style="margin-bottom: 10px; padding-bottom: 5px">
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.partner_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Bill To:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc="o.partner_id.name"/> </td></tr>
                                    <tr><td><div t-field="o.partner_id.street"/> </td></tr>
                                    <tr t-if="o.partner_id.street2"><td><div t-field="o.partner_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([o.partner_id.city or "", o.partner_id.state_id.name or "", o.partner_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field="o.partner_id.country_id"/> </td></tr>
                                    <tr  t-if="o.partner_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field="o.partner_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5">
                            <table class="table table-bordered"  t-if="o.partner_shipping_id">
                                <thead>
                                    <th style="background: lightgrey; text-align: left;">Delivery Address:</th>
                                </thead>
                                <tbody>
                                    <tr><td><div t-esc="o.partner_shipping_id.name"/> </td></tr>
                                    <tr><td><div t-field="o.partner_shipping_id.street"/> </td></tr>
                                    <tr t-if="o.partner_shipping_id.street2"><td><div t-field="o.partner_shipping_id.street2"/> </td></tr>
                                    <tr><td><t t-esc='" ".join([o.partner_shipping_id.city or "", o.partner_shipping_id.state_id.name or "", o.partner_shipping_id.zip or ""])'/> </td></tr>
                                    <tr><td><div t-field="o.partner_shipping_id.country_id"/> </td></tr>
                                    <tr  t-if="o.partner_shipping_id.phone">
                                        <td>
                                            <div>
                                                <span class="fa fa-phone"/>
                                                <span t-field="o.partner_shipping_id.phone"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    
                    <!-- Section 2 -->
                    <div>  
                        <span><strong>PO#/Job Name: </strong></span>
                        <span  t-field="o.customer_po_number"/>
                    </div>

                    <!-- Section 3 -->
                    <div class="row mt-2">
                        <div class="col-5">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="background: lightgrey;">Sales Rep</th>
                                        <th style="background: lightgrey;">Payment Terms</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <span t-field="o.invoice_user_id" /> </td>
                                        <td> <span t-field="o.invoice_payment_term_id" /> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-7"></div>
                    </div>

                    <!-- Section data -->
                    <div class="mt-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background: lightgrey;">
                                    <th>DESCRIPTION</th>
                                    <th>QUANTITY</th>
                                    <th>UNIT PRICE</th>
                                    <th>UNIT AMOUNT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <td><span t-field="line.name"/></td>
                                        <td class="text-center"><span t-field="line.quantity"/></td>
                                        <td class="text-center"><span t-field="line.price_unit"  t-options='{"widget": "float", "precision": 2, "nogrouping": True}'/></td>
                                        <td class="text-center"><span t-field="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="3" class="text-end">UNTAXED AMOUNT</td>
                                    <td class="text-center"> <span t-field="o.amount_total"/> </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end">TAXES</td>
                                    <td class="text-center"> <span t-field="o.amount_tax"/> </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end">TOTAL</td>
                                    <td class="text-center"> <span t-field="o.amount_total"/> </td>
                                </tr>
                                <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <t  t-if="payment_vals['is_exchange'] == 0">
                                        <tr>
                                            <td colspan="3" class="text-end">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></td>
                                            <td class="text-center"> </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <td colspan="3" class="text-end" style="background: lightgrey;">AMOUNT DUE</td>
                                    <td class="text-center"> <span t-field="o.amount_residual"/> </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Section 5 -->
                    <div class="mt-3">
                        <strong>Terms and Condition:</strong>
                        <p t-if="o.narration" class="mt-0" t-field="o.narration"/>
                    </div>

                </div>
            </t>
        </xpath>
    </template>

</odoo>
