<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- FORM VIEW  -->
        <record id="view_transientmodel_wizard_form" model="ir.ui.view">
            <field name="name">transient.form</field>
            <field name="model">update.saleorder</field>
            <field name="arch" type="xml">
                <form string="Sale Order">
                    <div>
                        <field name="new_order_line_ids" nolabel ="1">
                            <tree editable="botttom" create = 'false'>
                                <field name="product_id" />
                                <field name="name" />
                                <field name="product_qty" />
                                <field name="price_unit" />
                                <field name="line_id" invisible="1"/>
                            </tree>
                        </field>
                    </div>
                   
                    <footer>
                        <button name="action_update_order_line" string="Update Order Line" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

<!-- ACTION     -->

        <record id="action_sale_line_wizard" model="ir.actions.act_window">
            <field name="name">Update Sale Order Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.saleorder</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>