<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_to_notify_users" model="mail.template">
        <field name="name">Notify User</field>
        <field name="email_from">{{ (object.company_id.partner_id.email) }}</field>
        <field name="subject">{subject}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html">${body_html}</field>
    </record>

</odoo>