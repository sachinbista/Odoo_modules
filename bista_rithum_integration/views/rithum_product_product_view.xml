<odoo>
    <record id="rithum_product_product_view_tree" model="ir.ui.view">
        <field name="name">rithum.product.product.tree</field>
        <field name="model">rithum.product.product</field>
        <field name="arch" type="xml">
            <tree string="Rithum Product">
                <field name="product_id"/>
                <field name="product_default_code"/>
                <field name="rithum_product_id"/>
                <field name="inventory_product_id"/>
                <field name="rithum_map_error" invisible="1"/>
                <field name="rithum_config_id"/>
            </tree>
        </field>
    </record>
    <record id="rithum_product_product_view_from" model="ir.ui.view">
        <field name="name">rithum.product.product.form</field>
        <field name="model">rithum.product.product</field>
        <field name="arch" type="xml">
            <form string="Rithum Product">
                <sheet>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="product_default_code"/>
                            <field name="inventory_product_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="rithum_config_id" readonly="1" foce_save="1"  options="{'no_open': True}"/>
                            <field name="rithum_product_id"/>
                        </group>
                    </group>
                    <group>
                        <group invisible="1">
                            <field name="rithum_map_error" readonly="1" foce_save="1"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rithum_product_product_view_search" model="ir.ui.view">
        <field name="model">rithum.product.product</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <field name="product_id" string="Order Product"/>
                <field name="rithum_product_id" string="Rithum Product"/>
                <field name="inventory_product_id" string="Inventory Product"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>


    <record id="rithum_product_product_action" model="ir.actions.act_window">
        <field name="name">Rithum Product</field>
        <field name="res_model">rithum.product.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_rithum_product"
            parent="menu_rithum"
            name="Product"
            sequence="1"
    />

    <menuitem
            id="sub_menu_rithum_product"
            parent="menu_rithum_product"
            name="Rithum Product"
            action="rithum_product_product_action"/>
</odoo>