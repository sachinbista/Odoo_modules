<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rithum_error_order_log_view_tree" model="ir.ui.view">
        <field name="name">rithum.error.order.log.tree</field>
        <field name="model">rithum.error.order.log</field>
        <field name="arch" type="xml">
            <tree string="Error">
                <field name="name" string="PO number"/>
                <field name="active" invisible="1"/>
                <field name="error_date" string="Run Date"/>
                <field name="error_message"/>
                <field name="rithum_config_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="rithum_error_order_log_view_search" model="ir.ui.view">
        <field name="model">rithum.error.order.log</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <field name="name" string="Po Number"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="rithum_error_order_log_action" model="ir.actions.act_window">
        <field name="name">Order Error</field>
        <field name="res_model">rithum.error.order.log</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
            id="menu_rithum_error_log"
            parent="menu_rithum"
            name="Errors"
            sequence="90"
    />

    <menuitem
            id="menu_rithum_order_errors"
            parent="menu_rithum_error_log"
            name="Order Errors"
            action="rithum_error_order_log_action"/>
</odoo>