<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="import_specific_order_wizard" model="ir.ui.view">
        <field name="name">import.single.order.wizard</field>
        <field name="model">import.single.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="po_number"/>
                    </group>
                    <group/>
                </group>
                <footer>
                    <button name="action_import_rithum_order" string="Import" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="rithum_import_single_order_action" model="ir.actions.act_window">
        <field name="name">Import Specific Product</field>
        <field name="res_model">import.single.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="import_single_order_menu"
            parent="menu_rithum_product"
            name="Import Specific Product"
            action="rithum_import_single_order_action"/>
</odoo>
