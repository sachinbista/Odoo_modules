<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_spring_systems_integration" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.spring</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="is_spring_picking" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='tracking']" position="after">
                <field name="carrier_code"/>
                <field name="scac_code"/>
            </xpath>
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <button type="object"
                        name="get_documents_from_spring"
                        class="oe_highlight"
                        string="Get Documents"
                        attrs="{'invisible':['|',('state','not in',('confirmed', 'assigned')),('is_spring_picking', '=', False)]}">
                </button>
            </xpath>
        </field>
    </record>
</odoo>