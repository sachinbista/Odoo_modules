<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="spring_systems_edi_856_tree_view">
            <field name="name">spring.edi.856</field>
            <field name="model">spring.edi.856</field>
            <field name="arch" type="xml">
                <tree>
<!--                    <field name="sale_order_ids" widget="many2many_tags"/>-->
                    <field name="spring_system_ship_id"/>
                    <field name="status" decoration-success="status == 'sent'" decoration-warning="status == 'draft'" decoration-info="status == 'document'" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="spring_systems_edi_856_form_view">
            <field name="name">spring.edi.856</field>
            <field name="model">spring.edi.856</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="spring_system_ship_id"/>
                                <field name="sale_order_id"/>
                                <field name="spring_system_po_num"/>
                                <field name="move_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="shipping_label"/>
                                <field name="shipping_slip"/>
                                <field name="spring_system_ship_id"/>
                                <field name="picking_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="EDI 856 data">
                                <field name="edi_856_data"/>
                            </page>
                            <page string="Errors">
                                <field name="system_errors"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="spring_systems_edi_856_action_window">
            <field name="name">Spring Systems Edi 856</field>
            <field name="res_model">spring.edi.856</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>