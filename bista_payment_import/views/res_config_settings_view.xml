<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_payment_import_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.bista</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='default_accounts']/div[2]/div[2]" position="inside">
                    <div class="row mt8">
                        <label for="bs_register_payment_discount_account_id" class="col-lg-5 o_light_label"/>
                        <field name="bs_register_payment_discount_account_id"/>
                    </div>
                    <div class="row mt8">
                        <label for="bs_register_payment_writeoff_account_id" class="col-lg-5 o_light_label"/>
                        <field name="bs_register_payment_writeoff_account_id"/>
                    </div>
                    <div class="row mt8">
                        <label for="bs_register_payment_income_account_id" class="col-lg-5 o_light_label"/>
                        <field name="bs_register_payment_income_account_id"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>