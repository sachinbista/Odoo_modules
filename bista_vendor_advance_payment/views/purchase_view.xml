<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="inherit_purchase_order_form_for_purchase_adv_payment_csl" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.advance.payment.csl</field>
            <field name="model">purchase.order</field>
            <field name="priority">99</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_create_invoice'][hasclass('oe_highlight')]" position="replace">
                    <button name="%(bista_vendor_advance_payment.action_view_purchase_advance_payment_inv_csl)d"
                            string="Create Advances / Bill" type="action" class="oe_highlight"
                            attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"
                            groups="purchase.group_purchase_manager"/>
                </xpath>
                <xpath expr="//button[@name='action_create_invoice']" position="replace">
                    <button name="%(bista_vendor_advance_payment.action_view_purchase_advance_payment_inv_csl)d"
                            string="Create Advances / Bill" type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|', ('state', 'not in', ('purchase','done')), ('invoice_status', '!=', 'no')]}"
                        groups="purchase.group_purchase_manager"/>
                </xpath>
                <xpath expr="//button[@name='action_view_invoice']" position="attributes">
                    <attribute name="name">action_view_invoice_advance_payment</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
                    <field name="qty_to_invoice" invisible="1"/>
                    <field name="is_prepayment" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>