<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="search_template_agent">
        <button t-if="options.get('agent')"
                type="button" class="o-no-caret btn btn-secondary dropdown-toggle agent_filter"
                data-bs-toggle="dropdown">
            <span class="fa fa-users"/>
            Commission Agents
        </button>
        <ul class="dropdown-menu o_filter_menu" role="menu">
            <li class="o_account_report_search js_agent_m2m"/>
        </ul>
    </template>


    <template id="inherit_search_template" inherit_id="account_reports.search_template">
        <xpath expr="." position="inside">
            <div class="btn-group dropdown o_account_reports_filter_agent"
                 t-if="options.get('agent')">
                <t t-call="commission.search_template_agent"/>
            </div>
        </xpath>
    </template>

</odoo>