<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="agent_commission_reports_tree_view" model="ir.ui.view">
        <field name="name">Agent Commission Reports</field>
        <field name="model">agent.commission.reports</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0" expand="1">
                <field name="invoice_date"/>
                <field name="invoice_id"/>
                <field name="invoice_partner_id"/>
                <field name="gross_amount"/>
                <field name="discount_amount"/>
                <field name="freight_charges"/>
                <field name="amazon_commission"/>
                <field name="net_sale"/>
                <field name="agent_id" invisible="1"/>
                <field name="potential_commission_amt"/>
                <field name="potential_commission"/>
                <field name="date_paid"/>
                <field name="amount_paid"/>
                <field name="commissionable_amount"/>
                <field name="commission"/>
                <field name="balance_commission"/>
            </tree>
        </field>
    </record>

    <record id="agent_commission_reports_search_view" model="ir.ui.view">
        <field name="name">Agent Commission Reports Search</field>
        <field name="model">agent.commission.reports</field>
        <field name="arch" type="xml">
            <search string="Agents Commission">
                <group string="Group By">
                    <filter string="Agents" name="agents" context="{'group_by':'agent_id'}"/>
                </group>        
            </search>
        </field>
    </record>

    <record id="agent_commissions_reports_action" model="ir.actions.act_window">
        <field name="name">Agent Commission Report</field>
        <field name="res_model">agent.commission.reports</field>
        <field name="view_mode">tree</field>
        <field name="target">inline</field>
    </record>

</odoo>
