<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_allocation_form" model="ir.ui.view">
        <field name="name">product.allocation.form</field>
        <field name="model">product.allocation</field>
        <field name="arch" type="xml">
            <form string="Product Allocation">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="partner_id" required="customer_group_id == False"/>
                            <field name="customer_group_id" required="partner_id == False"/>
                        </group>
                        <group>
                            <field name="product_id" required="1"/>
                            <field name="allocated_qty" required="1"/>
                            <field name="current_allocation_qty"/>
                            <field name="remaining_qty" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_allocation_tree" model="ir.ui.view">
        <field name="name">product.allocation.tree</field>
        <field name="model">product.allocation</field>
        <field name="arch" type="xml">
            <tree string="Product Allocation">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="partner_id"/>
                <field name="product_id"/>
<!--                <field name="allocated_qty"/>-->
<!--                <field name="current_allocation_qty"/>-->
            </tree>
        </field>
    </record>


     <record id="action_product_allocation" model="ir.actions.act_window">
        <field name="name">Product Allocation</field>
        <field name="res_model">product.allocation</field>
        <field name="view_mode">tree,form</field>
     </record>

    <menuitem id="menu_allocation_config"
              sequence="20"
              parent="sale.menu_sale_config"
              name="Allocation">
        <menuitem id="menu_product_allocation"
                  name="Product Allocation"
                  action="bista_order_inactive_product.action_product_allocation"
                  sequence="20"/>
    </menuitem>
</odoo>
