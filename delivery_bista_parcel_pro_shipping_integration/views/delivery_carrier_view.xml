<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_parcel_pro" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.fedex</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Parcel Pro Configuration" name="parcel_pro_configuration" attrs="{'invisible': [('delivery_type', '!=', 'parcelpro')]}">
                    <group>
                        <group>
                            <field name="parcel_pro_username" attrs="{'required': [('delivery_type', '=', 'parcelpro')]}" password="True"/>
                            <field name="parcel_pro_password" attrs="{'required': [('delivery_type', '=', 'parcelpro')]}"  password="True"/>
                        </group>
                        <group>
                            <field name="parcel_pro_default_package_type_id"/>
                        </group>

                    </group>

                </page>
            </xpath>
        </field>
    </record>

</odoo>
