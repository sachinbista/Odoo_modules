<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="product_normal_form_view_inherit_parcel_pro" model="ir.ui.view">
            <field name="name">product.product.parcel.pro</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='inventory']//group[@name='group_lots_and_weight']/label[@for='weight']" position="before">
                    <field name="insured_value"/>
                </xpath>

            </field>
        </record>

        <record id="product_normal_form_view_template_inherit_parcel_pro" model="ir.ui.view">
            <field name="name">product.template.parcel.pro</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='inventory']//group[@name='group_lots_and_weight']/label[@for='weight']" position="before">
                    <field name="insured_value"/>
                </xpath>

            </field>
        </record>
</odoo>