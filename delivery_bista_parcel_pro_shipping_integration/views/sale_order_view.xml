<?xml version="1.0"?>
<odoo>
    <record id="sale_order_parcel_pro_inherit" model="ir.ui.view">
        <field name="name">parcel.inherit.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Parcel Pro Shipping Charges" name="parcel_pro_cost">
                    <field name="parcel_pro_service_ids">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="add_shipping" no_label="1" readonly="1"/>
                            <field name="carrier_product_id" invisible="1"/>
                            <field name="carrier_type"/>
                            <field name="service_code_deescription"/>
                            <field name="shipping_cost"/>
                            <button name="select_shipping_method" string="Use Service" class="btn fa fa-arrow-right btn-link shipping-right-button"
                            type="object"  attrs="{'invisible': [('parent.state', 'in', ('sale', 'done'))]}"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
