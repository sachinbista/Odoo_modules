<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bista_product_images_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_template_images']" position="replace">
                <group name="product_template_images" string="Extra Product Media" invisible="1">
                    <field name="product_template_image_ids" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" add-label="Add a Media" nolabel="1"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="product_template_images" string="Extra Media"  attrs="{'invisible': [('sale_ok','=',False)]}">
                    <field name="product_template_image_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="video_url"/>
                            <field name="is_certificate"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='out_of_stock_message']" position="after">
                <field name="has_digital_certificate" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <record id="bista_product_view_product_image_form" model="ir.ui.view">
        <field name="model">product.image</field>
        <field name="inherit_id" ref="website_sale.view_product_image_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='video_url']" position="after">
                <br/>
                <label for="is_certificate"/><br/>
                <field name="is_certificate"/>
            </xpath>
        </field>
    </record>
</odoo>
