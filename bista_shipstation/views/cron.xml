<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record forcecreate="True" id="sync_shipments_shipstation" model="ir.cron">
            <field name="name">Shipstation shipments sync</field>
            <field name="model_id" ref="delivery.model_delivery_carrier"/>
            <field name="state">code</field>
            <field name="code">
                model.run_shipstation_sync()
            </field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record forcecreate="True" id="sync_product_data" model="ir.cron">
            <field name="name">Shipstation product sync</field>
            <field name="model_id" ref="delivery.model_delivery_carrier"/>
            <field name="state">code</field>
            <field name="code">
                model.run_product_sync()
            </field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="shipment_sync_server_action" model="ir.actions.server">
        <field name="name">Shipstation Sync</field>
        <field name="state">code</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="binding_view_types">list,form</field>
        <field name="code">
            if records:
            action = records.action_shipment_sync()
        </field>
    </record>
    </data>
</odoo>
