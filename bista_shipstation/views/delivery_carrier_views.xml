        <record id="view_delivery_carrier_form_inherit_delivery_shipstation" model="ir.ui.view">
            <field name="name">view_delivery_carrier_form_inherit_delivery_shipstation</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <page name="destination" position="before">
                    <page string="ShipStation Configuration"
                          attrs="{'invisible': [('delivery_type', '!=', 'shipstation')]}">
                        <group>

                            <group>
                                <field name="api_url"/>
                                <field name="store_id"/>
                                <field name="carrier_code"/>
                                <field name="package_type_ship" invisible="1"/>
                                <button type="object" string="Import Store" name="import_store_from_ship_station"/>
                                <button type="object" string="Import Delivery Carrier"
                                        name="import_dc_from_ship_station"/>
                                <button type="object" string="Import Carrier Service"
                                        name="import_cs_from_ship_station"/>
                                 <button type="object" string="Import Package"
                                        name="import_package_from_ship_station"/>


                            </group>
                            <group>

                                <field name="shipstation_production_api_key"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation')]}"/>
                                <field name="shipstation_production_api_secret"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation')]}" widget="password"/>
                                <field name="shipstation_weight_uom_id"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation')]}"/>
                                <field name="shipstation_delivery_type" string="Carrier Type"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation')]}"/>
                                <field name="shipstation_default_service_id" string="Default service"
                                       domain="[('shipstation_carrier','=',shipstation_delivery_type)]"/>
                            </group>
                        </group>
                    </page>
                </page>
                <xpath expr="//field[@name='free_over']" position="before">
                    <field name="add_ship_cost" attrs="{'invisible': [('delivery_type', '!=', 'shipstation')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>