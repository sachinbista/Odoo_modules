<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view_so_fds_crm" model="ir.ui.view">
        <field name="name">mrp_production_form_view_so_fds_crm</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="customer_po_number"/>
            </xpath>
        </field>
    </record>


    <record id="mrp_production_tree_view_so_fds_crm" model="ir.ui.view">
        <field name="name">mrp_production_tree_view_so_fds_crm</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="customer_po_number"/>
            </xpath>
        </field>
    </record>


</odoo>
