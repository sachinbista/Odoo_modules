    <record id="view_stock_picking_form_inherit_fds_crm" model="ir.ui.view">
        <field name="name">view.stock.picking.form.inherit.fds.crm</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="sale_user_id" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="customer_po_number" />
            </xpath>
            <xpath expr="///field[@name='date_deadline']" position="after">
                <field name="carrier_id" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}" options="{'no_create': True, 'no_open': True}"/>
                <label for="carrier_tracking_ref"/>
                <div name="tracking">
                    <field name="carrier_tracking_ref" class="oe_inline" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <button type='object' class="fa fa-arrow-right oe_link" confirm="Cancelling a delivery may not be undoable. Are you sure you want to continue?" name="cancel_shipment" string="Cancel" attrs="{'invisible':['|','|','|',('carrier_tracking_ref','=',False),('delivery_type','in', ['fixed', 'base_on_rule']),('delivery_type','=',False),('state','not in',('done'))]}"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_view_move_line_tree_detailed_inherit_fds_crm" model="ir.ui.view">
        <field name="name">view.move.line.tree.detailed.inherit.fds.crm</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="description_picking" />
            </xpath>
        </field>
    </record>

</odoo>
