<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="goflow_hold_order_wiz_form_view" model="ir.ui.view">
        <field name="name">goflow.hold.order.wiz.form.view</field>
        <field name="model">goflow.hold.order.wiz</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="hold_order" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_goflow_hold_order" model="ir.actions.act_window">
        <field name="name">GoFlow Hold Order</field>
        <field name="res_model">goflow.hold.order.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
