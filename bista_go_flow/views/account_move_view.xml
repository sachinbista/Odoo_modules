<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_bista_go_flow" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="external_origin"
                           attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                </xpath>
                <xpath expr="//group[@name='sale_info_group']" position="inside">
                    <field name="warehouse_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- inherit search view -->
        <record id="view_account_invoice_filter_bista_go_floe" model="ir.ui.view">
            <field name="name">account.move.view.search.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_user_id']" position="after">
                   <field name="warehouse_id"/>
                </xpath>
                <xpath expr="//group/filter[@name='duedate']" position="after">
                    <separator/>
                    <filter name="external_origin" string="Order From" context="{'group_by': 'external_origin'}"/>
                    <separator/>
                    <filter name="warehouse_id" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>