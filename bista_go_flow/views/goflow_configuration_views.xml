                            <!--                                            <field name="mapping_opt"/>-->
                            <!--                                        </tree>-->
                            <!--                                    </field>-->
                            <!--                                </group>-->
                            <!--                            </page>-->
                            <page string="Vendors">
                                <group>
                                    <group>
                                        <field name="vendor_sync_operation" string="Sync Vendors"/>
                                        <!--                                        <field name="sync_vendors" string="Sync Vendors"  attrs="{'invisible': [('vendor_sync_operation', '=', False)]}"/>-->
                                    </group>
                                </group>
                            </page>
                            <page string="Tracking Data">
                                <group>
                                    <group>
                                        <field name="tracking_data_export_operation"/>
                                    </group>
                                    <group>
                                    </group>
                                    <group attrs="{'invisible': [('tracking_data_export_operation', '=', False)]}">
                                        <field name="notify_store_export_shipment"/>
                                        <field name="shipping_weight_measure"
                                               attrs="{'required': [('tracking_data_export_operation', '=', True)] }"/>
                                    </group>
                                    <group attrs="{'invisible': [('tracking_data_export_operation', '=', False)]}">
                                        <field name="auto_export_tracking"/>
                                        <label for="auto_export_tracking" string="Interval"
                                               attrs="{'invisible': [('auto_export_tracking', '=', False)]}"/>
                                        <div attrs="{'invisible': [('auto_export_tracking', '=', False)]}">
                                            <field name="auto_export_tracking_interval_number"
                                                   placeholder="Interval Number" class="oe_inline"
                                                   attrs="{'required': [('auto_export_tracking', '=', True)]}"/>
                                            <field name="auto_export_tracking_interval_type" class="oe_inline"
                                                   attrs="{'required': [('auto_export_tracking', '=', True)]}"/>
                                        </div>
                                        <field name="auto_export_tracking_next_execution"
                                               placeholder="Next Execution Date"
                                               attrs="{'required': [('auto_export_tracking', '=', True)], 'invisible': [('auto_export_tracking', '=', False)]}"
                                               strig="Next Execution"/>
                                        <field name="auto_export_tracking_user_id" placeholder="Responsible User"
                                               attrs="{'required': [('auto_export_tracking', '=', True)], 'invisible': [('auto_export_tracking', '=', False)]}"
