                                    </group>
                                    <group attrs="{'invisible': [('sale_order_import_operation', '=', False)]}">
                                        <field name="use_remote_so_id" string="Use remote SO ID"/>
                                        <field name="default_delivery_carrier_id" string="Default Shipping Method"/>
                                        <field name="default_product_id"/>
                                        <field name="last_order_import_date" string="Last Imported Order Date"/>
                                    </group>
                                    <group attrs="{'invisible': [('sale_order_import_operation', '=', False)]}">
                                        <field name="order_as_historical"/>
                                        <field name="order_create_date"
                                               attrs="{'invisible': ['|',('order_as_historical','=','all'),('order_as_historical','=',False)]}"/>
                                        <field name="generated_delivery_slip"/>
                                        <field name="channel_delivery_slip"/>
                                        <field name="preferred_delivery_slip"
                                               attrs="{'invisible': ['|',('generated_delivery_slip','=',False),('channel_delivery_slip','=',False)]}"/>

                                        <!-- <field name="auto_import_sale_orders"/> -->
