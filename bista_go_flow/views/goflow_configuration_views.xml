<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="go_flow_form_view">
            <field name="name">go.flow.form.view</field>
            <field name="model">goflow.configuration</field>
            <field name="arch" type="xml">
                <form delete="0">
                    <header>
                        <!--<button name="goflow_test_connection" type="object" string="Test &amp; Confirm" attrs="{'invisible': [('state', '=', 'done')]}"/>-->
                        <button name="goflow_reset_connection" type="object" string="Reset to Draft" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="goflow_test_connection" type="object" class="oe_stat_button"
                                    icon="fa-solid fa-plug fa-rotate-270">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Test</span>
                                    <span class="o_stat_text">Connection</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <widget name="web_ribbon" title="Connected" bg_color="bg-success" attrs="{'invisible': ['|',('active', '=', False),('state', '=', 'draft')]}"/>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="operations_state" attrs="{'invisible': True}"/>
                                <!-- <field name="download_product_url" placeholder="e.g. http://my.goflow_company.com" required="1" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="download_warehouse_url" placeholder="e.g. http://my.goflow_company.com" required="1" attrs="{'readonly': [('state', '=', 'done')]}"/> -->
                                <field name="download_channel_url" placeholder="e.g. http://my.goflow_company.com"
                                       required="1" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="access_token" password="1" required="1"
                                       attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="x_beta_contact_email"/>
                            </group>
                            <group>
                                <field name="default_instance"/>
                                <field name="company_id" required="1" options="{'no_create': True}" readonly="1"/>
                                <field name="error_notification_send"/>
                                <field name="user_id" options="{'no_create': True}"
                                       attrs="{'invisible': [('error_notification_send', '=', False)], 'required' : [('error_notification_send', '=', True)]}"/>
