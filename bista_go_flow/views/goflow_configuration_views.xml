                                        <!-- <div attrs="{'invisible': [('auto_import_sale_orders', '=', False)]}">
                                            <field name="auto_import_sale_orders_interval_number" placeholder="Interval Number" class="oe_inline" attrs="{'required': [('auto_import_sale_orders', '=', True)]}"/>
                                            <field name="auto_import_sale_orders_interval_type" class="oe_inline" attrs="{'required': [('auto_import_sale_orders', '=', True)]}"/>
                                        </div> -->
