                                        <field name="auto_import_sale_order_user_id" placeholder="Responsible User" attrs="{'required': [('auto_import_sale_orders', '=', True)], 'invisible': [('auto_import_sale_orders', '=', False)]}" strig="Responsible User"/> -->
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="sync_sale_order_filter" groups="base.group_no_one"/>
                                        <p></p>
                                        <button name="goflow_get_bulk_sale" class="oe_highlight" 
                                        type="object" string="Get Bulk Orders"/>
                                    </group>
                                </group>
                            </page>
                            <!--                            <page string="Product" attrs="{'invisible': [('product_import_operation', '=', False)]}">-->
                            <!--                                <group>-->
                            <!--                                    <group>-->
                            <!--                                        <field name="auto_create_product"/>-->
                            <!--                                        <field name="download_kit_and_group_product"/>-->
                            <!--                                    </group>-->
                            <!--                                    <group>-->
                            <!--                                        <field name="auto_import_product"/>-->
