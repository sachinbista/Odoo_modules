                                <field name="notification_send_by_email"
                                       attrs="{'invisible': [('error_notification_send', '=', False)]}"/>
                                <!-- <field name="is_sync_inventory"/> -->
                            </group>
                        </group>
                        <notebook>
                            <page string="Sales Orders">
                                <group>
                                    <group>
                                        <field name="sale_order_import_operation"/>
                                        <field name="goflow_sync_date" attrs="{'invisible': [('sale_order_import_operation', '=', False)]}" />
                                        <field name="goflow_pick_date" attrs="{'invisible': [('sale_order_import_operation', '=', False)]}" />
