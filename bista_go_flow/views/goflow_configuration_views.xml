                            <!--                                    </group>-->
                            <!--                                </group>-->
                            <!--                            </page>-->
                            <page string="Invoice Matching"
                                  attrs="{'invisible': [('sale_order_import_operation', '!=', True)]}">
                                <group>
                                    <group>
                                        <field name="invoice_matching"/>
                                    </group>
                                    <group attrs="{'invisible': [('invoice_matching', '=', False)]}">
                                        <field name="invoice_prefix"/>
                                    </group>
                                    <group attrs="{'invisible': [('invoice_matching', '=', False)]}">
                                        <field name="auto_invoice_matching"/>
                                        <label for="auto_invoice_matching" string="Interval"
                                               attrs="{'invisible': [('auto_invoice_matching', '=', False)]}"/>
                                        <div attrs="{'invisible': [('auto_invoice_matching', '=', False)]}">
                                            <field class="oe_inline" name="auto_invoice_matching_interval_number"
                                                   placeholder="Interval Number"
                                                   attrs="{'required': [('auto_invoice_matching', '=', True)]}"/>
                                            <field class="oe_inline" name="auto_invoice_matching_interval_type"
                                                   attrs="{'required': [('auto_invoice_matching', '=', True)]}"/>
                                        </div>
                                        <field name="auto_invoice_matching_next_execution"
                                               placeholder="Next Execution Date"
                                               attrs="{'required': [('auto_invoice_matching', '=', True)], 'invisible': [('auto_invoice_matching', '=', False)]}"
                                               strig="Next Execution"/>
                                        <field name="auto_invoice_matching_user_id" placeholder="Responsible User"
                                               attrs="{'required': [('auto_invoice_matching', '=', True)], 'invisible': [('auto_invoice_matching', '=', False)]}"
                                               strig="Responsible User"/>
                                        <label for="auto_invoice_matching"
                                               string="Auto Invoice Matching Timeout Interval"
                                               attrs="{'invisible': [('auto_invoice_matching', '=', False)]}"/>
                                        <div attrs="{'invisible': [('auto_invoice_matching', '=', False)]}">
                                            <field class="oe_inline"
                                                   name="auto_invoice_matching_timeout_interval_number"
                                                   placeholder="Interval Number"
                                                   attrs="{'required': [('auto_invoice_matching', '=', True)]}"/>
                                            <field class="oe_inline" name="auto_invoice_matching_timeout_interval_type"
                                                   attrs="{'required': [('auto_invoice_matching', '=', True)]}"/>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="Routing">
                                <group>
                                    <group>
                                        <field name="manage_routing"/>
                                    </group>
                                    <group attrs="{'invisible': [('manage_routing', '=', False)]}">
                                        <field name="default_freight_class"/>
                                    </group>
                                    <group attrs="{'invisible': [('manage_routing', '=', False)]}">
                                        <field name="auto_request_sync_interval"/>
                                        <label for="auto_request_sync_interval" string="Interval"
                                               attrs="{'invisible': [('auto_request_sync_interval', '=', False)]}"/>
                                        <div attrs="{'invisible': [('auto_request_sync_interval', '=', False)]}">
                                            <field class="oe_inline" name="auto_request_interval_number"
                                                   placeholder="Interval Number"
                                                   attrs="{'required': [('auto_request_sync_interval', '=', True)]}"/>
                                            <field class="oe_inline" name="auto_request_interval_type"
                                                   attrs="{'required': [('auto_request_sync_interval', '=', True)]}"/>
                                        </div>
                                        <field name="auto_request_next_execution" placeholder="Next Execution Date"
                                               attrs="{'required': [('auto_request_sync_interval', '=', True)], 'invisible': [('auto_request_sync_interval', '=', False)]}"
                                               strig="Next Execution"/>
                                        <field name="auto_request_user_id" placeholder="Responsible User"
                                               attrs="{'required': [('auto_request_sync_interval', '=', True)], 'invisible': [('auto_request_sync_interval', '=', False)]}"
                                               strig="Responsible User"/>
                                    </group>
                                    <group attrs="{'invisible': [('manage_routing', '=', False)]}">
                                        <field name="auto_fetch_response_sync_interval"/>
                                        <label for="auto_fetch_response_sync_interval" string="Interval"
                                               attrs="{'invisible': [('auto_fetch_response_sync_interval', '=', False)]}"/>
                                        <div attrs="{'invisible': [('auto_fetch_response_sync_interval', '=', False)]}">
                                            <field class="oe_inline" name="auto_fetch_response_interval_number"
                                                   placeholder="Interval Number"
                                                   attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)]}"/>
                                            <field class="oe_inline" name="auto_fetch_response_interval_type"
                                                   attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)]}"/>
                                        </div>
                                        <field name="auto_fetch_response_next_execution"
                                               placeholder="Next Execution Date"
                                               attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)], 'invisible': [('auto_fetch_response_sync_interval', '=', False)]}"
                                               strig="Next Execution"/>
                                        <field name="auto_fetch_response_user_id" placeholder="Responsible User"
                                               attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)], 'invisible': [('auto_fetch_response_sync_interval', '=', False)]}"
                                               strig="Responsible User"/>
