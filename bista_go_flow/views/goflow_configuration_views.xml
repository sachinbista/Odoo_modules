            </field>
        </record>

        <record model="ir.ui.view" id="go_flow_tree_view">
            <field name="name">go.flow.tree.view</field>
            <field name="model">goflow.configuration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="go_flow_kanban_view" model="ir.ui.view">
            <field name="name">go.flow.kanban.view</field>
            <field name="model">goflow.configuration</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <!--                                <div>-->
                                <!--                                    <span>Product URL :  <field name="download_product_url"/>&amp;nbsp;</span>-->
                                <!--                                </div>-->
                                <div>
                                    <span><b><field name="download_channel_url"/></b></span>
                                </div>
                                <div t-if="!selection_mode">
                                    <span><b>Company :</b>
                                        <field name="company_id"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="go_flow_search_view" model="ir.ui.view">
            <field name="name">go.flow.search.view</field>
            <field name="model">goflow.configuration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Confirmed" name="confirmed_filter" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="Not Confirmed" name="not_confirmed_filter" domain="[('state', '=', 'draft')]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="goflow_main_menu_action_window">
            <field name="name">GoFlow Instance</field>
            <field name="res_model">goflow.configuration</field>
            <field name="view_mode">kanban,tree,form,search</field>
        </record>
    </data>
</odoo>