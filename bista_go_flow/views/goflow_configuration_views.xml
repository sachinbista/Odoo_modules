                                        <div attrs="{'invisible': [('auto_fetch_response_sync_interval', '=', False)]}">
                                            <field name="auto_fetch_response_timeout_interval_number"
                                                   placeholder="Interval Number" class="oe_inline"
                                                   attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)]}"/>
                                            <field name="auto_fetch_response_timeout_interval_type" class="oe_inline"
                                                   attrs="{'required': [('auto_fetch_response_sync_interval', '=', True)]}"/>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="Purchase Orders">
                                <group>
                                    <group>
                                        <field name="sync_purchase_order"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="sync_purchase_order_filter" groups="base.group_no_one"/>
                                    </group>
                                    <group>
                                        <button name="goflow_get_bulk_purchase" class="btn btn-primary" type="object"
                                                string="Get Bulk Orders"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Warehouses">
                                <group>
                                    <group>
                                        <field name="warehouse_sync_operation" string="Sync Warehouses"/>
                                        <field name="create_new_warehouse" />
                                    </group>
                                </group>
                                <button name="sync_warehouses" type="object" string="Sync Warehouses"
                                        attrs="{'invisible': [('warehouse_sync_operation', '=', False)]}"/>
                            </page>
