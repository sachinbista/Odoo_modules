<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="download_order_data_rt_tree" model="ir.ui.view">
            <field name="name">goflow.order.tree</field>
            <field name="model">goflow.order</field>
            <field name="arch" type="xml">
                <tree string="Goflow Order Downloaded Data" create="false" default_order="create_date desc">
                    <field name="sale_order_id" string="Odoo Order ID"/>
                    <field name="goflow_order_id"/>
                    <field name="order_number"/>
                    <field name="goflow_order_status"/>
                    <field name="order_data" invisible="1"/>
                    <field name="instance_id" readonly="1"/>
                    <field name="status" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="download_order_data_rt_form" model="ir.ui.view">
            <field name="name">goflow.order.form</field>
            <field name="model">goflow.order</field>
            <field name="arch" type="xml">
                <form string="Goflow Order Downloaded Data">
                    <sheet>
                        <group>
                            <label for="order_data"/>
                            <div>
                                <field name="order_data" readonly="1" force_save="1"/>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="order_date" readonly="1" force_save="1"/>
                                <field name="order_number" readonly="1" force_save="1"/>
                                <field name="instance_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="goflow_order_status" readonly="1" force_save="1"/>
                                <field name="goflow_order_id" readonly="1" force_save="1"/>
                                <field name="sale_order_id" string="Odoo Order ID" readonly="1" force_save="1"/>
                                <field name="status" readonly="1" force_save="1"/>
                                <field name="check_order_status" invisible="1" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="goflow_order_data">
            <field name="name">Goflow Order Downloaded Data</field>
            <field name="res_model">goflow.order</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>