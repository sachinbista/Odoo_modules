<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>


        <record id="action_goflow_common_log_book_tree" model="ir.ui.view">
            <field name="name">goflow.common.log.book.tree</field>
            <field name="model">goflow.common.log.book</field>
            <field name="arch" type="xml">
                <tree string="Common Log Book" create="false">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_goflow_common_log_book_form" model="ir.ui.view">
            <field name="name">goflow.common.log.book.form</field>
            <field name="model">goflow.common.log.book</field>
            <field name="arch" type="xml">
                <form string="Common Log Book" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="model_id"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="active"/>
                                <field name="res_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Common Logs">
                                <field name="log_lines">
                                    <tree create="false" editable="bottom">
                                        <field name="instance_id"/>
                                        <field name="picking_id"/>
                                        <field name="move_id"/>
                                        <field name="product_id"/>
                                        <field name="order_ref"/>
                                        <field name="default_code"/>
                                        <field name="message"/>
                                        <field name="model_id"/>
                                        <field name="res_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="goflow_common_log_book">
            <field name="name">Common Log Book</field>
            <field name="res_model">goflow.common.log.book</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>