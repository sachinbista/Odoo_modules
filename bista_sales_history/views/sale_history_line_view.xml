    <record model="ir.ui.view" id="sale_history_line_search_view">
        <field name="name">Search View</field>
        <field name="model">sale.history.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="contact_reference"/>
                <field name="contact_name"/>
                <field name="customer_id" string="Customer Tag" filter_domain="[('customer_id.category_id','ilike',self)]"/>
                <field name="user_id"/>
                <field name="new_user_id"/>
                <field name="customer_reference_no"/>
                <field name="sales_obtain"/>
                <field name="sale_order_no"/>
                <field name="sale_order_date"/>
                <field name="invoice_number"/>
                <field name="invoice_date"/>
                <field name="product_name"/>
                <field name="inventory_product_categ"/>
                <field name="name"/>
                <separator/>
                <filter string="Order Date" name="order_date" date="sale_order_date"/>
                <filter string="Invoice Date" name="invoice_date" date="invoice_date"/>
                <separator/>
                <filter name="exclude_shipping" string="Exclude Shipping" domain="[('is_shipping','=',False)]"/>
                <filter name="only_shipping" string="Only Shipping" domain="[('is_shipping','=',True)]"/>
                <separator/>
                <separator/>
                <filter name="sales_person_mismatch" string="Sales Person Mismatch" domain="[]" context="{'sales_person_mismatch': True}"/>
                <group expand='0' string='Group by...'>
                    <filter string='Contact Reference' name="group_by_contact_reference" context="{'group_by': 'contact_reference'}"/>
                    <filter string='Contact Name' name="group_by_contact_name" context="{'group_by': 'contact_name'}"/>
                    <filter string='Customer PO' name="group_by_customer_po" context="{'group_by': 'customer_reference_no'}"/>
                    <filter string='Salesperson' name="group_by_user_id" context="{'group_by': 'user_id'}"/>
                    <filter string='Current Salesperson' name="group_by_new_user_id" context="{'group_by': 'new_user_id'}"/>
                    <filter string='Order Obtain' name="group_by_sales_obtain" context="{'group_by': 'sales_obtain'}"/>
                    <filter string='Order No.' name="group_by_sale_order_no" context="{'group_by': 'sale_order_no'}"/>
                    <filter string='Order Date' name="group_by_sale_order_date" context="{'group_by': 'sale_order_date'}"/>
                    <filter string='Invoice Date' name="group_by_invoice_date" context="{'group_by': 'invoice_date'}"/>
                    <filter string='Product' name="group_by_product_name" context="{'group_by': 'product_name'}"/>
                    <filter string='Pricelist Item' name="group_by_product_pricelist_item_id" context="{'group_by': 'product_pricelist_item_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_history_line_form_view">
        <field name="name">sale.history.line.form.view</field>
        <field name="model">sale.history.line</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="true" duplicate="false">
                <sheet>
                <group>
                    <group>
                            <field name="history_data_link"  string="Contact Name" readonly="1"/>
                            <field name="customer_id" attrs="{'invisible': [('customer_id', '=', False)]}" readonly="1"/>
                            <field name="customer_reference_no" readonly="1"/>
                        </group>
                        <group>
                            <field name="sales_obtain" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="new_user_id" invisible="1" readonly="1"/>
                            <field name="sale_order_no" readonly="1"/>
                            <field name="sale_order_date" readonly="1"/>
                            <field name="invoice_number" attrs="{'invisible': [('invoice_id', '!=', False)]}" readonly="1"/>
                            <field name="invoice_id" string="Invoice" attrs="{'invisible': [('invoice_id', '=', False)]}" readonly="1"/>
                            <field name="invoice_date" readonly="1"/>
                            <field name="so_line_id" invisible="1" readonly="1"/>
                        </group>
                        <newline/>
                        <group>
                            <field name="invoice_item_no" invisible="1"/>
                            <field name="product_name" readonly="1"/>
                            <field name="product_id" attrs="{'invisible': [('product_id', '=', False)]}" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="name" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="price_unit" widget="monetary" readonly="1"/>
                            <field name="product_uom_qty" readonly="1"/>
                            <field name="price_subtotal" widget="monetary" readonly="1"/>
                            <field name="product_pricelist_item_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="note" readonly="1"/>
                        </group>
                </group>
            </sheet>
            </form>
            </field>
    </record>

