                <field name="units_sold"/>
                <field name="avg_order_value"/>
                <field name="products_sold"/>
                <field name="skus_sold"/>
                <field name="cost_of_goods_sold"/>
                <field name="shipping_cost"/>
                <field name="gross_revenue"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_history_product_tree_view">
        <field name="name">sale.history.product.tree.view</field>
        <field name="model">sale.history.product</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="type"/>
                <field name="date_order"/>
                <field name="number"/>
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="product_name"/>
                <field name="item_number"/>
                <field name="product_brand"/>
                <field name="sale_price"/>
                <field name="qty"/>
                <field name="amount"/>

                <!--                <field name="orders"/>-->
                <!--                <field name="commission_fee"/>-->
                <!--                <field name="units_sold"/>-->
                <!--                <field name="avg_price_per_item"/>-->
                <!--                <field name="products_sold"/>-->
                <!--                <field name="skus_sold"/>-->
                <!--                <field name="cost_of_goods_sold"/>-->
                <!--                <field name="shipping_cost"/>-->
                <!--                <field name="gross_revenue"/>-->
            </tree>
        </field>
    </record>

    <record id="action_sale_history_store_tree" model="ir.actions.act_window">
        <field name="name">Sales History Store</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.history.store</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <record id="action_sale_history_product_tree" model="ir.actions.act_window">
        <field name="name">Sales History Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.history.product</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

