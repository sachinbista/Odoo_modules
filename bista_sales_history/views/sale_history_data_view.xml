<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_history_data_search_view" model="ir.ui.view">
        <field name="name">sale.history.data.search</field>
        <field name="model">sale.history.data</field>
        <field name="arch" type="xml">
            <search>
                <field name="contact_name"/>
                <field name="contact_reference"/>
                <field name="customer_reference_no"/>
                <field name="sales_obtain"/>
                <field name="user_id"/>
                <field name="sale_order_no"/>
                <field name="invoice_number"/>
                <field name="sale_order_date"/>
                <field name="warehouse_name"/>
                <field name="invoice_date"/>
                <field name="sale_lines_o2m" string="Product" filter_domain="[('sale_lines_o2m.product_id', 'ilike', self)]"/>
                <filter string="Invoice Date" name="order_date" date="invoice_date"/>
                <filter string="Sale Order Date" name="order_date" date="sale_order_date"/>
                <separator/>
                <group expand='0' string='Group by...'>
                     <filter string='Salesperson' name="group_by_user_id" context="{'group_by': 'user_id'}"/>
                    <filter string='Contact Reference' name="group_by_contact_ref" context="{'group_by': 'contact_reference'}"/>
                    <filter string='Contact Name' name="group_by_contact_name" context="{'group_by': 'contact_name'}"/>
                    <filter string='Order Obtain' name="group_by_sales_obtain" context="{'group_by': 'sales_obtain'}"/>
                    <filter string='Order No.' name="group_by_sale_order_no" context="{'group_by': 'sale_order_no'}"/>
                    <filter string='Invoice Number' name="group_by_invoice_number" context="{'group_by': 'invoice_number'}"/>
                    <filter string='Order Date' name="group_by_so_date" context="{'group_by': 'sale_order_date'}"/>
                    <filter string='Invioce Date' name="group_by_invoice_date" context="{'group_by': 'invoice_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_history_data_form_view">
        <field name="name">sale.history.data.form.fill.view</field>
        <field name="model">sale.history.data</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false" duplicate="false">
                <sheet>
                    <group>
                        <group>
                            <field name="contact_reference"/>
                            <field name="contact_name"/>
                            <field name="customer_id" attrs="{'invisible': [('customer_id', '=', False)]}"/>
                            <field name="customer_reference_no"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="sales_obtain"/>
                            <field name="sale_order_no"/>
                            <field name="sale_order_date"/>
                            <field name="invoice_number" attrs="{'invisible': [('invoice_id', '!=', False)]}"/>
                            <field name="invoice_id" string="Invoice" attrs="{'invisible': [('invoice_id', '=', False)]}"/>
                            <field name="invoice_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="sale_lines_o2m" nolabel="1">
                            <tree editable="bottom">
                                <field name="invoice_item_no" string="Item" invisible="1"/>
                                <field name="product_name" string="Product"/>
                                <field name="name" />
                                <field name="product_uom_qty" string="Sold" sum="Total Sold"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="price_unit" string="Price" sum="Total Price" widget="monetary"/>
                                <field name="price_subtotal" string="Extended" sum="Total Extended" widget="monetary"/>
                                <field name="user_id"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_history_data_tree_view">
        <field name="name">sale.history.data.tree.fill.view</field>
        <field name="model">sale.history.data</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="contact_name"/>
                <field name="contact_reference"/>
                <field name="user_id"/>
                <field name="sales_obtain"/>
                <field name="sale_order_no"/>
                <field name="sale_order_date"/>
                <field name="invoice_number"/>
                <field name="invoice_date"/>
            </tree>
        </field>
    </record>

    <record id="action_sale_history_data_tree" model="ir.actions.act_window">
        <field name="name">Sales History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.history.data</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_so_line_id': 1}</field>
    </record>

    <menuitem action="action_sale_history_data_tree" id="menu_sale_history_data" parent="sale.sale_order_menu" sequence="21"/>

</odoo>
