<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_123">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout" page="landscape">

                    <!--                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>-->
                    <t t-set="address">
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat">
                            <t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>
                            :
                            <span t-field="o.partner_id.vat"/>
                        </p>
                    </t>
                    <t t-if="o.dest_address_id">
                        <!--                <t t-set="information_block">-->
                        <t>
                            <strong style="margin-left:50px;">Shipping address:</strong>
                            <div t-if="o.dest_address_id">
                                <div t-field="o.dest_address_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                                     name="purchase_shipping_address"/>
                            </div>
                        </t>
                        <!--                </t>-->
                    </t>
                    <div class="page">
                        <div class="oe_structure"/>

                        <h2 t-if="o.state in ['draft', 'sent', 'to approve']">Request for Quotation #
                            <span t-field="o.name"/>
                        </h2>
                        <h2 t-if="o.state in ['purchase', 'done']">Purchase Order #
                            <span t-field="o.name"/>
                        </h2>
                        <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #
                            <span t-field="o.name"/>
                        </h2>
                        <div id="po_informations" class="row mt34 mb68 custom-div">
                            <div t-if="o.user_id" class="col-auto" style="margin-right:9px;">
                                <strong>Purchase Representative:</strong>
                                <p t-field="o.user_id" class="m-0"/>
                            </div>
                            <div class="col-auto" name="div_pt">
                                <strong>Payment Terms:</strong>
                                <p t-field="o.payment_term_id"/>
                            </div>
                            <div t-if="o.state" class="col-auto" name="div_st" style="margin-left:10px;">
                                <strong>Shipment Term:</strong>
                                <p class="m-0" t-field="o.incoterm_id.code"/>
                            </div>
                            <div class="col-auto" name="div_freight" style="margin-left:10px;">
                                <strong>Shipping Point From:</strong>
                                <p class="m-0" t-field="o.shipping_point_from"/>
                            </div>
                            <div class="col-auto" name="div_spt" style="margin-left:3px;">
                                <strong>Shipping Point To:</strong>
                                <p class="m-0" t-field="o.shipping_point_to"/>
                            </div>
                            <div class="col-auto" name="div_sm" style="margin-left:3px;">
                                <strong>Shipping Method:</strong>
                                <br/>
                                <p class="m-0" t-field="o.shipping_method"/>
                            </div>
                        </div>

                        <div id="informations" class="row mt32 mb64 custom-div">
                            <div t-if="o.state" class="col-auto">
                                <strong>Order Date:</strong>
                                <p class="m-0" t-field="o.date_approve"/>
                            </div>
                            <div t-elif="o.date_order" class="col-auto">
                                <strong>Order Deadline:</strong>
                                <p t-field="o.date_order" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                   class="m-0"/>
                            </div>
                            <div t-if="o.ready_date" class="col-auto">
                                <strong>Ready Date:</strong>
                                <p class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                   t-field="o.ready_date"/>
                            </div>
                            <div t-if="o.cargo_date" class="col-auto">
                                <strong>Cargo Date:</strong>
                                <p class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                   t-field="o.cargo_date"/>
                            </div>
                            <!-- <div t-if="o.etd_date" class="col-2 bm-2" style="margin-left:3px;">
                                <strong>ETD Date:</strong>
                                <p class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                   t-field="o.etd_date"/>
                            </div>
                            <div t-if="o.eta_date" class="col-2 bm-2" style="margin-left:3px;">
                                <strong>ETA Date:</strong>
                                <p class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                   t-field="o.eta_date"/>
                            </div> -->
                            <div t-if="o.start_date" class="col-auto">
                                <strong>Shipping Window:</strong>
                                <p>
                                    <span class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                          t-field="o.start_date"/>
                                    -
                                    <span class="m-0" t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'
                                          t-field="o.end_date"/>
                                </p>
                            </div>
                            <!--                            <div t-elif="o.date_planned" class="col-3 bm-3">-->
                            <!--                                <strong>Date Req.:</strong>-->
                            <!--                                <p t-field="line.date_planned" class="m-0"-->
                            <!--                                   t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'/>-->
                            <!--                            </div>-->
                        </div>
                        <table class="table table-bordered" style="font-size:15px">
                            <thead class="table-info" style="background-color:#bee5eb;">
                                <tr>
                                    <th name="th_product_code">
                                        <strong>Product Code</strong>
                                    </th>

                                    <th name="th_description">
                                        <strong>Description</strong>
                                    </th>
                                    <!--                                                        <th name="th_taxes">-->
                                    <!--                                                            <strong>Taxes</strong>-->
                                    <!--                                                        </th>-->
                                    <th name="th_gtin">
                                        <strong>UPC</strong>
                                    </th>
                                    <th name="th_date_req" class="text-center">
                                        <strong>GTIN</strong>
                                    </th>
                                    <th name="th_case_type">
                                        <strong>Case Type</strong>
                                    </th>
                                    <th name="th_case_pack">
                                        <strong>Case Qty</strong>
                                    </th>
                                    <th name="th_quantity" class="text-right">
                                        <strong>Qty</strong>
                                    </th>
                                    <th name="th_price_unit" class="text-right">
                                        <strong>Unit Price</strong>
                                    </th>
                                    <th name="th_amount" class="text-right">
                                        <strong>Amount</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td id="product_code">
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <td id="product">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td name="upc">
                                                <span t-if="not line.package_type_barcode"
                                                      t-field="line.product_id.barcode"/>
                                                <span t-if="line.product_packaging_id.goflow_identifier_type == 'UPC'"
                                                       t-field="line.package_type_barcode"/>
                                            </td>
                                            <td name="td_gtin">
                                                <span t-if="line.product_packaging_id.goflow_identifier_type == 'GTIN'"
                                                      t-field="line.package_type_barcode"/>
                                            </td>

                                            <!--                                            <td name="td_gtin">-->
                                            <!--                                                <span t-field="line.package_type_barcode"-->
                                            <!--                                                      t-if="line.package_type_barcode"/>-->
                                            <!--                                                <span t-field="line.product_id.barcode"-->
                                            <!--                                                      t-if="not line.package_type_barcode"/>-->
                                            <!--                                            </td>-->
                                            <!--                                            <td class="text-center">-->
                                            <!--                                                <span t-field="line.date_planned"-->
                                            <!--                                                      t-options='{"widget": "date", "date_format": "yyyy-MM-dd"}'/>-->
                                            <!--                                            </td>-->
                                            <td name="td_case_pack" class="text-center">
                                                <t t-if="line.product_packaging_qty">
                                                    <span t-field="line.product_packaging_id.display_name"/>
                                                </t>
                                            </td>
                                            <td name="td_case_pack" class="text-center">
                                                <!--                                                <t t-if="line.case_pack_qty">-->
                                                <!--                                                    <span t-field="line.case_pack_qty"/>-->
                                                <!--                                                </t>-->
                                                <t t-if="line.product_packaging_qty">
                                                    <span t-esc="'%.2f' % line.product_packaging_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_qty"/>
                                                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" id="section">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99" id="note">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99" id="subtotal">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div id="total" class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-call="account.document_tax_totals"/>
                                </table>
                            </div>
                        </div>

                        <p t-field="o.notes"/>
                        <p style="font-size: 16px;">
                            <strong>Supplier agreed to all Flybar Inc. Terms and Conditions.</strong>
                        </p>
                        <p style="font-size: 16px;">
                            <strong>Flybar has the right to cancel any PO that will not be ready on the agreed date
                                above.
                            </strong>
                        </p>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>


