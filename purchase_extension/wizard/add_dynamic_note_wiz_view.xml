<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- ======== Add Dynamic Note Form view =========== -->
	<record id="add_dynamic_note_wiz_form_view" model="ir.ui.view">
		<field name="name">add.dynamic.note.wiz.form</field>
		<field name="model">add.dynamic.note.wiz</field>
		<field name="arch" type="xml">
			<form string="To add a dynamic note">
				<group>
					<group>
						<field name="add_dynamic_note_id" required="1"/>
						<field name="purchase_order_id" invisible="1"/>
					</group>
					<group>
						<field name="note" readonly="1" force_save="1"/>
					</group>
				</group>

				<footer>
					<button name="action_validate" string="Submit" type="object" />

					<button special="cancel" string="Discard" close="1" />
				</footer>
			</form>
		</field>
	</record>

</odoo>


