<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_common_invoice_allocation_form" model="ir.ui.view">
        <field name="name">common.allocation.form</field>
        <field name="model">common.allocation</field>
        <field name="arch" type="xml">
            <tree string="Allocation Screen" editable="bottom"
                  decoration-warning="move_id == False and is_outstanding_line == True"
                  decoration-info="move_id != False"
                  js_class="invoice_multi_payment_allocation_amount" create="false" delete="false">
                <field name="check_all_posted" invisible="1" />
                <field name="linked_payment_id" force_save="1" readonly="1" invisible="1"/>
                <field name="state" invisible="1" force_save="1" readonly="1"/>
                <field name="select" widget="boolean_toggle"
                       attrs="{'readonly': ['|',('state', '=', 'posted'),'|',('is_payment_line', '=', True),('check_all_posted', '=', True)]}"/>
                <field name="invoice_line_id" invisible="1" readonly="1" force_save="1"/>
                <field name="invoice_id" invisible="1" readonly="1" force_save="1"/>
                <field name="reference" readonly="1" force_save="1"/>
                <field name="date" string="Date" readonly="1" force_save="1"/>
                <field name="total_amount" readonly="1" force_save="1"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)]}"/>
                <field name="amount_residual" readonly="1" force_save="1" sum="Total Due"/>
                <field name="amount_allowed_discount" readonly="1" force_save="1"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)]}"/>
                <field name="discount_amount"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)], 'readonly': [('state', '=', 'posted')]}"
                       sum="Discount Amount"/>
                <!--<field name="sale_tax"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)], 'readonly': [('state', '=', 'posted')]}"
                       sum="Discount Amount"/>-->
                <field name="allocation" sum="Allocation Amount"
                       attrs="{'readonly': ['|',('state', '=', 'posted'),'|',('is_payment_line', '=', True),('check_all_posted', '=', True)]}"/>
                <field name="payment_difference" readonly="1" force_save="1"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)]}" sum="Payment Difference"/>
                <field name="select_all" widget="boolean_toggle"
                       attrs="{'invisible': [('is_outstanding_line', '=', True)], 'readonly': [('state', '=', 'posted')]}"
                       string="Mark As Paid"/>
                <field name="move_line_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                <field name="move_id" invisible="1" readonly="1" force_save="1"/>
                <!-- <field name="move_name"/> -->
                <field name="move_payment_id" invisible="1" readonly="1" force_save="1"/>
                <field name="move_line_id" invisible="1" readonly="1" force_save="1"/>
                <field name="is_outstanding_line" invisible="1" readonly="1" force_save="1"/>
                <field name="currency_id" invisible="1" readonly="1" force_save="1"/>
                <field name="is_payment_line" invisible="1" readonly="1" force_save="1"/>
                <field name="writeoff_account_id" optional="hide"/>
                <field name="discount_account_id" optional="hide"/>
            </tree>
        </field>
    </record>

