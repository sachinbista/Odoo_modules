    <record id="view_common_allocation_filter" model="ir.ui.view">
        <field name="name">common.allocation.filter</field>
        <field name="model">common.allocation</field>
        <field name="arch" type="xml">
            <search string="Payment Allocation">
                <field name="reference"/>
                <field name="total_amount"/>
                <field name="amount_residual"/>
                <group expand='0' string='Filters'>
                    <filter string="Outstanding" name="outstanding" domain="[('is_outstanding_line', '=', True)]"/>
                    <filter string="Bill/Invoices" name="bill_invoice" domain="[('is_outstanding_line', '=', False)]"/>
                </group>
                <group expand='0' string='Group By'>
                    <filter string='Outstanding' name="group_by_is_outstanding_lines" context="{'group_by': 'is_outstanding_line'}"/>
                    <filter string="Date" name="group_by_date"  context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_common_payment_process" model="ir.actions.act_window">
        <field name="name">Process Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">common.payment.process</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="invoice_multi_payment.model_common_allocation"/>
        <field name="binding_view_types">list</field>
    </record>


