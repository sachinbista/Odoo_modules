<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="transfer_validate_confirm_form" model="ir.ui.view">
        <field name="name">transfer.validate.confirm.view.form</field>
        <field name="model">transfer.validate.confirm</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="picking_id" invisible="1"/>
                    <field name="msg" readonly="1" colspan="2" nolabel="1"/>
                </group>
                 <footer>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                    <button string="Proceed Anyway" class="btn-primary" name="action_proceed" type="object"/>
                 </footer>
            </form>
        </field>
    </record>

</odoo>