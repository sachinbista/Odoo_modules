<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherit_confirm" model="ir.ui.view">
        <field name="name">view.stock.picking.form.inherit.confirm</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_validate'][1]" position="attributes">
                <attribute name="context">{"show_confirm": True}</attribute>
            </xpath>
            <xpath expr="//header/button[@name='button_validate'][2]" position="attributes">
                <attribute name="context">{"show_confirm": True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
