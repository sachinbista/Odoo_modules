<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='down_payments']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="auto_invoice">
                    <div class="o_setting_right_pane">
                        <label for="chatter_group_id" class="mt16"/>
                        <div class="text-muted">
                            This field is set to select the channel which will receive the message for non invoiced/paid sale order lines.
                        </div>
                        <div class="content-group">
                            <field name="chatter_group_id"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_auto_invoice" class="mt16"/>
                        <div class="text-muted">
                            Enable Auto Invoice
                        </div>
                        <div class="content-group">
                            <field name="enable_auto_invoice"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
