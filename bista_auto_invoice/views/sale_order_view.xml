<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_ribbon" model="ir.ui.view">
        <field name="name">sale.order.form.ribbon</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <field name="payment_term_ribbon" invisible="1"/>
                <div  attrs="{'invisible': [('payment_term_ribbon', '=', False)]}"
                     class="alert alert-danger text-center o_form_header" role="status">
                    <strong>
                        <field name="ribbon_text"/>
                    </strong>
                </div>
            </xpath>
        </field>
    </record>
</odoo>