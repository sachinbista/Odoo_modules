<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_packaging_tree_view_inherit11" model="ir.ui.view">
        <field name="name">product.packaging.tree.view2</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="packaging_length" optional="hide"/>
                <field name="width" optional="hide"/>
                <field name="height" optional="hide"/>
                <field name="weight" optional="hide"/>
                <field name="volume" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <group name="qty" position="after">
                <group name="dimensions" string="Dimensions">
                    <group id="group_packaging_length">
                        <label for="packaging_length"/>
                        <div class="o_row">
                            <field name="packaging_length"/>
                            <field name="length_uom_name"/>
                        </div>
                    </group>
                    <group id="group_width">
                        <label for="width"/>
                        <div class="o_row">
                            <field name="width"/>
                            <field name="length_uom_name"/>
                        </div>
                    </group>
                    <group id="group_height">
                        <label for="height"/>
                        <div class="o_row">
                            <field name="height"/>
                            <field name="length_uom_name"/>
                        </div>
                    </group>
                </group>
                <group string="Volumes">
                    <group id="group_weight">
                        <label for="weight"/>
                        <div class="o_row" name="weight">
                            <field name="weight"/>
                            <field name="weight_uom_name"/>
                        </div>
                    </group>
                    <group id="group_volume">
                        <label for="volume"/>
                        <div class="o_row">
                            <field name="volume"/>
                            <field name="volume_uom_name"/>
                        </div>
                    </group>
                </group>
                <group string="Units of Measure">
                    <field name="volume_uom_id"/>
                    <field name="length_uom_id"/>
                    <field name="weight_uom_id"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
